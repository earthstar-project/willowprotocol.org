"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\" page-range-format=\"expanded\" default-locale=\"en-US\">\n  <info>\n    <title>SCIENCE CHINA Earth Sciences</title>\n    <id>http://www.zotero.org/styles/science-china-earth-sciences</id>\n    <link href=\"http://www.zotero.org/styles/science-china-earth-sciences\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/science-china-life-sciences\" rel=\"template\"/>\n    <link href=\"https://www.springer.com/earth+sciences+and+geography/journal/11430\" rel=\"documentation\"/>\n    <author>\n      <name>Patrick O'Brien, PhD</name>\n      <email>obrienpat86@gmail.com</email>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"generic-base\"/>\n    <issn>1674-7313</issn>\n    <eissn>1869-1897</eissn>\n    <summary>This style is based on the Springer Vancouver (author-date) style.</summary>\n    <updated>2016-12-27T05:30:16+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"en\">\n    <date form=\"text\" delimiter=\" \">\n      <date-part name=\"year\"/>\n      <date-part name=\"month\" form=\"short\" strip-periods=\"true\"/>\n      <date-part name=\"day\"/>\n    </date>\n    <terms>\n      <term name=\"retrieved\">available</term>\n      <term name=\"section\" form=\"short\">sect.</term>\n    </terms>\n  </locale>\n  <macro name=\"author-short-in-citation\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"text\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-in-citation\">\n    <names variable=\"author\">\n      <name sort-separator=\" \" initialize-with=\"\" name-as-sort-order=\"all\" delimiter=\", \" delimiter-precedes-last=\"always\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"year-in-citation\">\n    <date variable=\"issued\">\n      <date-part name=\"year\"/>\n    </date>\n  </macro>\n  <macro name=\"issued-sort\">\n    <choose>\n      <if type=\"article-journal bill book chapter graphic legal_case legislation motion_picture paper-conference report song\" match=\"none\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n          <date-part name=\"month\"/>\n          <date-part name=\"day\"/>\n        </date>\n      </if>\n      <else>\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name delimiter-precedes-last=\"always\" initialize-with=\".\" name-as-sort-order=\"all\" sort-separator=\", \"/>\n      <label prefix=\", \"/>\n      <substitute>\n        <names variable=\"editor\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor\">\n    <group delimiter=\" \">\n      <choose>\n        <if type=\"chapter paper-conference\" match=\"any\">\n          <text term=\"in\" text-case=\"capitalize-first\"/>\n          <text macro=\"container-title\"/>\n          <names variable=\"editor\" suffix=\".\">\n            <name delimiter-precedes-last=\"always\" initialize-with=\".\" sort-separator=\" \"/>\n            <label form=\"short\" prefix=\", \"/>\n          </names>\n        </if>\n      </choose>\n    </group>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\": \" suffix=\",\">\n      <choose>\n        <if type=\"thesis\">\n          <text variable=\"publisher-place\" prefix=\"[\" suffix=\"]\"/>\n        </if>\n        <else>\n          <text variable=\"publisher-place\" prefix=\"(\"/>\n        </else>\n      </choose>\n      <text variable=\"publisher\" suffix=\")\"/>\n    </group>\n  </macro>\n  <macro name=\"container-title\">\n    <choose>\n      <if type=\"article-journal article-magazine chapter paper-conference article-newspaper\" match=\"any\">\n        <text variable=\"container-title\" form=\"short\" suffix=\", \"/>\n        <text macro=\"edition\" prefix=\" \"/>\n      </if>\n      <else-if type=\"bill legislation\" match=\"any\">\n        <group delimiter=\", \">\n          <group delimiter=\". \">\n            <text variable=\"container-title\" form=\"short\"/>\n            <group delimiter=\" \">\n              <text term=\"section\" form=\"short\" text-case=\"capitalize-first\"/>\n              <text variable=\"section\"/>\n            </group>\n          </group>\n          <text variable=\"number\"/>\n        </group>\n      </else-if>\n      <else>\n        <text variable=\"container-title\" suffix=\".\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <text variable=\"title\"/>\n    <choose>\n      <if type=\"article-journal article-magazine chapter paper-conference article-newspaper\" match=\"none\">\n        <choose>\n          <if variable=\"URL\">\n            <text term=\"internet\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n          </if>\n        </choose>\n        <text macro=\"edition\" prefix=\". \"/>\n      </if>\n    </choose>\n    <choose>\n      <if type=\"thesis\">\n        <text variable=\"genre\" prefix=\" \"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\" suffix=\".\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"pages\">\n    <choose>\n      <if type=\"article-journal article-magazine article-newspaper\" match=\"any\">\n        <text variable=\"page\" prefix=\", \"/>\n      </if>\n      <else>\n        <group prefix=\" \" delimiter=\" \">\n          <label variable=\"page\" form=\"short\"/>\n          <text variable=\"page\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"journal-location\">\n    <choose>\n      <if type=\"article-journal article-magazine\" match=\"any\">\n        <text variable=\"volume\"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"report-details\">\n    <choose>\n      <if type=\"report\">\n        <text variable=\"number\" prefix=\"Report No.: \"/>\n      </if>\n    </choose>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\">\n    <sort>\n      <key macro=\"author-in-citation\"/>\n      <key variable=\"issued\" sort=\"descending\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\" \">\n        <text macro=\"author-short-in-citation\"/>\n        <text macro=\"year-in-citation\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography>\n    <sort>\n      <key macro=\"author-in-citation\"/>\n      <key macro=\"issued-sort\" sort=\"ascending\"/>\n    </sort>\n    <layout>\n      <group delimiter=\". \" suffix=\" \">\n        <text macro=\"author\"/>\n        <text macro=\"year-in-citation\" prefix=\" \" suffix=\"\"/>\n        <text macro=\"title\"/>\n      </group>\n      <group delimiter=\" \" suffix=\". \">\n        <text macro=\"editor\"/>\n        <text macro=\"publisher\"/>\n        <group>\n          <text macro=\"journal-location\"/>\n          <text macro=\"pages\"/>\n        </group>\n      </group>\n      <text macro=\"report-details\" suffix=\". \"/>\n    </layout>\n  </bibliography>\n</style>\n"