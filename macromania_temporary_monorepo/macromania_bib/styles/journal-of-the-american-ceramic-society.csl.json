"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\" default-locale=\"en-US\">\n  <info>\n    <title>Journal of the American Ceramic Society</title>\n    <id>http://www.zotero.org/styles/journal-of-the-american-ceramic-society</id>\n    <link href=\"http://www.zotero.org/styles/journal-of-the-american-ceramic-society\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/american-medical-association\" rel=\"template\"/>\n    <link href=\"https://ceramics.onlinelibrary.wiley.com/hub/authors_instructions\" rel=\"documentation\"/>\n    <author>\n      <name>Sebastian Karcher</name>\n    </author>\n    <contributor>\n      <name>Guillaume Durand</name>\n    </contributor>\n    <contributor>\n      <name>Patrick O'Brien</name>\n    </contributor>\n    <category citation-format=\"numeric\"/>\n    <category field=\"engineering\"/>\n    <issn>0002-7820</issn>\n    <eissn>1551-2916</eissn>\n    <updated>2019-07-10T09:43:23+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name sort-separator=\" \" initialize-with=\"\" name-as-sort-order=\"all\" delimiter=\", \" delimiter-precedes-last=\"always\"/>\n      <label form=\"long\" prefix=\", \"/>\n      <et-al font-style=\"italic\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\">\n      <name sort-separator=\" \" name-as-sort-order=\"all\" delimiter=\", \" delimiter-precedes-last=\"always\" initialize-with=\"\"/>\n      <label form=\"short\" prefix=\", \"/>\n    </names>\n  </macro>\n  <macro name=\"year-date\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\": \">\n      <text variable=\"publisher-place\"/>\n      <group delimiter=\"; \">\n        <text variable=\"publisher\" form=\"long\"/>\n        <text macro=\"year-date\"/>\n      </group>\n    </group>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"article-journal chapter paper-conference article-magazine thesis\" match=\"any\">\n        <text variable=\"title\" form=\"long\" quotes=\"false\"/>\n      </if>\n      <else>\n        <text variable=\"title\" form=\"long\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"access\">\n    <choose>\n      <if variable=\"DOI\">\n        <text variable=\"DOI\" prefix=\"https://doi.org/\"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"volume\">\n    <group delimiter=\" \">\n      <label text-case=\"capitalize-first\" variable=\"volume\" form=\"short\"/>\n      <number variable=\"volume\"/>\n    </group>\n  </macro>\n  <citation collapse=\"citation-number\">\n    <sort>\n      <key variable=\"citation-number\"/>\n    </sort>\n    <layout vertical-align=\"sup\" delimiter=\", \">\n      <text variable=\"citation-number\"/>\n    </layout>\n  </citation>\n  <bibliography second-field-align=\"flush\" entry-spacing=\"0\" et-al-min=\"7\" et-al-use-first=\"3\">\n    <layout>\n      <text variable=\"citation-number\" suffix=\". \"/>\n      <group delimiter=\". \" suffix=\". \">\n        <text macro=\"author\"/>\n        <group delimiter=\". \">\n          <text macro=\"title\"/>\n          <text macro=\"edition\"/>\n        </group>\n      </group>\n      <choose>\n        <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n          <group delimiter=\". \">\n            <text macro=\"publisher\"/>\n          </group>\n        </if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <group delimiter=\". \">\n            <group delimiter=\": \">\n              <text term=\"in\" text-case=\"capitalize-first\" prefix=\" \"/>\n              <text macro=\"editor\"/>\n            </group>\n            <group delimiter=\", \">\n              <text variable=\"container-title\" form=\"short\" font-style=\"italic\"/>\n              <text macro=\"edition\"/>\n            </group>\n            <text macro=\"volume\"/>\n            <text macro=\"publisher\"/>\n          </group>\n          <group delimiter=\" \">\n            <text variable=\"page\" prefix=\":\" suffix=\".\"/>\n          </group>\n        </else-if>\n        <else-if type=\"patent\">\n          <text variable=\"authority\" suffix=\" \"/>\n          <group delimiter=\". \">\n            <text variable=\"number\" prefix=\" \"/>\n            <text macro=\"year-date\" suffix=\".\"/>\n          </group>\n        </else-if>\n        <else-if type=\"thesis\">\n          <group delimiter=\". \">\n            <group delimiter=\"; \">\n              <text variable=\"genre\"/>\n              <text variable=\"publisher\"/>\n              <text variable=\"publisher-place\"/>\n              <text macro=\"year-date\"/>\n            </group>\n          </group>\n        </else-if>\n        <else>\n          <group delimiter=\". \" suffix=\".\">\n            <text variable=\"container-title\" form=\"short\" strip-periods=\"true\" font-style=\"italic\" prefix=\" \" suffix=\".\"/>\n            <group delimiter=\";\">\n              <text macro=\"year-date\" prefix=\" \"/>\n              <group delimiter=\":\">\n                <group>\n                  <text variable=\"volume\" font-weight=\"normal\"/>\n                  <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n                </group>\n                <text variable=\"page\" suffix=\".\"/>\n              </group>\n            </group>\n          </group>\n        </else>\n      </choose>\n      <text macro=\"access\" prefix=\" \"/>\n    </layout>\n  </bibliography>\n</style>\n"