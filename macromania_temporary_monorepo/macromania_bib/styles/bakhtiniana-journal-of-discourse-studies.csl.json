"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" version=\"1.0\" class=\"in-text\" demote-non-dropping-particle=\"never\" default-locale=\"en-US\">\n  <info>\n    <title>Bakhtiniana: Journal of Discourse Studies</title>\n    <id>http://www.zotero.org/styles/bakhtiniana-journal-of-discourse-studies</id>\n    <link href=\"http://www.zotero.org/styles/bakhtiniana-journal-of-discourse-studies\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/associacao-brasileira-de-normas-tecnicas-usp-fmvz\" rel=\"template\"/>\n    <link href=\"https://revistas.pucsp.br/index.php/bakhtiniana/about/submissions#authorGuidelines\" rel=\"documentation\"/>\n    <author>\n      <name>Patrick O'Brien</name>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"humanities\"/>\n    <issn>2176-4573</issn>\n    <updated>2021-06-30T10:12:03+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"en\">\n    <terms>\n      <term name=\"volume\" form=\"short\">v.</term>\n      <term name=\"number\" form=\"short\">n.</term>\n      <term name=\"accessed\">access on</term>\n    </terms>\n  </locale>\n  <macro name=\"container-contributors\">\n    <names variable=\"container-author\" delimiter=\", \">\n      <label form=\"verb\" plural=\"never\" text-case=\"capitalize-first\"/>\n      <name delimiter=\"; \" prefix=\" \" and=\"text\">\n        <name-part name=\"family\"/>\n        <name-part name=\"given\"/>\n      </name>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"collection-editor\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"secondary-contributors\">\n    <choose>\n      <if type=\"chapter\" match=\"none\">\n        <names variable=\"editor\" delimiter=\"; \" prefix=\" (\" suffix=\")\">\n          <name initialize-with=\". \" delimiter=\", \"/>\n          <label form=\"short\" prefix=\", \" text-case=\"capitalize-first\" suffix=\".\"/>\n        </names>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"translator\">\n    <text value=\"Traducao \"/>\n    <names variable=\"translator\" delimiter=\"; \">\n      <name delimiter=\"; \" sort-separator=\" \" delimiter-precedes-last=\"always\">\n        <name-part name=\"given\" text-case=\"capitalize-first\"/>\n        <name-part name=\"family\" text-case=\"capitalize-first\"/>\n      </name>\n    </names>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name delimiter=\"; \" delimiter-precedes-last=\"always\" initialize-with=\". \" name-as-sort-order=\"all\">\n        <name-part name=\"family\" text-case=\"uppercase\"/>\n        <name-part name=\"given\"/>\n      </name>\n      <label form=\"short\" plural=\"never\" text-case=\"lowercase\" prefix=\" (\" suffix=\".)\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text macro=\"title\" text-case=\"uppercase\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" name-as-sort-order=\"all\" sort-separator=\", \" initialize-with=\". \" delimiter=\"; \" delimiter-precedes-last=\"never\">\n        <name-part name=\"family\" text-case=\"uppercase\"/>\n        <name-part name=\"given\" text-case=\"uppercase\"/>\n      </name>\n      <et-al font-style=\"italic\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <choose>\n          <if type=\"book\">\n            <text variable=\"title\" form=\"short\"/>\n          </if>\n          <else>\n            <text variable=\"title\" form=\"short\" quotes=\"true\"/>\n          </else>\n        </choose>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <group delimiter=\". \">\n      <group delimiter=\": \">\n        <text term=\"available at\" text-case=\"capitalize-first\"/>\n        <text variable=\"URL\"/>\n      </group>\n      <group delimiter=\": \">\n        <text term=\"accessed\" text-case=\"capitalize-first\"/>\n        <date variable=\"accessed\">\n          <date-part name=\"day\" suffix=\" \"/>\n          <date-part name=\"month\" text-case=\"capitalize-first\" suffix=\" \"/>\n          <date-part name=\"year\"/>\n        </date>\n      </group>\n    </group>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"chapter bill\" match=\"any\">\n        <text variable=\"title\"/>\n      </if>\n      <else-if type=\"book thesis\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </else-if>\n      <else-if type=\"article-journal\" match=\"any\">\n        <text variable=\"title\" text-case=\"title\"/>\n      </else-if>\n      <else-if type=\"article-newspaper article-magazine\" match=\"any\">\n        <text variable=\"title\" text-case=\"capitalize-first\"/>\n      </else-if>\n      <else-if type=\"paper-conference\" match=\"any\">\n        <text variable=\"title\" suffix=\". \"/>\n      </else-if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"container-title\">\n    <choose>\n      <if type=\"paper-conference\" match=\"any\">\n        <text variable=\"container-title\" prefix=\" \" suffix=\", \"/>\n      </if>\n      <else>\n        <group delimiter=\", \">\n          <text variable=\"container-title\" font-style=\"italic\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\", \">\n      <group delimiter=\": \">\n        <text variable=\"publisher-place\"/>\n        <text variable=\"publisher\"/>\n      </group>\n      <text macro=\"issued\"/>\n    </group>\n  </macro>\n  <macro name=\"event\">\n    <choose>\n      <if variable=\"event\">\n        <choose>\n          <if variable=\"genre\" match=\"none\">\n            <text term=\"in\" text-case=\"capitalize-first\" suffix=\": \"/>\n            <text variable=\"event\" text-case=\"uppercase\"/>\n          </if>\n          <else>\n            <group delimiter=\" \">\n              <text variable=\"genre\" text-case=\"capitalize-first\"/>\n              <text term=\"presented at\"/>\n              <text variable=\"event\"/>\n            </group>\n          </else>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"issued\">\n    <group>\n      <choose>\n        <if type=\"book chapter\" match=\"none\">\n          <date variable=\"issued\">\n            <date-part name=\"day\" suffix=\" \"/>\n            <date-part name=\"month\" form=\"short\" suffix=\" \"/>\n          </date>\n        </if>\n      </choose>\n      <date variable=\"issued\">\n        <date-part name=\"year\"/>\n      </date>\n    </group>\n  </macro>\n  <macro name=\"issued-year\">\n    <choose>\n      <if variable=\"issued\" match=\"all\">\n        <date date-parts=\"year\" form=\"numeric\" variable=\"issued\" prefix=\" \">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text value=\"[s.d.]\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if type=\"book chapter\" match=\"any\">\n        <choose>\n          <if is-numeric=\"edition\">\n            <group delimiter=\" \">\n              <number variable=\"edition\" form=\"numeric\" suffix=\".\"/>\n              <text term=\"edition\" form=\"short\" suffix=\".\"/>\n            </group>\n          </if>\n          <else>\n            <text variable=\"edition\" suffix=\" ed.\"/>\n          </else>\n        </choose>\n      </if>\n      <else-if type=\"paper-conference\" match=\"any\"/>\n    </choose>\n  </macro>\n  <macro name=\"locators\">\n    <choose>\n      <if type=\"bill\">\n        <group prefix=\". \" delimiter=\", \">\n          <date variable=\"issued\">\n            <date-part name=\"day\"/>\n            <date-part prefix=\" \" name=\"month\" form=\"short\"/>\n            <date-part prefix=\" \" name=\"year\"/>\n          </date>\n          <text variable=\"section\" prefix=\"Sec. \"/>\n          <text variable=\"page\" prefix=\"p. \" suffix=\".\"/>\n        </group>\n      </if>\n      <else-if match=\"any\" type=\"article-journal article-magazine article-newspaper\">\n        <group delimiter=\", \">\n          <group delimiter=\", \">\n            <group delimiter=\" \">\n              <label variable=\"volume\" form=\"short\"/>\n              <text variable=\"volume\"/>\n            </group>\n            <group delimiter=\" \">\n              <label variable=\"issue\" form=\"short\"/>\n              <text variable=\"issue\"/>\n            </group>\n          </group>\n          <group>\n            <label variable=\"page\" form=\"short\"/>\n            <text variable=\"page\"/>\n          </group>\n        </group>\n      </else-if>\n      <else-if match=\"any\" type=\"book\">\n        <group delimiter=\", \">\n          <group>\n            <text variable=\"volume\" prefix=\"v. \"/>\n            <text variable=\"page\" suffix=\" p.\"/>\n          </group>\n        </group>\n      </else-if>\n      <else-if type=\"chapter\" match=\"any\">\n        <group>\n          <label variable=\"page\" form=\"short\"/>\n          <text variable=\"page\"/>\n        </group>\n      </else-if>\n      <else-if type=\"thesis\" match=\"any\">\n        <group delimiter=\" \">\n          <text variable=\"number-of-pages\" suffix=\" f.\"/>\n          <label variable=\"number-of-pages\" form=\"short\"/>\n        </group>\n      </else-if>\n      <else-if type=\"paper-conference\" match=\"any\"/>\n    </choose>\n  </macro>\n  <macro name=\"collection-title\">\n    <text variable=\"collection-title\"/>\n    <text variable=\"collection-number\" prefix=\" \"/>\n  </macro>\n  <macro name=\"genre\">\n    <text variable=\"issue\"/>\n  </macro>\n  <macro name=\"citation-locator\">\n    <group>\n      <label variable=\"locator\" form=\"short\"/>\n      <text variable=\"locator\"/>\n    </group>\n  </macro>\n  <macro name=\"place\">\n    <choose>\n      <if match=\"any\" variable=\"publisher-place\">\n        <text variable=\"publisher-place\"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"archive\">\n    <group>\n      <text variable=\"archive\" prefix=\" \"/>\n    </group>\n  </macro>\n  <citation et-al-min=\"4\" et-al-use-first=\"1\" collapse=\"year\" disambiguate-add-year-suffix=\"true\">\n    <sort>\n      <key macro=\"issued-year\"/>\n      <key macro=\"author\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group>\n        <text suffix=\", \" macro=\"author-short\"/>\n        <date date-parts=\"year\" form=\"text\" variable=\"issued\"/>\n        <text prefix=\", \" macro=\"citation-locator\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography et-al-min=\"4\" et-al-use-first=\"1\">\n    <sort>\n      <key macro=\"author\"/>\n      <key variable=\"issued\"/>\n    </sort>\n    <layout>\n      <choose>\n        <if type=\"bill\">\n          <group>\n            <text macro=\"author\" text-case=\"uppercase\" suffix=\". \"/>\n            <text variable=\"number\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text variable=\"references\" font-weight=\"bold\"/>\n            <text variable=\"note\"/>\n            <text macro=\"locators\" suffix=\". \"/>\n          </group>\n        </if>\n        <else-if type=\"map\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\", \"/>\n            <text macro=\"issued\"/>\n            <text variable=\"note\" suffix=\". \"/>\n          </group>\n        </else-if>\n        <else-if type=\"book\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text macro=\"translator\" suffix=\". \"/>\n            <text macro=\"edition\" suffix=\". \"/>\n            <text macro=\"publisher\"/>\n            <text macro=\"locators\"/>\n          </group>\n        </else-if>\n        <else-if type=\"chapter\">\n          <group delimiter=\". \">\n            <text macro=\"author\"/>\n            <text macro=\"title\"/>\n            <text macro=\"secondary-contributors\"/>\n            <group delimiter=\": \">\n              <text term=\"in\" text-case=\"capitalize-first\" font-style=\"italic\"/>\n              <text macro=\"container-title\"/>\n            </group>\n            <text macro=\"container-contributors\"/>\n            <text variable=\"collection-title\"/>\n            <text macro=\"translator\"/>\n            <text macro=\"edition\"/>\n            <text macro=\"publisher\"/>\n            <text macro=\"locators\" suffix=\". \"/>\n          </group>\n        </else-if>\n        <else-if type=\"article-newspaper article-magazine article-journal\" match=\"any\">\n          <group delimiter=\". \">\n            <text macro=\"author\"/>\n            <text macro=\"title\"/>\n            <text macro=\"container-title\"/>\n            <text variable=\"collection-title\"/>\n            <text macro=\"edition\"/>\n            <text macro=\"locators\"/>\n            <text macro=\"issued\"/>\n            <text macro=\"access\"/>\n          </group>\n        </else-if>\n        <else-if type=\"thesis\">\n          <group delimiter=\". \">\n            <text macro=\"author\"/>\n            <text macro=\"title\"/>\n            <text macro=\"issued-year\"/>\n            <text macro=\"locators\"/>\n            <group delimiter=\" &#8211; \">\n              <text variable=\"genre\" prefix=\"(\" suffix=\")\"/>\n              <group delimiter=\", \">\n                <text variable=\"publisher\"/>\n                <text variable=\"publisher-place\"/>\n                <text macro=\"issued-year\"/>\n              </group>\n            </group>\n          </group>\n        </else-if>\n        <else-if type=\"manuscript\">\n          <group delimiter=\". \">\n            <text macro=\"author\"/>\n            <text macro=\"title\"/>\n            <text macro=\"edition\"/>\n            <text macro=\"place\"/>\n            <text macro=\"issued\"/>\n            <text macro=\"access\"/>\n            <text macro=\"archive\"/>\n          </group>\n        </else-if>\n        <else-if type=\"webpage post post-weblog\" match=\"any\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text macro=\"genre\" suffix=\". \"/>\n            <text macro=\"access\" suffix=\". \"/>\n          </group>\n        </else-if>\n        <else-if type=\"report\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\"/>\n            <text macro=\"container-contributors\"/>\n            <text macro=\"secondary-contributors\"/>\n            <text macro=\"container-title\"/>\n            <text variable=\"collection-title\" prefix=\": \"/>\n            <text macro=\"locators\"/>\n            <text macro=\"event\"/>\n            <text macro=\"publisher\" prefix=\". \" suffix=\". \"/>\n            <text macro=\"access\" suffix=\".\"/>\n          </group>\n        </else-if>\n        <else-if type=\"entry-dictionary\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\"/>\n            <text macro=\"container-contributors\"/>\n            <text macro=\"secondary-contributors\"/>\n            <text macro=\"container-title\"/>\n            <text variable=\"collection-title\" prefix=\": \" suffix=\". \"/>\n            <text macro=\"locators\"/>\n            <text macro=\"event\"/>\n            <text macro=\"publisher\" prefix=\". \" suffix=\". \"/>\n            <text macro=\"collection-title\" prefix=\"(Texto para discussao, n. \" suffix=\").\"/>\n            <text macro=\"access\"/>\n          </group>\n        </else-if>\n        <else-if type=\"entry-encyclopedia\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\"/>\n            <text variable=\"publisher-place\" prefix=\". \" suffix=\": \"/>\n            <text variable=\"publisher\" suffix=\", \"/>\n            <text macro=\"issued\" prefix=\", \" suffix=\". (Nota t?cnica).\"/>\n          </group>\n        </else-if>\n        <else-if type=\"paper-conference\">\n          <text macro=\"author\" text-case=\"capitalize-all\" suffix=\". \"/>\n          <text macro=\"title\"/>\n          <text macro=\"container-contributors\"/>\n          <text macro=\"secondary-contributors\"/>\n          <text term=\"in\" text-case=\"capitalize-first\" prefix=\" \" suffix=\": \"/>\n          <text macro=\"container-title\"/>\n          <text variable=\"edition\" suffix=\"., \"/>\n          <text variable=\"issue\" suffix=\", \"/>\n          <text variable=\"publisher-place\" suffix=\". \"/>\n          <text value=\"Anais\" font-weight=\"bold\"/>\n          <text value=\"...\"/>\n          <group delimiter=\". \" prefix=\". \" suffix=\". \">\n            <text macro=\"event\"/>\n          </group>\n          <text variable=\"publisher-place\" prefix=\" \" suffix=\": \"/>\n          <text variable=\"publisher\" suffix=\", \"/>\n          <text macro=\"issued\"/>\n          <text macro=\"access\"/>\n          <text macro=\"locators\"/>\n        </else-if>\n        <else>\n          <text macro=\"author\" suffix=\". \"/>\n          <text macro=\"title\"/>\n          <text macro=\"container-contributors\"/>\n          <text macro=\"secondary-contributors\"/>\n          <text macro=\"container-title\"/>\n          <text variable=\"collection-title\" prefix=\": \" suffix=\".\"/>\n          <text macro=\"locators\"/>\n          <group delimiter=\". \" prefix=\". \" suffix=\". \">\n            <text macro=\"event\"/>\n          </group>\n          <text variable=\"publisher-place\"/>\n          <text variable=\"publisher\" suffix=\", \"/>\n          <text macro=\"issued\" prefix=\", \" suffix=\". \"/>\n          <text macro=\"access\"/>\n        </else>\n      </choose>\n    </layout>\n  </bibliography>\n</style>\n"