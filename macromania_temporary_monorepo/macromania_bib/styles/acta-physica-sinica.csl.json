"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" version=\"1.0\" class=\"in-text\" names-delimiter=\". \" name-as-sort-order=\"all\" sort-separator=\" \" demote-non-dropping-particle=\"never\" initialize-with=\" \" initialize-with-hyphen=\"false\" page-range-format=\"expanded\" default-locale=\"zh-CN\">\n  <info>\n    <title>Acta Physica Sinica (物理学报)</title>\n    <!-- Zotero仓库版-->\n    <id>http://www.zotero.org/styles/acta-physica-sinica</id>\n    <link href=\"http://www.zotero.org/styles/acta-physica-sinica\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/china-national-standard-gb-t-7714-2015-numeric\" rel=\"template\"/>\n    <link href=\"https://wulixb.iphy.ac.cn/news/tougaoxuzhi.htm\" rel=\"documentation\"/>\n    <author>\n      <name>牛耕田</name>\n      <email>buffalo_d@163.com</email>\n    </author>\n    <contributor>\n      <name>Zeping Lee</name>\n      <email>zepinglee@gmail.com</email>\n    </contributor>\n    <contributor>\n      <name>韩小土</name>\n      <email>redleafnew@163.com</email>\n    </contributor>\n    <category citation-format=\"numeric\"/>\n    <category field=\"generic-base\"/>\n    <summary>The Chinese GB/T 7714-2015 numeric style</summary>\n    <updated>2022-04-06T20:34:00+08:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"zh-CN\">\n    <date form=\"text\">\n      <date-part name=\"year\" suffix=\"年\" range-delimiter=\"&#8212;\"/>\n      <date-part name=\"month\" form=\"numeric\" suffix=\"月\" range-delimiter=\"&#8212;\"/>\n      <date-part name=\"day\" suffix=\"日\" range-delimiter=\"&#8212;\"/>\n    </date>\n    <terms>\n      <term name=\"edition\" form=\"short\">版</term>\n      <term name=\"open-quote\">“</term>\n      <term name=\"close-quote\">”</term>\n      <term name=\"open-inner-quote\">‘</term>\n      <term name=\"close-inner-quote\">’</term>\n      <term name=\"translator\" form=\"short\"/>\n    </terms>\n  </locale>\n  <locale>\n    <date form=\"numeric\">\n      <date-part name=\"year\" range-delimiter=\"/\"/>\n      <date-part name=\"month\" form=\"numeric-leading-zeros\" prefix=\"-\" range-delimiter=\"/\"/>\n      <date-part name=\"day\" form=\"numeric-leading-zeros\" prefix=\"-\" range-delimiter=\"/\"/>\n    </date>\n    <terms>\n      <term name=\"page-range-delimiter\">&#8211;</term>\n      <!-- 页码间隔为\"&#8211;\" -->\n    </terms>\n  </locale>\n  <!-- 引用日期 -->\n  <macro name=\"accessed-date\">\n    <date variable=\"accessed\" form=\"numeric\" prefix=\"[\" suffix=\"]\"/>\n  </macro>\n  <!-- 主要责任者 -->\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name>\n        <name-part name=\"family\"/>\n        <name-part name=\"given\"/>\n      </name>\n      <substitute>\n        <names variable=\"composer\"/>\n        <names variable=\"illustrator\"/>\n        <names variable=\"director\"/>\n        <choose>\n          <if variable=\"container-title\" match=\"none\">\n            <names variable=\"editor\"/>\n          </if>\n        </choose>\n      </substitute>\n    </names>\n  </macro>\n  <!-- 书籍的卷号（“第 x 卷”或“第 x 册”） -->\n  <macro name=\"book-volume\">\n    <choose>\n      <if type=\"article article-journal article-magazine article-newspaper periodical\" match=\"none\">\n        <choose>\n          <if is-numeric=\"volume\">\n            <group delimiter=\" \">\n              <label variable=\"volume\" form=\"short\" text-case=\"capitalize-first\"/>\n              <text variable=\"volume\"/>\n            </group>\n          </if>\n          <else>\n            <text variable=\"volume\"/>\n          </else>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <!-- 专著题名 -->\n  <macro name=\"container-title\">\n    <group delimiter=\", \">\n      <group delimiter=\": \">\n        <choose>\n          <if variable=\"container-title\">\n            <text variable=\"container-title\" font-style=\"italic\" form=\"short\"/>\n          </if>\n          <else>\n            <text variable=\"event\"/>\n          </else>\n        </choose>\n        <text macro=\"book-volume\"/>\n      </group>\n      <choose>\n        <if variable=\"event-date\">\n          <date variable=\"event-date\" form=\"text\"/>\n          <text variable=\"event-place\"/>\n        </if>\n      </choose>\n    </group>\n  </macro>\n  <!-- 版本项 -->\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <!-- 电子资源的更新或修改日期 -->\n  <macro name=\"issued-date\">\n    <date variable=\"issued\" form=\"numeric\"/>\n  </macro>\n  <!-- 出版年 -->\n  <macro name=\"issued-year\">\n    <choose>\n      <if is-uncertain-date=\"issued\">\n        <date variable=\"issued\" prefix=\"[\" suffix=\"]\">\n          <date-part name=\"year\" range-delimiter=\"-\"/>\n        </date>\n      </if>\n      <else>\n        <date variable=\"issued\">\n          <date-part name=\"year\" range-delimiter=\"-\"/>\n        </date>\n      </else>\n    </choose>\n  </macro>\n  <!-- 专著的出版项 -->\n  <macro name=\"publishing\">\n    <group delimiter=\": \">\n      <group delimiter=\", \">\n        <group delimiter=\": \">\n          <text variable=\"publisher-place\"/>\n          <text variable=\"publisher\"/>\n        </group>\n      </group>\n      <text variable=\"page\"/>\n    </group>\n    <choose>\n      <!-- 纯电子资源显示“更新或修改日期” -->\n      <if variable=\"publisher page\" type=\"book chapter paper-conference thesis\" match=\"none\">\n        <choose>\n          <if variable=\"URL DOI\" match=\"any\">\n            <text macro=\"issued-date\" prefix=\"(\" suffix=\")\"/>\n          </if>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <!-- 其他责任者 -->\n  <macro name=\"secondary-contributor\">\n    <names variable=\"translator\">\n      <name>\n        <name-part name=\"family\" text-case=\"uppercase\"/>\n        <name-part name=\"given\"/>\n      </name>\n      <label form=\"short\" prefix=\", \"/>\n    </names>\n  </macro>\n  <!-- 连续出版物中的析出文献的出处项（年、卷、期等信息） -->\n  <macro name=\"periodical-publishing\">\n    <group delimiter=\" \">\n      <text macro=\"issued-year\"/>\n      <text macro=\"container-title\" text-case=\"title\"/>\n      <choose>\n        <if type=\"article-newspaper\">\n          <text macro=\"issued-date\"/>\n        </if>\n      </choose>\n      <text variable=\"volume\" font-weight=\"bold\"/>\n      <text variable=\"page-first\"/>\n      <!-- 只显示首页 如果显示范围为page -->\n    </group>\n  </macro>\n  <!-- 连续出版物的年卷期 -->\n  <macro name=\"year-volume-issue\">\n    <group>\n      <group delimiter=\", \">\n        <text macro=\"issued-year\"/>\n        <text variable=\"volume\"/>\n      </group>\n      <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n    </group>\n  </macro>\n  <!-- 专著、译著 -->\n  <macro name=\"monograph-layout\">\n    <!-- 如果是中文，在original-title有内容，添加original-title中的内容，即翻译的英文格式 -->\n    <choose>\n      <if variable=\"original-title\">\n        <text variable=\"original-title\" suffix=\" (in Chinese)\"/>\n        <group delimiter=\" \" prefix=\" [\" suffix=\"]\">\n          <!-- 如果是中文，在original-title有内容，添加original-title中的内容，即翻译的英文格式 -->\n          <choose>\n            <if variable=\"translator\">\n              <text macro=\"author\" suffix=\"著\"/>\n              <text macro=\"secondary-contributor\" prefix=\"(\" suffix=\"译)\"/>\n            </if>\n            <else>\n              <text macro=\"author\"/>\n              <text macro=\"secondary-contributor\"/>\n            </else>\n          </choose>\n          <text macro=\"issued-year\"/>\n          <text variable=\"title\"/>\n          <text macro=\"edition\"/>\n          <text macro=\"publishing\" prefix=\"(\" suffix=\")\"/>\n          <choose>\n            <!-- 如果有页码则显示 -->\n            <if variable=\"number-of-pages\">\n              <text variable=\"number-of-pages\" prefix=\"第\" suffix=\"页\"/>\n            </if>\n          </choose>\n        </group>\n      </if>\n      <else>\n        <!-- 如果是原版书籍 -->\n        <group delimiter=\" \">\n          <text macro=\"author\"/>\n          <text macro=\"secondary-contributor\"/>\n          <text macro=\"issued-year\"/>\n          <text variable=\"title\"/>\n          <text macro=\"edition\"/>\n          <text macro=\"publishing\" prefix=\"(\" suffix=\")\"/>\n          <choose>\n            <!-- 如果有页码则显示 -->\n            <if variable=\"number-of-pages\">\n              <text variable=\"number-of-pages\" prefix=\"pp\"/>\n            </if>\n          </choose>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <!-- 学位论文 -->\n  <macro name=\"thesis-layout\">\n    <!-- 如果是中文，在original-title有内容，添加original-title中的内容，即翻译的英文格式 -->\n    <choose>\n      <if variable=\"original-title\">\n        <text variable=\"original-title\" suffix=\" (in Chinese)\"/>\n        <group delimiter=\" \" prefix=\" [\" suffix=\"]\">\n          <text macro=\"author\"/>\n          <text macro=\"issued-year\"/>\n          <text variable=\"genre\" suffix=\"学位论文\"/>\n          <text macro=\"publishing\" prefix=\"(\" suffix=\")\"/>\n        </group>\n      </if>\n      <else>\n        <!-- 如果是原版论文 -->\n        <group delimiter=\" \">\n          <text macro=\"author\"/>\n          <text macro=\"issued-year\"/>\n          <text variable=\"genre\" suffix=\"学位论文\"/>\n          <text macro=\"publishing\" prefix=\"(\" suffix=\")\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <!-- 会议论文 -->\n  <macro name=\"paper-conference-layout\">\n    <!-- 如果是中文，在original-title有内容，添加original-title中的内容，即翻译的英文格式 -->\n    <choose>\n      <if variable=\"original-title\">\n        <text variable=\"original-title\" suffix=\" (in Chinese)\"/>\n        <group delimiter=\" \" prefix=\" [\" suffix=\"]\">\n          <text macro=\"author\"/>\n          <text macro=\"issued-year\"/>\n          <choose>\n            <if variable=\"container-title\">\n              <text variable=\"container-title\" form=\"short\"/>\n            </if>\n          </choose>\n          <text variable=\"event-place\" suffix=\",\"/>\n          <text macro=\"issued-date\"/>\n          <choose>\n            <!-- 如果有页码则显示 -->\n            <if variable=\"page\">\n              <text variable=\"page\" prefix=\"第\" suffix=\"页\"/>\n            </if>\n          </choose>\n        </group>\n      </if>\n      <else>\n        <!-- 如果是原版会议论文 -->\n        <group delimiter=\" \">\n          <text macro=\"author\"/>\n          <text macro=\"issued-year\"/>\n          <choose>\n            <if variable=\"container-title\">\n              <text variable=\"container-title\" form=\"short\"/>\n            </if>\n          </choose>\n          <text variable=\"event-place\"/>\n          <text macro=\"issued-date\" prefix=\", \"/>\n          <choose>\n            <!-- 如果有页码则显示 -->\n            <if variable=\"page\">\n              <text variable=\"page\" prefix=\"pp\"/>\n            </if>\n          </choose>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <!-- 连续出版物 -->\n  <macro name=\"serial-layout\">\n    <group delimiter=\". \" suffix=\"\">\n      <text macro=\"author\"/>\n      <text macro=\"year-volume-issue\"/>\n      <text macro=\"publishing\"/>\n    </group>\n  </macro>\n  <!-- 连续出版物中的析出文献 -->\n  <macro name=\"article-in-periodical-layout\">\n    <!-- 如果是中文，在original-title有内容，添加original-title中的内容，即翻译的英文格式 -->\n    <choose>\n      <if variable=\"original-title\">\n        <text variable=\"original-title\" suffix=\" (in Chinese)\"/>\n        <group delimiter=\" \" prefix=\" [\" suffix=\"]\">\n          <text macro=\"author\"/>\n          <text macro=\"periodical-publishing\"/>\n        </group>\n      </if>\n      <else>\n        <!-- 如果是原版论文 -->\n        <group delimiter=\" \">\n          <text macro=\"author\"/>\n          <text macro=\"periodical-publishing\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <!-- 网页 -->\n  <macro name=\"webpage-layout\">\n    <!-- 如果是中文，在original-title有内容，添加original-title中的内容，即翻译的英文格式 -->\n    <choose>\n      <if variable=\"original-title\">\n        <text variable=\"original-title\" suffix=\" (in Chinese)\"/>\n        <group delimiter=\" \" prefix=\" [\" suffix=\"]\">\n          <text variable=\"title\"/>\n          <text macro=\"author\"/>\n          <text variable=\"URL\"/>\n          <text macro=\"accessed-date\"/>\n        </group>\n      </if>\n      <else>\n        <!-- 英文网页 -->\n        <group delimiter=\" \" suffix=\"\">\n          <text variable=\"title\"/>\n          <text macro=\"author\"/>\n          <text variable=\"URL\"/>\n          <text macro=\"accessed-date\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <!-- 专利文献 -->\n  <macro name=\"patent-layout\">\n    <!-- 如果是中文，在original-title有内容，添加original-title中的内容，即翻译的英文格式 -->\n    <choose>\n      <if variable=\"original-title\">\n        <text variable=\"original-title\" suffix=\" (in Chinese)\"/>\n        <group delimiter=\" \" prefix=\" [\" suffix=\"]\">\n          <text macro=\"author\"/>\n          <text macro=\"issued-year\"/>\n          <text variable=\"number\" prefix=\"\"/>\n        </group>\n      </if>\n      <else>\n        <!-- 如果是英文专利 -->\n        <group delimiter=\" \" prefix=\" [\" suffix=\"]\">\n          <text macro=\"author\"/>\n          <text macro=\"issued-year\"/>\n          <text variable=\"number\" prefix=\"\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <!-- 正文中引用的文献标注格式 -->\n  <macro name=\"citation-layout\">\n    <group>\n      <text variable=\"citation-number\"/>\n    </group>\n  </macro>\n  <!-- 参考文献表格式 -->\n  <macro name=\"entry-layout\">\n    <choose>\n      <if type=\"article-journal article-magazine article-newspaper\" match=\"any\">\n        <text macro=\"article-in-periodical-layout\"/>\n      </if>\n      <else-if type=\"periodical\">\n        <text macro=\"serial-layout\"/>\n      </else-if>\n      <else-if type=\"patent\">\n        <text macro=\"patent-layout\"/>\n      </else-if>\n      <else-if type=\"thesis\">\n        <!-- 学位论文参考文献表格式 -->\n        <text macro=\"thesis-layout\"/>\n      </else-if>\n      <else-if type=\"webpage\">\n        <!-- 网页参考文献表格式 -->\n        <text macro=\"webpage-layout\"/>\n      </else-if>\n      <else-if type=\"paper-conference\" variable=\"container-title\" match=\"any\">\n        <!-- 会议论文参考文献表格式 -->\n        <text macro=\"paper-conference-layout\"/>\n      </else-if>\n      <else>\n        <text macro=\"monograph-layout\"/>\n      </else>\n    </choose>\n  </macro>\n  <citation collapse=\"citation-number\" after-collapse-delimiter=\",\">\n    <layout vertical-align=\"sup\" delimiter=\",\" prefix=\"[\" suffix=\"]\">\n      <text macro=\"citation-layout\"/>\n    </layout>\n  </citation>\n  <bibliography entry-spacing=\"0\" second-field-align=\"flush\">\n    <layout>\n      <text variable=\"citation-number\" prefix=\"[\" suffix=\"]\"/>\n      <text macro=\"entry-layout\"/>\n    </layout>\n  </bibliography>\n</style>\n"