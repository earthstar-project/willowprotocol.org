"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"never\" default-locale=\"fr-CA\">\n  <info>\n    <title>Université de Montréal - APA (Français - Canada)</title>\n    <title-short>UdeM APA FR</title-short>\n    <id>http://www.zotero.org/styles/universite-de-montreal-apa</id>\n    <link href=\"http://www.zotero.org/styles/universite-de-montreal-apa\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/apa\" rel=\"template\"/>\n    <link href=\"https://bib.umontreal.ca/citer/styles-bibliographiques/apa\" rel=\"documentation\"/>\n    <author>\n      <name>Florian Martin-Bariteau</name>\n      <email>f.martin-bariteau@umontreal.ca</email>\n      <uri>http://f-mb.org/</uri>\n    </author>\n    <contributor>\n      <name>Mathieu Brisson</name>\n      <email>mathieu.brisson@cegeplimoilou.ca</email>\n      <uri/>\n    </contributor>\n    <contributor>\n      <name>Marc Julien</name>\n      <email>marc.julien@cegeplimoilou.ca</email>\n      <uri/>\n    </contributor>\n    <category citation-format=\"author-date\"/>\n    <category field=\"psychology\"/>\n    <category field=\"generic-base\"/>\n    <summary>Adaptation en français canadien des normes de citation de l'APA (7e édition) basée sur le guide des Bibliothèques de l'Université de Montréal.</summary>\n    <updated>2021-04-29T04:50:30+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale>\n    <terms>\n      <term name=\"editor\" form=\"short\">dir.</term>\n      <term name=\"editortranslator\" form=\"short\">dir. et trad.</term>\n      <term name=\"translator\" form=\"short\">trad.</term>\n      <term name=\"no date\" form=\"short\">s. d.</term>\n      <term name=\"retrieved\">repéré</term>\n      <term name=\"from\">à</term>\n      <term name=\"presented at\">communication présentée au</term>\n      <term name=\"page\" form=\"short\">p.</term>\n    </terms>\n  </locale>\n  <macro name=\"container-contributors\">\n    <choose>\n      <if type=\"chapter paper-conference\" match=\"any\">\n        <names variable=\"editor translator\" delimiter=\", \" suffix=\", \">\n          <name and=\"text\" initialize-with=\". \" delimiter=\", \" delimiter-precedes-last=\"never\"/>\n          <et-al font-style=\"italic\"/>\n          <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n        </names>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"secondary-contributors\">\n    <choose>\n      <if type=\"article-journal chapter paper-conference\" match=\"none\">\n        <names variable=\"editor translator\" delimiter=\", \">\n          <label form=\"verb\" suffix=\" \"/>\n          <name and=\"text\" initialize-with=\". \" delimiter=\", \" delimiter-precedes-last=\"never\"/>\n          <et-al font-style=\"italic\"/>\n        </names>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"author\">\n    <choose>\n      <if variable=\"author\">\n        <names variable=\"author\">\n          <name name-as-sort-order=\"all\" and=\"text\" sort-separator=\", \" initialize-with=\". \" delimiter=\", \" delimiter-precedes-last=\"never\"/>\n          <et-al font-style=\"italic\"/>\n          <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n          <substitute>\n            <names variable=\"editor\"/>\n            <names variable=\"translator\"/>\n            <choose>\n              <if type=\"report\">\n                <text variable=\"publisher\"/>\n                <text macro=\"title\"/>\n              </if>\n              <else>\n                <text macro=\"title\"/>\n              </else>\n            </choose>\n          </substitute>\n        </names>\n      </if>\n      <else>\n        <choose>\n          <if type=\"entry-encyclopedia entry-dictionary\" match=\"any\">\n            <text macro=\"title\"/>\n          </if>\n          <else>\n            <names variable=\"author\">\n              <name name-as-sort-order=\"all\" and=\"text\" sort-separator=\", \" initialize-with=\". \" delimiter=\", \" delimiter-precedes-last=\"never\"/>\n              <et-al font-style=\"italic\"/>\n              <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n              <substitute>\n                <names variable=\"editor\"/>\n                <names variable=\"translator\"/>\n                <choose>\n                  <if type=\"report\">\n                    <text variable=\"publisher\"/>\n                    <text macro=\"title\"/>\n                  </if>\n                  <else>\n                    <text macro=\"title\"/>\n                  </else>\n                </choose>\n              </substitute>\n            </names>\n          </else>\n        </choose>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"text\" delimiter=\", \" initialize-with=\". \" delimiter-precedes-last=\"never\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <choose>\n          <if type=\"report\">\n            <text variable=\"publisher\"/>\n            <text variable=\"title\" form=\"short\" font-style=\"italic\"/>\n          </if>\n          <else-if type=\"bill book graphic legal_case legislation motion_picture song map webpage post\" match=\"any\">\n            <text variable=\"title\" form=\"short\" font-style=\"italic\"/>\n          </else-if>\n          <else>\n            <text variable=\"title\" form=\"short\" quotes=\"true\"/>\n          </else>\n        </choose>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <choose>\n      <if type=\"thesis\">\n        <choose>\n          <if variable=\"archive\" match=\"any\">\n            <group>\n              <text variable=\"archive\" suffix=\". \"/>\n              <text variable=\"archive_location\" prefix=\" (\" suffix=\")\"/>\n              <text variable=\"URL\"/>\n            </group>\n          </if>\n          <else>\n            <text variable=\"URL\"/>\n          </else>\n        </choose>\n      </if>\n      <else>\n        <choose>\n          <if variable=\"DOI\">\n            <text variable=\"DOI\" prefix=\"https://doi.org/\"/>\n          </if>\n          <else-if type=\"post\">\n            <group delimiter=\" \">\n              <text term=\"retrieved\" text-case=\"capitalize-first\"/>\n              <choose>\n                <if type=\"post\">\n                  <date variable=\"accessed\" form=\"text\" prefix=\"le \"/>\n                </if>\n                <else>\n                  <date variable=\"accessed\" form=\"text\"/>\n                </else>\n              </choose>\n              <text term=\"from\"/>\n              <text variable=\"URL\"/>\n            </group>\n          </else-if>\n          <else>\n            <choose>\n              <if type=\"graphic\">\n                <text variable=\"archive\" suffix=\". \"/>\n                <text variable=\"URL\"/>\n              </if>\n              <else>\n                <text variable=\"URL\"/>\n              </else>\n            </choose>\n          </else>\n        </choose>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"thesis\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n        <group prefix=\" [\" suffix=\"]\" delimiter=\", \">\n          <text variable=\"genre\" text-case=\"lowercase\"/>\n          <text variable=\"medium\" text-case=\"lowercase\"/>\n          <choose>\n            <if variable=\"URL\" match=\"any\">\n              <text variable=\"publisher\"/>\n            </if>\n          </choose>\n        </group>\n      </if>\n      <else-if type=\"report\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n        <group prefix=\" (\" suffix=\")\" delimiter=\" \">\n          <text variable=\"genre\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n          <text variable=\"medium\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n          <choose>\n            <if variable=\"number\" match=\"any\">\n              <text term=\"issue\" form=\"short\"/>\n              <text variable=\"number\"/>\n            </if>\n          </choose>\n        </group>\n      </else-if>\n      <else-if type=\"report\" match=\"any\">\n        <!---This is a hack until we have a computer program type -->\n        <choose>\n          <if variable=\"version\">\n            <group delimiter=\" \">\n              <text variable=\"title\"/>\n              <text variable=\"genre\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n              <text variable=\"medium\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n              <group delimiter=\" \" prefix=\"(\" suffix=\")\">\n                <text term=\"version\"/>\n                <text variable=\"version\"/>\n              </group>\n            </group>\n          </if>\n          <else>\n            <text variable=\"title\" font-style=\"italic\"/>\n            <text variable=\"genre\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n            <text variable=\"medium\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n          </else>\n        </choose>\n      </else-if>\n      <else-if type=\"book\" match=\"any\">\n        <!---This is a hack until we have a computer program type -->\n        <text variable=\"title\" font-style=\"italic\"/>\n        <choose>\n          <if variable=\"version\">\n            <group delimiter=\" \" prefix=\" \">\n              <group delimiter=\" \" prefix=\"(\" suffix=\")\">\n                <text term=\"version\"/>\n                <text variable=\"version\"/>\n              </group>\n              <text variable=\"genre\" prefix=\" [\" suffix=\"]\" text-case=\"lowercase\"/>\n              <text variable=\"medium\" prefix=\" [\" suffix=\"]\" text-case=\"lowercase\"/>\n            </group>\n          </if>\n          <else>\n            <text variable=\"genre\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n            <text variable=\"medium\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n          </else>\n        </choose>\n      </else-if>\n      <else-if type=\"paper-conference\">\n        <text variable=\"title\" font-style=\"italic\"/>\n        <text variable=\"genre\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n        <text variable=\"medium\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n      </else-if>\n      <else-if type=\"map motion_picture song graphic speech post manuscript webpage\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n        <text variable=\"genre\" prefix=\" [\" suffix=\"]\" text-case=\"lowercase\"/>\n        <text variable=\"medium\" prefix=\" [\" suffix=\"]\" text-case=\"lowercase\"/>\n      </else-if>\n      <else-if type=\"broadcast\">\n        <text variable=\"title\"/>\n      </else-if>\n      <else>\n        <text variable=\"title\"/>\n        <text variable=\"genre\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n        <text variable=\"medium\" prefix=\" [\" suffix=\"]\" text-case=\"capitalize-first\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <choose>\n      <if type=\"thesis\" match=\"any\">\n        <choose>\n          <if variable=\"URL archive\" match=\"none\">\n            <group>\n              <text variable=\"publisher\"/>\n            </group>\n          </if>\n        </choose>\n      </if>\n      <else-if type=\"article-journal article-magazine paper-conference\" match=\"none\">\n        <group>\n          <text variable=\"publisher\"/>\n        </group>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"event\">\n    <choose>\n      <if variable=\"container-title\" match=\"none\">\n        <choose>\n          <if variable=\"event\">\n            <choose>\n              <if variable=\"genre\" match=\"none\">\n                <choose>\n                  <if type=\"paper-conference\" match=\"none\">\n                    <text term=\"presented at\" text-case=\"capitalize-first\" suffix=\" \"/>\n                    <text variable=\"event\"/>\n                  </if>\n                </choose>\n              </if>\n              <else>\n                <group delimiter=\" \">\n                  <text variable=\"genre\" text-case=\"capitalize-first\"/>\n                  <text term=\"presented at\"/>\n                  <text variable=\"event\"/>\n                </group>\n              </else>\n            </choose>\n          </if>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"issued\">\n    <choose>\n      <if type=\"bill legal_case legislation\" match=\"none\">\n        <choose>\n          <if variable=\"issued\">\n            <group prefix=\" (\" suffix=\")\">\n              <date variable=\"issued\">\n                <date-part name=\"year\"/>\n              </date>\n              <text variable=\"year-suffix\"/>\n              <choose>\n                <if type=\"article-journal bill book chapter legal_case legislation report song\" match=\"none\">\n                  <date variable=\"issued\" prefix=\",\">\n                    <date-part prefix=\" \" name=\"day\" range-delimiter=\" au \"/>\n                    <date-part prefix=\" \" name=\"month\"/>\n                  </date>\n                </if>\n              </choose>\n            </group>\n          </if>\n          <else>\n            <group prefix=\" (\" suffix=\")\">\n              <text term=\"no date\" form=\"short\"/>\n              <text variable=\"year-suffix\" prefix=\"-\"/>\n            </group>\n          </else>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"issued-sort\">\n    <choose>\n      <if type=\"article-journal bill book chapter graphic legal_case legislation motion_picture paper-conference report song\" match=\"none\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n          <date-part name=\"month\"/>\n          <date-part name=\"day\"/>\n        </date>\n      </if>\n      <else>\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"issued-year\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n        <text variable=\"year-suffix\"/>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n        <text variable=\"year-suffix\" prefix=\"-\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"locators\">\n    <choose>\n      <if type=\"article-journal article-magazine\" match=\"any\">\n        <group prefix=\", \" delimiter=\", \">\n          <group>\n            <text variable=\"volume\" font-style=\"italic\"/>\n            <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n          </group>\n          <text variable=\"page\"/>\n        </group>\n      </if>\n      <else-if type=\"article-newspaper\">\n        <group delimiter=\" \" prefix=\", \">\n          <text variable=\"page\"/>\n        </group>\n      </else-if>\n      <else-if type=\"book graphic motion_picture song chapter paper-conference\" match=\"any\">\n        <group prefix=\" (\" suffix=\")\" delimiter=\"; \">\n          <group delimiter=\", \">\n            <text macro=\"edition\"/>\n            <group>\n              <text term=\"volume\" form=\"short\" plural=\"true\" suffix=\" \"/>\n              <number variable=\"number-of-volumes\" form=\"numeric\" prefix=\"1-\"/>\n            </group>\n            <group>\n              <text term=\"volume\" form=\"short\" suffix=\" \"/>\n              <number variable=\"volume\" form=\"numeric\"/>\n            </group>\n            <group>\n              <label variable=\"page\" form=\"short\" suffix=\" \"/>\n              <text variable=\"page\"/>\n            </group>\n          </group>\n          <text macro=\"secondary-contributors\"/>\n        </group>\n      </else-if>\n      <else-if type=\"legal_case\">\n        <group prefix=\" (\" suffix=\")\" delimiter=\" \">\n          <text variable=\"authority\"/>\n          <date variable=\"issued\" form=\"text\"/>\n        </group>\n      </else-if>\n      <else-if type=\"bill legislation\" match=\"any\">\n        <date variable=\"issued\" prefix=\" (\" suffix=\")\">\n          <date-part name=\"year\"/>\n        </date>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"citation-locator\">\n    <group>\n      <choose>\n        <if locator=\"chapter\">\n          <label variable=\"locator\" form=\"short\"/>\n        </if>\n        <else>\n          <label variable=\"locator\" form=\"short\"/>\n        </else>\n      </choose>\n      <text variable=\"locator\" prefix=\" \"/>\n    </group>\n  </macro>\n  <macro name=\"container\">\n    <group>\n      <choose>\n        <if type=\"chapter entry-encyclopedia entry-dictionary song\" match=\"any\">\n          <text term=\"in\" text-case=\"capitalize-first\" suffix=\" \"/>\n        </if>\n      </choose>\n      <choose>\n        <if type=\"entry-dictionary entry-encyclopedia\" match=\"any\">\n          <names variable=\"editor\" suffix=\", \">\n            <name and=\"text\" sort-separator=\", \" initialize-with=\". \" delimiter=\", \" delimiter-precedes-last=\"never\"/>\n            <et-al font-style=\"italic\"/>\n            <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n          </names>\n        </if>\n        <else-if type=\"song\">\n          <text variable=\"collection-title\" font-style=\"italic\"/>\n        </else-if>\n      </choose>\n      <text macro=\"container-contributors\"/>\n      <choose>\n        <if type=\"paper-conference\">\n          <group delimiter=\", \">\n            <text variable=\"event\"/>\n            <text variable=\"publisher-place\"/>\n          </group>\n        </if>\n        <else-if type=\"entry-dictionary\">\n          <text macro=\"container-title\"/>\n          <group prefix=\" (\" suffix=\")\">\n            <text variable=\"page\" prefix=\"p. \"/>\n          </group>\n        </else-if>\n        <else-if type=\"broadcast\">\n          <group prefix=\" (\" suffix=\")\">\n            <choose>\n              <if is-numeric=\"number\">\n                <!-- Replace with label variable=\"number\" if that becomes available -->\n                <text term=\"issue\" suffix=\" \" form=\"short\"/>\n                <text variable=\"number\"/>\n              </if>\n              <else>\n                <text variable=\"number\"/>\n              </else>\n            </choose>\n          </group>\n          <text variable=\"genre\" prefix=\" [\" suffix=\"]\" text-case=\"lowercase\"/>\n          <text variable=\"medium\" prefix=\" [\" suffix=\"]\" text-case=\"lowercase\"/>\n          <text macro=\"container-title\"/>\n        </else-if>\n        <else>\n          <text macro=\"container-title\"/>\n        </else>\n      </choose>\n      <choose>\n        <if type=\"entry-encyclopedia\">\n          <group prefix=\" (\" suffix=\")\" delimiter=\", \">\n            <text variable=\"volume\" prefix=\"Vol. \"/>\n            <text variable=\"page\" prefix=\"p. \"/>\n          </group>\n        </if>\n      </choose>\n    </group>\n    <choose>\n      <if type=\"manuscript\">\n        <text value=\"Document inédit\"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"container-title\">\n    <choose>\n      <if type=\"article article-journal article-magazine article-newspaper\" match=\"any\">\n        <text variable=\"container-title\" font-style=\"italic\" text-case=\"title\"/>\n      </if>\n      <else-if type=\"paper-conference\">\n        <text variable=\"container-title\" text-case=\"title\"/>\n      </else-if>\n      <else-if type=\"webpage\">\n        <text variable=\"container-title\"/>\n      </else-if>\n      <else-if type=\"broadcast\">\n        <text term=\"in\" text-case=\"capitalize-first\" prefix=\". \" suffix=\" \"/>\n        <text variable=\"collection-title\" font-style=\"italic\"/>\n        <text variable=\"container-title\" font-style=\"italic\"/>\n      </else-if>\n      <else-if type=\"bill legal_case legislation\" match=\"none\">\n        <text variable=\"container-title\" font-style=\"italic\"/>\n      </else-if>\n      <else>\n        <group delimiter=\" \" prefix=\", \">\n          <choose>\n            <if variable=\"container-title\">\n              <text variable=\"volume\"/>\n              <text variable=\"container-title\"/>\n              <group delimiter=\" \">\n                <!--change to label variable=\"section\" as that becomes available -->\n                <text term=\"section\" form=\"symbol\"/>\n                <text variable=\"section\"/>\n              </group>\n              <text variable=\"page\"/>\n            </if>\n            <else>\n              <choose>\n                <if type=\"legal_case\">\n                  <text term=\"issue\" form=\"short\"/>\n                  <text variable=\"number\"/>\n                </if>\n                <else>\n                  <text term=\"issue\" form=\"short\"/>\n                  <text variable=\"number\"/>\n                  <group delimiter=\" \">\n                    <!--change to label variable=\"section\" as that becomes available -->\n                    <text term=\"section\" form=\"symbol\"/>\n                    <text variable=\"section\"/>\n                  </group>\n                </else>\n              </choose>\n            </else>\n          </choose>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" disambiguate-add-names=\"true\" disambiguate-add-givenname=\"true\" collapse=\"year\" givenname-disambiguation-rule=\"primary-name\">\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"issued-sort\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\", \">\n        <text macro=\"author-short\"/>\n        <text macro=\"issued-year\"/>\n        <text macro=\"citation-locator\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography hanging-indent=\"true\" et-al-min=\"21\" et-al-use-first=\"20\" et-al-use-last=\"true\" entry-spacing=\"0\" line-spacing=\"2\">\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"issued-sort\" sort=\"ascending\"/>\n      <key macro=\"title\"/>\n    </sort>\n    <layout>\n      <group suffix=\".\">\n        <choose>\n          <if type=\"broadcast\">\n            <group delimiter=\". \">\n              <text macro=\"author\"/>\n              <text macro=\"issued\"/>\n              <text macro=\"title\" prefix=\" \"/>\n            </group>\n            <text macro=\"container\"/>\n          </if>\n          <else>\n            <group delimiter=\". \">\n              <text macro=\"author\"/>\n              <text macro=\"issued\"/>\n              <choose>\n                <if type=\"entry-dictionary entry-encyclopedia\" match=\"any\">\n                  <choose>\n                    <if variable=\"author\">\n                      <text macro=\"title\" prefix=\" \"/>\n                    </if>\n                  </choose>\n                </if>\n                <else>\n                  <text macro=\"title\" prefix=\" \"/>\n                </else>\n              </choose>\n              <text macro=\"container\"/>\n            </group>\n          </else>\n        </choose>\n        <text macro=\"locators\"/>\n        <group delimiter=\", \" prefix=\". \">\n          <text macro=\"event\"/>\n          <text macro=\"publisher\"/>\n        </group>\n      </group>\n      <text macro=\"access\" prefix=\" \"/>\n    </layout>\n  </bibliography>\n</style>\n"