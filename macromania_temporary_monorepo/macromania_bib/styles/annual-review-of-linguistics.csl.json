"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" page-range-format=\"chicago\" demote-non-dropping-particle=\"never\" default-locale=\"en-US\">\n  <!-- This style was edited with the Visual CSL Editor (https://editor.citationstyles.org/visualEditor/) -->\n  <info>\n    <title>Annual Review of Linguistics</title>\n    <id>http://www.zotero.org/styles/annual-review-of-linguistics</id>\n    <link href=\"http://www.zotero.org/styles/annual-review-of-linguistics\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/annual-reviews-alphabetical\" rel=\"template\"/>\n    <link href=\"http://www.annualreviews.org/page/authors/author-instructions/preparing/handbooks\" rel=\"documentation\"/>\n    <author>\n      <name>Michael Berkowitz</name>\n      <email>mberkowi@gmu.edu</email>\n    </author>\n    <contributor>\n      <name>Julian Onions</name>\n      <email>julian.onions@gmail.com</email>\n    </contributor>\n    <contributor>\n      <name>Rintze Zelle</name>\n      <uri>http://twitter.com/rintzezelle</uri>\n    </contributor>\n    <contributor>\n      <name>Sebastian Karcher</name>\n    </contributor>\n    <contributor>\n      <name>Aurimas Vinckevicius</name>\n      <email>aurimas.dev@gmail.com</email>\n    </contributor>\n    <contributor>\n      <name>Brenton Wiernik</name>\n      <email>wiernik@workpsy.ch</email>\n    </contributor>\n    <contributor>\n      <name>Dan Villarreal</name>\n      <email>d.vill@pitt.edu</email>\n    </contributor>\n    <category citation-format=\"author-date\"/>\n    <category field=\"generic-base\"/>\n    <updated>2022-03-28T19:39:51+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"en\">\n    <terms>\n      <term name=\"editor\" form=\"short\">\n        <single>ed</single>\n        <multiple>eds</multiple>\n      </term>\n      <term name=\"month-03\" form=\"short\">March</term>\n      <term name=\"month-04\" form=\"short\">April</term>\n      <term name=\"month-05\" form=\"short\">May</term>\n      <term name=\"month-06\" form=\"short\">June</term>\n      <term name=\"month-07\" form=\"short\">July</term>\n    </terms>\n  </locale>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name et-al-min=\"6\" initialize-with=\"\" name-as-sort-order=\"all\" sort-separator=\" \"/>\n      <label form=\"short\" prefix=\", \"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text macro=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" delimiter=\", \" and=\"symbol\" delimiter-precedes-last=\"never\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text macro=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-last-names\">\n    <names variable=\"author\">\n      <name form=\"short\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\">\n      <label form=\"short\" suffix=\". \" plural=\"contextual\"/>\n      <name initialize-with=\"\" delimiter=\", \"/>\n    </names>\n  </macro>\n  <macro name=\"year-date\">\n    <date variable=\"issued\">\n      <date-part name=\"year\"/>\n    </date>\n  </macro>\n  <macro name=\"date-original\">\n    <group delimiter=\" \">\n      <date variable=\"issued\">\n        <date-part name=\"year\"/>\n      </date>\n      <date variable=\"original-date\" prefix=\"(\" suffix=\")\">\n        <date-part name=\"year\"/>\n      </date>\n    </group>\n  </macro>\n  <macro name=\"date-m-d\">\n    <date variable=\"issued\" delimiter=\" \">\n      <date-part name=\"month\" form=\"short\"/>\n      <date-part name=\"day\"/>\n    </date>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"bill graphic legal_case legislation motion_picture song thesis webpage manuscript\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </if>\n      <else-if type=\"book\" match=\"any\">\n        <group delimiter=\", \">\n          <text variable=\"title\" font-style=\"italic\" text-case=\"title\"/>\n          <group>\n            <label variable=\"volume\" form=\"short\" suffix=\" \" text-case=\"capitalize-first\"/>\n            <text variable=\"volume\" text-case=\"title\"/>\n          </group>\n        </group>\n      </else-if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"container-title\">\n    <choose>\n      <if type=\"paper-conference\" match=\"any\">\n        <text variable=\"event\" text-case=\"title\" font-style=\"italic\" prefix=\"Presented to \"/>\n      </if>\n      <else-if type=\"chapter\" match=\"any\">\n        <text term=\"in\" text-case=\"capitalize-first\" suffix=\" \"/>\n        <group delimiter=\", \">\n          <text variable=\"container-title\" text-case=\"title\" font-style=\"italic\"/>\n          <group>\n            <label variable=\"volume\" form=\"short\" suffix=\" \" text-case=\"capitalize-first\"/>\n            <text variable=\"volume\" text-case=\"title\"/>\n          </group>\n        </group>\n      </else-if>\n      <else-if type=\"article-newspaper article-magazine article-journal\" match=\"any\">\n        <text variable=\"container-title\" form=\"short\" font-style=\"italic\"/>\n      </else-if>\n      <else-if type=\"report\">\n        <text variable=\"collection-title\" font-style=\"italic\" form=\"short\"/>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\": \">\n      <text variable=\"publisher-place\"/>\n      <text variable=\"publisher\"/>\n    </group>\n  </macro>\n  <macro name=\"locator\">\n    <choose>\n      <if type=\"article-journal\" match=\"any\">\n        <group prefix=\". \">\n          <group suffix=\":\">\n            <text variable=\"volume\"/>\n            <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n          </group>\n          <group delimiter=\". \">\n            <text variable=\"page\"/>\n            <text macro=\"status\"/>\n          </group>\n        </group>\n      </if>\n      <else-if type=\"paper-conference\" match=\"any\">\n        <choose>\n          <if variable=\"volume\">\n            <group prefix=\". \">\n              <group suffix=\":\">\n                <text variable=\"volume\"/>\n                <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n              </group>\n              <choose>\n                <if variable=\"page\" match=\"any\">\n                  <group delimiter=\". \">\n                    <text variable=\"page\"/>\n                    <text macro=\"status\"/>\n                  </group>\n                </if>\n                <else>\n                  <text variable=\"URL\" prefix=\". \"/>\n                </else>\n              </choose>\n            </group>\n          </if>\n          <else>\n            <choose>\n              <if is-numeric=\"page\" match=\"all\">\n                <group prefix=\", \">\n                  <label variable=\"page\" form=\"short\" suffix=\" \"/>\n                  <text variable=\"page\"/>\n                </group>\n              </if>\n              <else>\n                <text variable=\"page\" prefix=\". \"/>\n              </else>\n            </choose>\n          </else>\n        </choose>\n      </else-if>\n      <else-if type=\"chapter\" match=\"any\">\n        <group prefix=\", \">\n          <label variable=\"page\" form=\"short\" suffix=\" \"/>\n          <text variable=\"page\"/>\n        </group>\n      </else-if>\n      <else-if type=\"article-magazine article-newspaper\" match=\"any\">\n        <group delimiter=\", \">\n          <text macro=\"date-m-d\"/>\n          <choose>\n            <if variable=\"page\" match=\"any\">\n              <choose>\n                <if is-numeric=\"page\" match=\"all\">\n                  <group prefix=\", \">\n                    <label variable=\"page\" form=\"short\" suffix=\" \"/>\n                    <text variable=\"page\"/>\n                  </group>\n                </if>\n                <else>\n                  <text variable=\"page\" prefix=\". \"/>\n                </else>\n              </choose>\n            </if>\n            <else>\n              <text variable=\"URL\" prefix=\". \"/>\n            </else>\n          </choose>\n        </group>\n      </else-if>\n      <else>\n        <text variable=\"page\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"container\">\n    <choose>\n      <if type=\"book\" match=\"any\">\n        <group delimiter=\". \">\n          <text macro=\"publisher\"/>\n          <group delimiter=\" \">\n            <number variable=\"edition\" form=\"ordinal\"/>\n            <label variable=\"edition\" form=\"short\"/>\n          </group>\n          <text macro=\"status\"/>\n        </group>\n      </if>\n      <else-if type=\"chapter\" match=\"any\">\n        <group delimiter=\". \">\n          <group>\n            <text macro=\"container-title\"/>\n            <text macro=\"editor\" prefix=\", \"/>\n            <text macro=\"locator\"/>\n          </group>\n          <text macro=\"publisher\"/>\n          <group delimiter=\" \">\n            <number variable=\"edition\" form=\"ordinal\"/>\n            <label variable=\"edition\" form=\"short\"/>\n          </group>\n          <text macro=\"status\"/>\n        </group>\n      </else-if>\n      <else-if type=\"article-journal\" match=\"any\">\n        <text macro=\"container-title\"/>\n        <text macro=\"locator\"/>\n      </else-if>\n      <else-if type=\"paper-conference\" match=\"any\">\n        <choose>\n          <if variable=\"volume\" match=\"any\">\n            <text macro=\"container-title\"/>\n            <text macro=\"locator\"/>\n          </if>\n          <else>\n            <text macro=\"container-title\"/>\n            <text macro=\"locator\"/>\n            <choose>\n              <if variable=\"publisher\" match=\"any\">\n                <group delimiter=\". \" prefix=\". \">\n                  <text macro=\"publisher\"/>\n                  <text macro=\"status\"/>\n                </group>\n              </if>\n              <else>\n                <text variable=\"URL\" prefix=\". \"/>\n              </else>\n            </choose>\n          </else>\n        </choose>\n      </else-if>\n      <else-if type=\"article-magazine article-newspaper\" match=\"any\">\n        <group delimiter=\". \">\n          <group delimiter=\", \">\n            <text macro=\"container-title\"/>\n            <text macro=\"locator\"/>\n          </group>\n          <text macro=\"status\"/>\n        </group>\n      </else-if>\n      <else-if type=\"broadcast\" match=\"any\">\n        <group delimiter=\", \">\n          <text variable=\"publisher-place\"/>\n          <group delimiter=\" \" font-style=\"italic\">\n            <text variable=\"publisher\"/>\n            <text value=\"Broadcast\"/>\n          </group>\n          <text macro=\"date-m-d\"/>\n        </group>\n      </else-if>\n      <else-if type=\"patent\" match=\"any\">\n        <group font-style=\"italic\">\n          <text variable=\"number\"/>\n        </group>\n      </else-if>\n      <else-if type=\"report\" match=\"any\">\n        <group delimiter=\". \">\n          <text macro=\"container-title\"/>\n          <group delimiter=\". \">\n            <group delimiter=\", \">\n              <text variable=\"number\" font-style=\"italic\"/>\n              <text variable=\"publisher\"/>\n              <text variable=\"publisher-place\"/>\n            </group>\n            <text macro=\"status\"/>\n          </group>\n        </group>\n      </else-if>\n      <else-if type=\"thesis\" match=\"any\">\n        <group delimiter=\", \">\n          <text variable=\"genre\"/>\n          <text variable=\"publisher\" form=\"short\"/>\n          <text variable=\"event-place\"/>\n        </group>\n      </else-if>\n      <else-if type=\"post-weblog\" match=\"any\">\n        <group delimiter=\", \" suffix=\". \">\n          <text variable=\"container-title\" font-style=\"italic\"/>\n          <date date-parts=\"year-month\" form=\"text\" variable=\"issued\"/>\n        </group>\n        <text variable=\"URL\"/>\n      </else-if>\n      <else-if type=\"webpage\" match=\"any\">\n        <group delimiter=\". \">\n          <text variable=\"container-title\"/>\n          <text variable=\"URL\" form=\"short\"/>\n        </group>\n      </else-if>\n      <else-if type=\"manuscript\">\n        <group>\n          <text value=\"Work. Pap.\"/>\n        </group>\n        <text variable=\"publisher-place\" prefix=\", \"/>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"status\">\n    <text variable=\"status\" text-case=\"capitalize-first\"/>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" collapse=\"year-suffix-ranged\" year-suffix-delimiter=\",\" after-collapse-delimiter=\"; \">\n    <sort>\n      <key macro=\"author-short\" names-min=\"2\" names-use-first=\"1\"/>\n      <key macro=\"year-date\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\", \">\n      <group delimiter=\", \">\n        <group delimiter=\" \">\n          <text macro=\"author-short\"/>\n          <text macro=\"year-date\"/>\n        </group>\n        <group delimiter=\" \">\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </group>\n    </layout>\n  </citation>\n  <bibliography entry-spacing=\"0\" line-spacing=\"2\" hanging-indent=\"true\" et-al-min=\"7\" et-al-use-first=\"5\">\n    <sort>\n      <key macro=\"author\" names-min=\"2\" names-use-first=\"1\" names-use-last=\"false\"/>\n      <key macro=\"author-last-names\"/>\n      <key macro=\"year-date\"/>\n    </sort>\n    <layout>\n      <group delimiter=\". \">\n        <text macro=\"author\"/>\n        <text macro=\"date-original\"/>\n        <text macro=\"title\"/>\n        <text macro=\"container\"/>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"