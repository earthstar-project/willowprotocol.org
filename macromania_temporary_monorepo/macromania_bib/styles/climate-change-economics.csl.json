"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"never\" default-locale=\"en-US\">\n  <info>\n    <title>Climate Change Economics</title>\n    <title-short>CCE</title-short>\n    <id>http://www.zotero.org/styles/climate-change-economics</id>\n    <link href=\"http://www.zotero.org/styles/climate-change-economics\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/journal-of-institutional-and-theoretical-economics\" rel=\"template\"/>\n    <link href=\"http://www.worldscientific.com/page/cce/submission-guidelines\" rel=\"documentation\"/>\n    <author>\n      <name>Patrick O'Brien</name>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"geography\"/>\n    <issn>2010-0078</issn>\n    <eissn>2010-0086</eissn>\n    <updated>2017-08-01T15:15:58+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name and=\"text\" delimiter-precedes-last=\"always\" initialize-with=\"\" name-as-sort-order=\"first\"/>\n      <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"text\" delimiter=\", \" initialize-with=\". \"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <group delimiter=\". \">\n      <group delimiter=\" \">\n        <text term=\"available at\" text-case=\"capitalize-first\"/>\n        <text variable=\"URL\"/>\n      </group>\n      <group delimiter=\" \">\n        <text term=\"accessed\" text-case=\"capitalize-first\"/>\n        <date form=\"text\" variable=\"accessed\"/>\n      </group>\n    </group>\n  </macro>\n  <macro name=\"issued\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publication-details\">\n    <group delimiter=\", \">\n      <text macro=\"volume-book\"/>\n      <text macro=\"edition\"/>\n      <text variable=\"publisher\"/>\n    </group>\n  </macro>\n  <macro name=\"volume-book\">\n    <choose>\n      <if match=\"any\" is-numeric=\"volume\">\n        <group delimiter=\" \">\n          <text term=\"volume\" form=\"short\"/>\n          <number variable=\"volume\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"volume\"/>\n      </else>\n    </choose>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-givenname=\"true\" disambiguate-add-year-suffix=\"true\" collapse=\"year\" cite-group-delimiter=\", \">\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\", \">\n        <text macro=\"author-short\"/>\n        <text macro=\"issued\"/>\n        <group delimiter=\" \">\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </group>\n    </layout>\n  </citation>\n  <bibliography entry-spacing=\"0\" hanging-indent=\"true\">\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"issued\" sort=\"ascending\"/>\n    </sort>\n    <layout suffix=\".\">\n      <group delimiter=\" \">\n        <text macro=\"author\"/>\n        <text macro=\"issued\" prefix=\"(\" suffix=\"). \"/>\n      </group>\n      <choose>\n        <if type=\"article-journal article-magazine article-newspaper\" match=\"any\">\n          <group delimiter=\". \">\n            <text variable=\"title\" quotes=\"false\"/>\n            <group delimiter=\", \">\n              <text variable=\"container-title\" font-style=\"italic\"/>\n              <choose>\n                <if match=\"any\" variable=\"page volume\">\n                  <group>\n                    <text variable=\"volume\"/>\n                    <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n                  </group>\n                  <text variable=\"page\"/>\n                </if>\n                <else>\n                  <text variable=\"DOI\" prefix=\"https://doi.org/\"/>\n                </else>\n              </choose>\n            </group>\n          </group>\n        </if>\n        <else-if type=\"report\" match=\"any\">\n          <group delimiter=\" \">\n            <text variable=\"title\" quotes=\"false\"/>\n            <group delimiter=\" \">\n              <text variable=\"collection-title\"/>\n              <text variable=\"genre\"/>\n              <text variable=\"number\" prefix=\"No. \"/>\n            </group>\n            <text macro=\"publication-details\"/>\n          </group>\n        </else-if>\n        <else-if type=\"webpage\" match=\"any\">\n          <group delimiter=\". \">\n            <text variable=\"title\"/>\n            <text macro=\"access\"/>\n          </group>\n        </else-if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <group delimiter=\". \">\n            <text variable=\"title\" quotes=\"false\"/>\n            <group delimiter=\", \">\n              <group delimiter=\" \">\n                <text term=\"in\" text-case=\"capitalize-first\"/>\n                <text variable=\"container-title\" text-case=\"title\" font-style=\"italic\"/>\n              </group>\n              <names variable=\"editor translator\" delimiter=\", \">\n                <name delimiter-precedes-last=\"always\" initialize-with=\".\"/>\n                <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n              </names>\n            </group>\n            <text macro=\"publication-details\"/>\n          </group>\n        </else-if>\n        <else-if type=\"thesis\" match=\"any\">\n          <text variable=\"title\"/>\n          <text variable=\"genre\"/>\n          <text macro=\"publication-details\"/>\n        </else-if>\n        <else>\n          <group delimiter=\". \">\n            <text variable=\"title\" font-style=\"italic\"/>\n            <text macro=\"publication-details\"/>\n          </group>\n        </else>\n      </choose>\n    </layout>\n  </bibliography>\n</style>\n"