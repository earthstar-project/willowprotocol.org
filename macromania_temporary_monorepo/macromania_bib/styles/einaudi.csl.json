"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"never\" default-locale=\"it-IT\">\n  <info>\n    <title>Einaudi (Italiano)</title>\n    <id>http://www.zotero.org/styles/einaudi</id>\n    <link href=\"http://www.zotero.org/styles/einaudi\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/geografie-sbornik-cgs\" rel=\"template\"/>\n    <link href=\"https://forums.zotero.org/discussion/68966/csl-style-request-einaudi\" rel=\"documentation\"/>\n    <author>\n      <name>Patrick O'Brien</name>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"generic-base\"/>\n    <updated>2017-12-21T09:53:07+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"it\">\n    <terms>\n      <term name=\"editor\" form=\"short\">\n        <single>ed.</single>\n        <multiple>eds.</multiple>\n      </term>\n      <term name=\"page\" form=\"short\">\n        <single>p.</single>\n        <multiple>pp.</multiple>\n      </term>\n      <term name=\"editor\" form=\"short\">a cura di</term>\n    </terms>\n  </locale>\n  <macro name=\"responsibility\">\n    <names variable=\"author\">\n      <name and=\"text\" delimiter-precedes-last=\"never\" initialize-with=\". \">\n        <name-part name=\"family\" font-variant=\"small-caps\"/>\n        <name-part name=\"given\"/>\n      </name>\n      <label form=\"short\" text-case=\"lowercase\" prefix=\" (\" suffix=\")\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-citation\">\n    <names variable=\"author\">\n      <name form=\"short\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text variable=\"title\" form=\"short\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"container-author\">\n    <names variable=\"container-author\">\n      <label form=\"short\" prefix=\" (\" suffix=\")\" text-case=\"lowercase\"/>\n      <name delimiter-precedes-last=\"never\" initialize-with=\". \">\n        <name-part name=\"family\" text-case=\"capitalize-first\"/>\n        <name-part name=\"given\"/>\n      </name>\n    </names>\n  </macro>\n  <macro name=\"container-responsibility\">\n    <choose>\n      <if variable=\"container-author editor\" match=\"any\">\n        <choose>\n          <if variable=\"container-author\">\n            <text macro=\"container-author\"/>\n          </if>\n          <else>\n            <text macro=\"editor\"/>\n          </else>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\">\n      <label form=\"short\" text-case=\"lowercase\"/>\n      <name prefix=\" \" delimiter-precedes-last=\"never\" initialize-with=\". \">\n        <name-part name=\"family\" text-case=\"capitalize-first\"/>\n        <name-part name=\"given\"/>\n      </name>\n    </names>\n  </macro>\n  <macro name=\"year-date\">\n    <choose>\n      <if variable=\"issued\">\n        <choose>\n          <if is-uncertain-date=\"issued\">\n            <text term=\"circa\" form=\"short\" suffix=\" \"/>\n          </if>\n        </choose>\n        <date variable=\"issued\">\n          <date-part name=\"year\" form=\"long\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"page\">\n    <choose>\n      <if type=\"book report\" match=\"any\">\n        <group delimiter=\" \">\n          <text variable=\"number-of-pages\"/>\n          <text term=\"page\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <group delimiter=\" \">\n          <label variable=\"page\" form=\"short\"/>\n          <text variable=\"page\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"issue\">\n    <group delimiter=\" \">\n      <label variable=\"issue\" form=\"short\"/>\n      <text variable=\"issue\"/>\n    </group>\n  </macro>\n  <macro name=\"accessed\">\n    <choose>\n      <if variable=\"URL DOI\" match=\"any\">\n        <group prefix=\"(\" suffix=\")\">\n          <date variable=\"accessed\">\n            <date-part name=\"day\" form=\"numeric\" suffix=\". \"/>\n            <date-part name=\"month\" form=\"numeric\" suffix=\". \"/>\n            <date-part name=\"year\"/>\n          </date>\n        </group>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"net-link\">\n    <choose>\n      <if variable=\"DOI\">\n        <text variable=\"DOI\" prefix=\"https://doi.org/\"/>\n      </if>\n      <else-if variable=\"URL\">\n        <text variable=\"URL\"/>\n      </else-if>\n    </choose>\n    <text macro=\"accessed\" prefix=\" \"/>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\" \">\n      <group delimiter=\", \">\n        <text variable=\"publisher\"/>\n        <text variable=\"publisher-place\"/>\n      </group>\n      <text macro=\"year-date\"/>\n    </group>\n  </macro>\n  <citation disambiguate-add-year-suffix=\"true\" collapse=\"year\" year-suffix-delimiter=\", \" after-collapse-delimiter=\"; \" et-al-min=\"4\" et-al-use-first=\"1\" delimiter-precedes-last=\"never\">\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\", \">\n        <group delimiter=\" \">\n          <text macro=\"author-citation\"/>\n          <text macro=\"year-date\"/>\n        </group>\n        <group delimiter=\" \">\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </group>\n    </layout>\n  </citation>\n  <bibliography entry-spacing=\"1\" line-spacing=\"1\" delimiter-precedes-last=\"never\">\n    <sort>\n      <key macro=\"responsibility\"/>\n      <key macro=\"year-date\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout suffix=\".\">\n      <group delimiter=\", \">\n        <text macro=\"responsibility\"/>\n        <choose>\n          <if type=\"book report thesis\" match=\"any\">\n            <group delimiter=\", \">\n              <text variable=\"title\" font-style=\"italic\"/>\n              <group delimiter=\" \">\n                <text variable=\"genre\"/>\n                <text variable=\"number\"/>\n              </group>\n              <text macro=\"publisher\"/>\n            </group>\n          </if>\n          <else-if type=\"paper-conference chapter\" match=\"any\">\n            <group delimiter=\". \">\n              <text variable=\"title\"/>\n              <group delimiter=\", \">\n                <group delimiter=\" \">\n                  <text term=\"in\"/>\n                  <choose>\n                    <if variable=\"container-title\">\n                      <text variable=\"container-title\" font-style=\"italic\"/>\n                    </if>\n                    <else>\n                      <text variable=\"event\" font-style=\"italic\"/>\n                    </else>\n                  </choose>\n                </group>\n                <text macro=\"container-responsibility\"/>\n              </group>\n              <group delimiter=\", \">\n                <text macro=\"publisher\"/>\n                <text macro=\"page\"/>\n              </group>\n            </group>\n          </else-if>\n          <else-if type=\"article-journal article-magazine article-newspaper\" match=\"any\">\n            <group delimiter=\", \">\n              <text variable=\"title\"/>\n              <group delimiter=\" \">\n                <text term=\"in\"/>\n                <text variable=\"container-title\" quotes=\"true\"/>\n              </group>\n              <group delimiter=\" \">\n                <number text-case=\"uppercase\" variable=\"volume\" form=\"roman\"/>\n                <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n              </group>\n              <text macro=\"issue\"/>\n              <text macro=\"page\"/>\n            </group>\n          </else-if>\n          <else-if type=\"webpage post-weblog post\" match=\"any\">\n            <group delimiter=\", \">\n              <text variable=\"title\"/>\n              <text variable=\"container-title\"/>\n              <text macro=\"net-link\"/>\n            </group>\n          </else-if>\n          <else>\n            <group delimiter=\". \">\n              <text variable=\"title\"/>\n              <group delimiter=\", \">\n                <text macro=\"publisher\"/>\n                <text variable=\"volume\"/>\n                <text macro=\"page\"/>\n              </group>\n            </group>\n          </else>\n        </choose>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"