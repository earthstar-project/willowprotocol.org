"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\" default-locale=\"en-GB\">\n  <!-- This style was edited with the Visual CSL Editor (http://editor.citationstyles.org/visualEditor/) -->\n  <info>\n    <title>Nottingham Trent University Library - Harvard</title>\n    <title-short>NTU Library - Harvard</title-short>\n    <id>http://www.zotero.org/styles/nottingham-trent-university-library-harvard</id>\n    <link href=\"http://www.zotero.org/styles/nottingham-trent-university-library-harvard\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/harvard-anglia-ruskin-university\" rel=\"template\"/>\n    <link href=\"https://www.ntu.ac.uk/m/library/referencing-made-easy\" rel=\"documentation\"/>\n    <author>\n      <name>Richard Cross</name>\n      <email>richard.cross@ntu.ac.uk</email>\n      <uri>https://www.ntu.ac.uk/staff-profiles/library/richard-cross</uri>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"generic-base\"/>\n    <summary>NTU Library Harvard</summary>\n    <updated>2018-05-18T13:02:41+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale>\n    <terms>\n      <term name=\"post-weblog\">online blog</term>\n    </terms>\n  </locale>\n  <macro name=\"editor\">\n    <names variable=\"editor\" delimiter=\", \">\n      <name et-al-use-last=\"true\" initialize-with=\". \" name-as-sort-order=\"all\"/>\n      <label form=\"short\" text-case=\"lowercase\" prefix=\", \"/>\n    </names>\n  </macro>\n  <macro name=\"anon\">\n    <text term=\"anonymous\" form=\"short\" text-case=\"capitalize-first\" strip-periods=\"true\"/>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name delimiter-precedes-last=\"never\" initialize-with=\".\" name-as-sort-order=\"all\"/>\n      <label form=\"short\" text-case=\"lowercase\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text macro=\"anon\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" delimiter-precedes-last=\"never\" initialize-with=\". \"/>\n      <substitute>\n        <names variable=\"editor\" delimiter=\"; \"/>\n        <names variable=\"translator\"/>\n        <text macro=\"anon\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <choose>\n      <if variable=\"URL\" match=\"any\">\n        <group prefix=\" \">\n          <text value=\"Available at:\" suffix=\" \"/>\n          <text variable=\"URL\"/>\n        </group>\n      </if>\n      <else-if match=\"any\" variable=\"DOI\">\n        <text variable=\"DOI\"/>\n      </else-if>\n    </choose>\n    <choose>\n      <if match=\"any\" variable=\"URL\">\n        <choose>\n          <if match=\"all\" is-uncertain-date=\"accessed\">\n            <text value=\"Access date not recorded\" text-case=\"sentence\" prefix=\" [\" suffix=\"]\"/>\n          </if>\n          <else>\n            <group prefix=\" [\" suffix=\"]\">\n              <text value=\"Accessed \"/>\n              <date variable=\"accessed\">\n                <date-part name=\"day\"/>\n                <date-part name=\"month\" prefix=\" \"/>\n                <date-part name=\"year\" prefix=\" \"/>\n              </date>\n            </group>\n          </else>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"bill book graphic legal_case legislation motion_picture report song thesis\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </if>\n      <else>\n        <text variable=\"title\" text-case=\"capitalize-first\"/>\n      </else>\n    </choose>\n    <choose>\n      <if type=\"book chapter\" match=\"any\">\n        <choose>\n          <if match=\"any\" variable=\"URL\">\n            <text value=\" [eBook]\"/>\n          </if>\n        </choose>\n      </if>\n    </choose>\n    <choose>\n      <if type=\"post-weblog\" variable=\"URL\" match=\"all\">\n        <text term=\"post-weblog\" prefix=\" [\" suffix=\"]\"/>\n      </if>\n      <else-if type=\"report webpage paper-conference article article-journal article-magazine article-newspaper patent post-weblog bill\" match=\"any\">\n        <choose>\n          <if match=\"any\" variable=\"URL\">\n            <text term=\"online\" prefix=\" [\" suffix=\"]\"/>\n          </if>\n        </choose>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\": \">\n      <text variable=\"publisher-place\"/>\n      <text variable=\"publisher\"/>\n    </group>\n    <choose>\n      <if type=\"chapter\" match=\"any\">\n        <date date-parts=\"year\" form=\"text\" variable=\"issued\" prefix=\", \"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"year-date\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\" suffix=\".\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"pages\">\n    <group>\n      <label variable=\"page\" form=\"short\" suffix=\" \"/>\n      <text variable=\"page\"/>\n    </group>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" disambiguate-add-names=\"true\" disambiguate-add-givenname=\"true\">\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\", \">\n        <group delimiter=\" \">\n          <text macro=\"author-short\"/>\n          <text macro=\"year-date\"/>\n        </group>\n        <group>\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </group>\n    </layout>\n  </citation>\n  <bibliography hanging-indent=\"true\" et-al-min=\"4\" et-al-use-first=\"1\">\n    <sort>\n      <key macro=\"author\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout>\n      <text macro=\"author\" suffix=\",\"/>\n      <date variable=\"issued\" prefix=\" \" suffix=\".\">\n        <date-part name=\"year\"/>\n      </date>\n      <choose>\n        <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n          <group delimiter=\" \" prefix=\" \" suffix=\".\">\n            <text macro=\"title\"/>\n            <text macro=\"edition\"/>\n            <text macro=\"editor\"/>\n          </group>\n          <text prefix=\" \" suffix=\".\" macro=\"publisher\"/>\n        </if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <text macro=\"title\" prefix=\" \" suffix=\".\"/>\n          <group prefix=\" \" delimiter=\" \">\n            <text term=\"in\" text-case=\"capitalize-first\" suffix=\":\"/>\n            <text macro=\"editor\"/>\n            <text variable=\"container-title\" font-style=\"italic\" suffix=\".\"/>\n            <text variable=\"collection-title\" suffix=\".\"/>\n            <text variable=\"event\" suffix=\".\"/>\n            <group suffix=\".\" delimiter=\", \">\n              <text macro=\"publisher\" prefix=\" \"/>\n              <text macro=\"pages\"/>\n            </group>\n          </group>\n        </else-if>\n        <else-if type=\"thesis\">\n          <group prefix=\" \" suffix=\".\" delimiter=\". \">\n            <text macro=\"title\"/>\n            <text variable=\"genre\"/>\n            <text macro=\"publisher\"/>\n          </group>\n        </else-if>\n        <else-if type=\"article\" match=\"any\">\n          <group>\n            <choose>\n              <if match=\"any\" variable=\"DOI URL\"/>\n              <else>\n                <text variable=\"page\"/>\n              </else>\n            </choose>\n          </group>\n        </else-if>\n        <else>\n          <group suffix=\".\">\n            <text macro=\"title\" prefix=\" \"/>\n            <text macro=\"editor\" prefix=\" \"/>\n          </group>\n          <group prefix=\" \" suffix=\".\">\n            <text variable=\"container-title\" font-style=\"italic\"/>\n            <group prefix=\", \">\n              <text variable=\"volume\"/>\n              <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n            </group>\n            <group prefix=\", \">\n              <label variable=\"page\" form=\"short\"/>\n              <text variable=\"page\"/>\n            </group>\n          </group>\n        </else>\n      </choose>\n      <text prefix=\" \" macro=\"access\" suffix=\".\"/>\n    </layout>\n  </bibliography>\n</style>\n"