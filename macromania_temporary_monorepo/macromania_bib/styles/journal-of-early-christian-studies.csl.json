"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"note\" version=\"1.0\" demote-non-dropping-particle=\"display-and-sort\" page-range-format=\"chicago\" default-locale=\"en-US\">\n  <info>\n    <title>Journal of Early Christian Studies</title>\n    <title-short>JECS</title-short>\n    <id>http://www.zotero.org/styles/journal-of-early-christian-studies</id>\n    <link href=\"http://www.zotero.org/styles/journal-of-early-christian-studies\" rel=\"self\"/>\n    <link href=\"https://www.press.jhu.edu/journals/journal-early-christian-studies/author-guidelines\" rel=\"documentation\"/>\n    <author>\n      <name>Carl Johan Berglund</name>\n      <email>cajo@cajo.nu</email>\n    </author>\n    <category citation-format=\"note\"/>\n    <category field=\"theology\"/>\n    <issn>1067-6341</issn>\n    <eissn>1086-3184</eissn>\n    <summary>Journal of Early Christian Studies</summary>\n    <updated>2018-03-01T21:48:00+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"en\">\n    <terms>\n      <term name=\"editor\" form=\"short\">\n        <single>ed.</single>\n        <multiple>eds.</multiple>\n      </term>\n      <term name=\"translator\" form=\"short\">trans.</term>\n      <term name=\"page\" form=\"short\">\n        <single>p.</single>\n        <multiple>pp.</multiple>\n      </term>\n      <term name=\"in\">in</term>\n      <term name=\"at\">here</term>\n    </terms>\n  </locale>\n  <macro name=\"contributors-short\">\n    <group delimiter=\" \">\n      <names variable=\"author\">\n        <name form=\"short\" and=\"text\" delimiter=\", \"/>\n        <substitute>\n          <names variable=\"editor\"/>\n          <names variable=\"translator\"/>\n        </substitute>\n      </names>\n      <text macro=\"recipient-short\"/>\n    </group>\n  </macro>\n  <macro name=\"recipient-short\">\n    <names variable=\"recipient\">\n      <label form=\"short\" text-case=\"lowercase\" suffix=\" \"/>\n      <name form=\"short\" and=\"text\" delimiter=\", \"/>\n    </names>\n  </macro>\n  <macro name=\"title-short\">\n    <choose>\n      <if type=\"book\">\n        <text variable=\"title\" text-case=\"title\" form=\"short\" font-style=\"italic\"/>\n      </if>\n      <else>\n        <text variable=\"title\" text-case=\"title\" form=\"short\" quotes=\"true\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"contributors-note\">\n    <group delimiter=\" \">\n      <names variable=\"author\">\n        <name and=\"text\" sort-separator=\", \" delimiter=\", \"/>\n        <label form=\"short\" prefix=\", \"/>\n        <substitute>\n          <names variable=\"editor\"/>\n          <names variable=\"translator\"/>\n        </substitute>\n      </names>\n    </group>\n  </macro>\n  <macro name=\"title-note\">\n    <choose>\n      <if variable=\"title\" match=\"none\">\n        <text variable=\"genre\"/>\n      </if>\n      <else-if type=\"book\">\n        <text variable=\"title\" text-case=\"title\" font-style=\"italic\"/>\n        <group delimiter=\" \" prefix=\", \">\n          <text term=\"version\"/>\n          <text variable=\"version\"/>\n        </group>\n      </else-if>\n      <else-if variable=\"reviewed-author\">\n        <text variable=\"title\" font-style=\"italic\" prefix=\"review of \"/>\n      </else-if>\n      <else>\n        <text variable=\"title\" text-case=\"title\" quotes=\"true\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"secondary-contributors-note\">\n    <choose>\n      <if type=\"chapter paper-conference\" match=\"none\">\n        <group delimiter=\", \">\n          <names variable=\"editor\" delimiter=\", \">\n            <label form=\"short\" suffix=\" \"/>\n            <name and=\"text\" delimiter=\", \"/>\n          </names>\n          <names variable=\"translator\" delimiter=\", \">\n            <label form=\"short\" suffix=\" \"/>\n            <name and=\"text\" delimiter=\", \"/>\n          </names>\n        </group>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"container-contributors-note\">\n    <choose>\n      <if type=\"chapter paper-conference\" match=\"any\">\n        <group delimiter=\"; \">\n          <choose>\n            <if variable=\"author\">\n              <names variable=\"editor\" delimiter=\", \">\n                <label form=\"short\" suffix=\" \"/>\n                <name and=\"text\" delimiter=\", \"/>\n              </names>\n            </if>\n          </choose>\n          <choose>\n            <if variable=\"author editor\" match=\"any\">\n              <names variable=\"translator\" delimiter=\", \">\n                <label form=\"short\" suffix=\" \"/>\n                <name and=\"text\" delimiter=\", \"/>\n              </names>\n            </if>\n          </choose>\n        </group>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"description-note\">\n    <choose>\n      <if type=\"thesis\">\n        <text variable=\"genre\" prefix=\"(\" suffix=\")\"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"container-title-note\">\n    <choose>\n      <if type=\"article-journal\">\n        <text variable=\"container-title\" font-style=\"italic\" text-case=\"title\"/>\n      </if>\n      <else-if type=\"chapter paper-conference \" match=\"any\">\n        <text term=\"in\" suffix=\" \"/>\n        <text variable=\"container-title\" font-style=\"italic\" text-case=\"title\"/>\n        <text macro=\"container-contributors-note\" prefix=\", \"/>\n      </else-if>\n      <else>\n        <text variable=\"container-title\" font-style=\"italic\" text-case=\"title\"/>\n        <text macro=\"container-contributors-note\" prefix=\", \"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"collection\">\n    <group delimiter=\" \">\n      <text variable=\"collection-title\"/>\n      <text variable=\"collection-number\"/>\n    </group>\n  </macro>\n  <macro name=\"edition-note\">\n    <choose>\n      <if type=\"book chapter paper-conference\" match=\"any\">\n        <choose>\n          <if is-numeric=\"edition\">\n            <group delimiter=\" \">\n              <number variable=\"edition\" form=\"ordinal\"/>\n              <text term=\"edition\" form=\"short\"/>\n            </group>\n          </if>\n          <else>\n            <text variable=\"edition\" suffix=\".\"/>\n          </else>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"issue-note\">\n    <choose>\n      <if type=\"article-journal\">\n        <text variable=\"volume\" prefix=\" \"/>\n        <text variable=\"issue\" prefix=\"/\"/>\n        <text macro=\"issued\" prefix=\" (\" suffix=\")\"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"publisher-note\">\n    <choose>\n      <if type=\"article-journal\" match=\"none\">\n        <group delimiter=\": \">\n          <text variable=\"publisher-place\"/>\n          <text variable=\"publisher\"/>\n        </group>\n        <text macro=\"issued\" prefix=\", \"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"issued\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"pages\">\n    <choose>\n      <if type=\"article-journal\">\n        <text variable=\"page\" prefix=\": \"/>\n        <group prefix=\", \" delimiter=\" \">\n          <text term=\"at\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </if>\n      <else-if type=\"chapter\">\n        <text variable=\"page\" prefix=\", \"/>\n        <group prefix=\", \" delimiter=\" \">\n          <text term=\"at\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </else-if>\n      <else>\n        <text variable=\"locator\" prefix=\", \"/>\n      </else>\n    </choose>\n  </macro>\n  <citation et-al-min=\"4\" et-al-use-first=\"1\" disambiguate-add-names=\"true\">\n    <layout suffix=\".\" delimiter=\"; \">\n      <choose>\n        <if position=\"ibid ibid-with-locator subsequent\" match=\"any\">\n          <group delimiter=\", \">\n            <text macro=\"contributors-short\"/>\n            <text macro=\"title-short\"/>\n            <text variable=\"locator\"/>\n          </group>\n        </if>\n        <else>\n          <group delimiter=\" \">\n            <group delimiter=\", \">\n              <text macro=\"contributors-note\"/>\n              <text macro=\"title-note\"/>\n              <text macro=\"description-note\"/>\n              <text macro=\"secondary-contributors-note\"/>\n              <text macro=\"container-title-note\"/>\n              <text macro=\"edition-note\"/>\n              <text macro=\"collection\"/>\n            </group>\n            <group delimiter=\", \">\n              <text macro=\"issue-note\"/>\n              <text macro=\"publisher-note\" prefix=\"(\" suffix=\")\"/>\n            </group>\n          </group>\n          <text macro=\"pages\"/>\n        </else>\n      </choose>\n    </layout>\n  </citation>\n</style>\n"