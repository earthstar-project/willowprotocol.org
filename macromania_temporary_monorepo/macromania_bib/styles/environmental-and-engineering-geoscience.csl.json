"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\" default-locale=\"en-US\">\n  <info>\n    <title>Environmental &amp; Engineering Geoscience</title>\n    <title-short>EEG</title-short>\n    <id>http://www.zotero.org/styles/environmental-and-engineering-geoscience</id>\n    <link href=\"http://www.zotero.org/styles/environmental-and-engineering-geoscience\" rel=\"self\"/>\n    <link href=\"https://aeg.memberclicks.net/assets/docs/Publications/EEG-Author-Instructions.pdf\" rel=\"documentation\"/>\n    <author>\n      <name>Aditi Bhaskar</name>\n    </author>\n    <contributor>\n      <name>Sebastian Karcher</name>\n    </contributor>\n    <contributor>\n      <name>Rintze Zelle</name>\n    </contributor>\n    <contributor>\n      <name>Patrick O'Brien</name>\n    </contributor>\n    <category citation-format=\"author-date\"/>\n    <category field=\"geology\"/>\n    <issn>1078-7275</issn>\n    <summary>Style based on guidelines from January, 2021.</summary>\n    <updated>2023-04-22T13:06:33+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <label variable=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"editor-translator\">\n    <names variable=\"editor translator\" prefix=\"(\" suffix=\")\" delimiter=\", \">\n      <name and=\"symbol\" initialize-with=\". \" delimiter=\", \"/>\n      <label text-case=\"capitalize-first\" prefix=\" (\" suffix=\")\"/>\n    </names>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\" font-variant=\"small-caps\">\n      <name delimiter=\"; \" and=\"text\" delimiter-precedes-last=\"always\" initialize-with=\".\" name-as-sort-order=\"all\"/>\n      <label form=\"short\" prefix=\" (\" suffix=\")\" text-case=\"capitalize-first\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"text\" delimiter=\", \" initialize-with=\".\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <choose>\n          <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n            <text variable=\"title\" form=\"short\" font-style=\"italic\"/>\n          </if>\n          <else>\n            <text variable=\"title\" form=\"short\" quotes=\"true\"/>\n          </else>\n        </choose>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\", \">\n      <text variable=\"publisher\"/>\n      <text variable=\"publisher-place\"/>\n    </group>\n  </macro>\n  <macro name=\"pages\">\n    <group delimiter=\" \">\n      <label variable=\"page\" form=\"short\"/>\n      <text variable=\"page\"/>\n    </group>\n  </macro>\n  <macro name=\"number-of-pages\">\n    <group delimiter=\" \">\n      <text variable=\"number-of-pages\"/>\n      <label plural=\"never\" variable=\"number-of-pages\" form=\"short\"/>\n    </group>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" disambiguate-add-names=\"true\" disambiguate-add-givenname=\"true\">\n    <sort>\n      <key macro=\"author\"/>\n      <key variable=\"issued\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\", \">\n        <text macro=\"author-short\"/>\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n        <group>\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\" prefix=\" \"/>\n        </group>\n      </group>\n    </layout>\n  </citation>\n  <bibliography hanging-indent=\"true\" et-al-min=\"15\" et-al-use-first=\"14\">\n    <sort>\n      <key macro=\"author-short\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout suffix=\".\">\n      <group delimiter=\", \">\n        <text macro=\"author\"/>\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n        <choose>\n          <if type=\"report\">\n            <group delimiter=\", \">\n              <group delimiter=\": \">\n                <text variable=\"title\" font-style=\"italic\" suffix=\":\"/>\n                <group delimiter=\" \">\n                  <text variable=\"genre\" prefix=\" \"/>\n                  <text variable=\"number\"/>\n                </group>\n              </group>\n              <text macro=\"number-of-pages\" prefix=\" \" suffix=\",\"/>\n            </group>\n          </if>\n          <else-if type=\"bill book graphic legal_case legislation motion_picture song\" match=\"any\">\n            <group delimiter=\": \">\n              <group delimiter=\", \" suffix=\":\">\n                <text variable=\"title\" text-case=\"title\"/>\n                <text macro=\"edition\"/>\n                <text macro=\"editor-translator\"/>\n              </group>\n              <group delimiter=\", \">\n                <text macro=\"publisher\"/>\n                <text macro=\"number-of-pages\"/>\n              </group>\n            </group>\n          </else-if>\n          <else-if type=\"chapter paper-conference\" match=\"any\">\n            <group delimiter=\". \">\n              <text variable=\"title\"/>\n              <group delimiter=\", \">\n                <group delimiter=\" \">\n                  <text term=\"in\" text-case=\"capitalize-first\" font-style=\"normal\"/>\n                  <names variable=\"editor translator\" delimiter=\", \">\n                    <name and=\"text\" initialize-with=\". \" name-as-sort-order=\"all\"/>\n                    <label text-case=\"capitalize-first\" prefix=\" (\" suffix=\")\"/>\n                  </names>\n                </group>\n                <text variable=\"container-title\"/>\n                <text variable=\"collection-title\"/>\n              </group>\n              <group delimiter=\", \">\n                <text macro=\"publisher\"/>\n                <text macro=\"pages\"/>\n              </group>\n            </group>\n          </else-if>\n          <else-if type=\"map\">\n            <text variable=\"title\"/>\n            <text variable=\"collection-title\" prefix=\": \"/>\n            <text variable=\"note\" prefix=\", scale \"/>\n          </else-if>\n          <else-if type=\"thesis\">\n            <group delimiter=\", \">\n              <text variable=\"title\" text-case=\"title\" font-style=\"italic\"/>\n              <group delimiter=\": \">\n                <text variable=\"publisher-place\" font-style=\"italic\"/>\n                <text variable=\"genre\"/>\n              </group>\n              <text macro=\"number-of-pages\"/>\n            </group>\n            <text variable=\"publisher\"/>\n          </else-if>\n          <else-if type=\"webpage post post-weblog\" match=\"any\">\n            <group delimiter=\", \">\n              <group delimiter=\": \">\n                <text variable=\"title\" text-case=\"title\"/>\n                <text variable=\"genre\"/>\n              </group>\n              <group delimiter=\" \">\n                <text term=\"available at\"/>\n                <text variable=\"URL\"/>\n              </group>\n            </group>\n          </else-if>\n          <else>\n            <group>\n              <text variable=\"title\"/>\n              <text macro=\"editor-translator\" prefix=\" \"/>\n            </group>\n            <group delimiter=\", \">\n              <text variable=\"container-title\" suffix=\",\" font-style=\"italic\"/>\n              <group delimiter=\" \" prefix=\" \">\n                <label text-case=\"capitalize-first\" variable=\"volume\" form=\"short\"/>\n                <text variable=\"volume\"/>\n              </group>\n              <group delimiter=\" \">\n                <label text-case=\"capitalize-first\" variable=\"issue\" form=\"short\"/>\n                <text variable=\"issue\"/>\n              </group>\n              <text macro=\"pages\"/>\n            </group>\n          </else>\n        </choose>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"