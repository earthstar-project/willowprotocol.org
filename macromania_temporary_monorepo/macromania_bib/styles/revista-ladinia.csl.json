"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" page-range-format=\"expanded\">\n  <info>\n    <title>Revista Ladinia</title>\n    <title-short>LADINIA</title-short>\n    <id>http://www.zotero.org/styles/revista-ladinia</id>\n    <link href=\"http://www.zotero.org/styles/revista-ladinia\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/apa\" rel=\"template\"/>\n    <link href=\"https://micura.it/la/ativites/ladinia/style-sheet\" rel=\"documentation\"/>\n    <author>\n      <name>Samuel Frontull</name>\n      <email>samuel.frontull@uibk.ac.at</email>\n    </author>\n    <author>\n      <name>Paolo Anvidalfarei</name>\n      <email>paolo@micura.it</email>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"linguistics\"/>\n    <issn>1124-1004</issn>\n    <updated>2022-05-11T09:51:15+01:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"it\">\n    <terms>\n      <term name=\"open-quote\">“</term>\n      <term name=\"close-quote\">”</term>\n      <term name=\"and others\"/>\n      <term name=\"no date\">s.a.</term>\n      <term name=\"no-place\">s.l.</term>\n      <term name=\"anonymous\">N.N.</term>\n      <term name=\"editor\">\n        <single>ed.</single>\n        <multiple>eds.</multiple>\n      </term>\n    </terms>\n  </locale>\n  <locale xml:lang=\"de\">\n    <terms>\n      <term name=\"open-quote\">“</term>\n      <term name=\"close-quote\">”</term>\n      <term name=\"and others\"/>\n      <term name=\"no date\">s.a.</term>\n      <term name=\"no-place\">s.l.</term>\n      <term name=\"anonymous\">N.N.</term>\n      <term name=\"editor\">\n        <single>ed.</single>\n        <multiple>eds.</multiple>\n      </term>\n    </terms>\n  </locale>\n  <locale xml:lang=\"en\">\n    <terms>\n      <term name=\"open-quote\">“</term>\n      <term name=\"close-quote\">”</term>\n      <term name=\"and others\"/>\n      <term name=\"no date\">s.a.</term>\n      <term name=\"no-place\">s.l.</term>\n      <term name=\"anonymous\">N.N.</term>\n      <term name=\"editor\">\n        <single>ed.</single>\n        <multiple>eds.</multiple>\n      </term>\n    </terms>\n  </locale>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name name-as-sort-order=\"all\" delimiter=\"/\" form=\"short\">\n        <name-part name=\"family\" font-variant=\"small-caps\"/>\n      </name>\n      <et-al term=\"and others\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text macro=\"anonymous\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"anonymous\">\n    <text term=\"anonymous\"/>\n  </macro>\n  <macro name=\"author-bibliography\">\n    <names variable=\"author\">\n      <name name-as-sort-order=\"all\" delimiter=\"/\">\n        <name-part name=\"family\" font-variant=\"small-caps\"/>\n      </name>\n      <label prefix=\" (\" suffix=\")\"/>\n      <et-al/>\n      <substitute>\n        <names variable=\"editor translator\"/>\n        <text macro=\"anonymous\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor translator\" delimiter=\", \">\n      <name name-as-sort-order=\"all\" delimiter=\"/\">\n        <name-part name=\"family\" font-variant=\"small-caps\"/>\n      </name>\n      <label prefix=\" (\" suffix=\")\"/>\n    </names>\n  </macro>\n  <macro name=\"issued-year\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher-place\">\n    <choose>\n      <if variable=\"publisher-place\">\n        <text variable=\"publisher-place\"/>\n      </if>\n      <else-if type=\"book\" match=\"any\">\n        <text term=\"no-place\"/>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"place-year\">\n    <group delimiter=\" \">\n      <text macro=\"publisher-place\"/>\n      <text macro=\"issued-year\"/>\n    </group>\n  </macro>\n  <macro name=\"container\">\n    <choose>\n      <if type=\"book\">\n        <group delimiter=\", \">\n          <text macro=\"editor\"/>\n          <text variable=\"container-title\"/>\n        </group>\n      </if>\n      <else>\n        <group delimiter=\": \">\n          <text term=\"in\"/>\n          <group delimiter=\", \">\n            <text macro=\"editor\"/>\n            <choose>\n              <if type=\"chapter\">\n                <text variable=\"container-title\"/>\n              </if>\n              <else>\n                <text variable=\"container-title\" quotes=\"true\"/>\n              </else>\n            </choose>\n          </group>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"volume\">\n    <text variable=\"volume\"/>\n  </macro>\n  <macro name=\"page\">\n    <text variable=\"page\"/>\n  </macro>\n  <citation et-al-min=\"4\" et-al-use-first=\"1\" initialize-with=\".\" disambiguate-add-givenname=\"true\" disambiguate-add-year-suffix=\"true\" collapse=\"year\">\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"issued-year\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\", \">\n      <group delimiter=\" \">\n        <text macro=\"author\"/>\n        <text macro=\"issued-year\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography et-al-min=\"4\" et-al-use-first=\"1\">\n    <sort>\n      <key macro=\"author-bibliography\"/>\n      <key macro=\"issued-year\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout suffix=\".\">\n      <text macro=\"author-bibliography\" suffix=\": \"/>\n      <group delimiter=\", \">\n        <text variable=\"title\" font-style=\"italic\"/>\n        <text macro=\"container\"/>\n        <text macro=\"volume\"/>\n        <text macro=\"place-year\"/>\n        <text macro=\"page\"/>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"