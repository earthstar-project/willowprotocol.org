"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\" default-locale=\"en-US\">\n  <info>\n    <title>PeerJ</title>\n    <id>http://www.zotero.org/styles/peerj</id>\n    <link href=\"http://www.zotero.org/styles/peerj\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/plant-pathology\" rel=\"template\"/>\n    <link href=\"https://peerj.com/about/author-instructions/\" rel=\"documentation\"/>\n    <author>\n      <name>Burnmeister</name>\n      <email>sybrandvs@yahoo.com</email>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"biology\"/>\n    <eissn>2167-8359</eissn>\n    <summary>style for the journal PeerJ</summary>\n    <updated>2015-06-26T10:51:31+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name delimiter-precedes-et-al=\"never\" initialize-with=\"\" name-as-sort-order=\"all\" sort-separator=\" \"/>\n      <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text macro=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"symbol\" initialize-with=\"\"/>\n      <et-al font-style=\"normal\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <choose>\n          <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n            <text variable=\"title\" form=\"short\" font-style=\"italic\"/>\n          </if>\n          <else>\n            <text variable=\"title\" form=\"short\" quotes=\"true\"/>\n          </else>\n        </choose>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\": \">\n      <text variable=\"publisher-place\"/>\n      <text variable=\"publisher\"/>\n    </group>\n  </macro>\n  <citation delimiter-precedes-last=\"never\" et-al-min=\"4\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" collapse=\"year-suffix\" year-suffix-delimiter=\",\">\n    <sort>\n      <key variable=\"issued\"/>\n      <key variable=\"author\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\", \">\n        <text macro=\"author-short\"/>\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n        <group>\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\" prefix=\" \"/>\n        </group>\n      </group>\n    </layout>\n  </citation>\n  <bibliography sort-separator=\"\" entry-spacing=\"0\" line-spacing=\"2\" hanging-indent=\"true\">\n    <sort>\n      <key macro=\"author-short\"/>\n      <key variable=\"issued\"/>\n    </sort>\n    <layout>\n      <text macro=\"author\" suffix=\".\"/>\n      <date variable=\"issued\" prefix=\" \" suffix=\".\">\n        <date-part name=\"year\"/>\n      </date>\n      <choose>\n        <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n          <group suffix=\".\">\n            <text macro=\"title\" prefix=\" \"/>\n          </group>\n          <text prefix=\" \" suffix=\".\" macro=\"publisher\"/>\n        </if>\n        <else-if type=\"thesis\" match=\"any\">\n          <group suffix=\".\">\n            <text macro=\"title\" prefix=\" \" suffix=\".\"/>\n            <text variable=\"genre\" prefix=\" \" suffix=\" Thesis.\"/>\n            <text prefix=\" \" macro=\"publisher\"/>\n          </group>\n        </else-if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <text macro=\"title\" prefix=\" \"/>\n          <group prefix=\".\">\n            <group prefix=\" In:\" suffix=\"\">\n              <names variable=\"editor translator\" delimiter=\", \" prefix=\" \">\n                <name delimiter-precedes-last=\"never\" initialize-with=\"\" name-as-sort-order=\"all\" sort-separator=\" \"/>\n                <label form=\"short\" text-case=\"lowercase\" prefix=\" \"/>\n              </names>\n              <text variable=\"container-title\" font-style=\"italic\" prefix=\" \" suffix=\".\"/>\n              <text variable=\"collection-title\" prefix=\" \" suffix=\".\"/>\n              <group suffix=\".\">\n                <text macro=\"publisher\" prefix=\" \" suffix=\",\"/>\n                <text variable=\"page\" prefix=\" \"/>\n              </group>\n            </group>\n          </group>\n        </else-if>\n        <else-if type=\"post-weblog webpage\" match=\"any\">\n          <group>\n            <text macro=\"title\"/>\n            <group>\n              <text term=\"available at\" text-case=\"capitalize-first\" font-style=\"italic\" prefix=\". \" suffix=\" \"/>\n              <text variable=\"URL\" font-style=\"italic\"/>\n            </group>\n            <group delimiter=\" \" prefix=\" (\" suffix=\").\">\n              <text term=\"accessed\"/>\n              <date form=\"text\" variable=\"accessed\"/>\n            </group>\n          </group>\n        </else-if>\n        <else>\n          <group suffix=\".\">\n            <text macro=\"title\" prefix=\" \"/>\n          </group>\n          <group prefix=\" \" suffix=\".\">\n            <text variable=\"container-title\" font-style=\"italic\"/>\n            <group prefix=\" \">\n              <text variable=\"volume\" font-weight=\"normal\"/>\n            </group>\n            <text variable=\"page\" prefix=\":\"/>\n          </group>\n        </else>\n      </choose>\n      <text variable=\"DOI\" prefix=\". DOI: \" suffix=\".\"/>\n    </layout>\n  </bibliography>\n</style>\n"