"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\">\n  <info>\n    <title>Springer - MathPhys (author-date)</title>\n    <id>http://www.zotero.org/styles/springer-mathphys-author-date</id>\n    <link href=\"http://www.zotero.org/styles/springer-mathphys-author-date\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/springer-lecture-notes-in-computer-science\" rel=\"template\"/>\n    <link href=\"http://www.springer.com/cda/content/document/cda_downloaddocument/manuscript-guidelines-1.0.pdf\" rel=\"documentation\"/>\n    <link href=\"http://www.springer.com/cda/content/document/cda_downloaddocument/Key_Style_Points_1.0.pdf\" rel=\"documentation\"/>\n    <author>\n      <name>Charles Parnot</name>\n      <email>charles.parnot@gmail.com</email>\n      <uri>http://twitter.com/cparnot</uri>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"generic-base\"/>\n    <category field=\"science\"/>\n    <summary>This style is used by a number of Springer publications.</summary>\n    <updated>2019-09-25T14:52:06+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"author-short-in-citation\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"text\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-in-citation\">\n    <names variable=\"author\">\n      <name sort-separator=\" \" initialize-with=\"\" name-as-sort-order=\"all\" delimiter=\", \" delimiter-precedes-last=\"always\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"year-in-citation\">\n    <date variable=\"issued\">\n      <date-part name=\"year\"/>\n    </date>\n  </macro>\n  <macro name=\"issued-sort\">\n    <choose>\n      <if type=\"article-journal bill book chapter graphic legal_case legislation motion_picture paper-conference report song\" match=\"none\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n          <date-part name=\"month\"/>\n          <date-part name=\"day\"/>\n        </date>\n      </if>\n      <else>\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"author\">\n    <group>\n      <names variable=\"author\">\n        <name name-as-sort-order=\"all\" sort-separator=\", \" initialize-with=\".\" delimiter=\", \" delimiter-precedes-last=\"always\"/>\n        <label form=\"short\" prefix=\" \" text-case=\"lowercase\" strip-periods=\"true\"/>\n        <substitute>\n          <names variable=\"editor\"/>\n        </substitute>\n      </names>\n    </group>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\">\n      <name initialize-with=\".\" delimiter=\", \" and=\"text\" name-as-sort-order=\"all\" sort-separator=\", \"/>\n      <label form=\"short\" prefix=\" (\" text-case=\"lowercase\" suffix=\")\"/>\n    </names>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n        <text variable=\"title\"/>\n      </if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <text variable=\"publisher\"/>\n    <text variable=\"publisher-place\" prefix=\", \"/>\n  </macro>\n  <macro name=\"page\">\n    <group>\n      <label variable=\"page\" form=\"short\" suffix=\" \"/>\n      <text variable=\"page\"/>\n    </group>\n  </macro>\n  <macro name=\"access\">\n    <text variable=\"DOI\" prefix=\"https://doi.org/\"/>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\">\n    <sort>\n      <key macro=\"author-in-citation\"/>\n      <key variable=\"issued\" sort=\"descending\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\" \">\n        <text macro=\"author-short-in-citation\"/>\n        <text macro=\"year-in-citation\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography entry-spacing=\"0\">\n    <sort>\n      <key macro=\"author-in-citation\"/>\n      <key macro=\"issued-sort\" sort=\"ascending\"/>\n    </sort>\n    <layout>\n      <text macro=\"author\" prefix=\" \" suffix=\": \"/>\n      <choose>\n        <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n          <group delimiter=\" \">\n            <text macro=\"title\" suffix=\".\"/>\n            <text macro=\"publisher\"/>\n            <date variable=\"issued\">\n              <date-part name=\"year\" prefix=\"(\" suffix=\")\"/>\n            </date>\n          </group>\n        </if>\n        <else-if type=\"article-journal\">\n          <group delimiter=\" \">\n            <text macro=\"title\" suffix=\".\"/>\n            <text variable=\"container-title\" form=\"short\" suffix=\".\"/>\n            <text variable=\"volume\" suffix=\",\"/>\n            <text variable=\"page\"/>\n            <date variable=\"issued\">\n              <date-part name=\"year\" prefix=\"(\" suffix=\")\"/>\n            </date>\n          </group>\n          <text macro=\"access\" prefix=\". \"/>\n        </else-if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <group delimiter=\" \">\n            <text macro=\"title\" suffix=\".\"/>\n            <choose>\n              <if variable=\"container-title\">\n                <text term=\"in\" text-case=\"capitalize-first\" suffix=\": \"/>\n                <text macro=\"editor\" suffix=\" \"/>\n                <group delimiter=\". \">\n                  <text variable=\"container-title\"/>\n                  <text macro=\"page\"/>\n                  <text macro=\"publisher\"/>\n                </group>\n              </if>\n              <else>\n                <text term=\"presented at\" text-case=\"capitalize-first\" suffix=\" \"/>\n                <text variable=\"event\"/>\n                <text variable=\"event-place\" prefix=\", \"/>\n                <date variable=\"issued\" prefix=\" \">\n                  <date-part name=\"month\" suffix=\" \"/>\n                  <date-part name=\"day\" suffix=\" \"/>\n                </date>\n              </else>\n            </choose>\n            <date variable=\"issued\">\n              <date-part name=\"year\" prefix=\"(\" suffix=\")\"/>\n            </date>\n          </group>\n        </else-if>\n        <else-if type=\"webpage\">\n          <group delimiter=\", \">\n            <text macro=\"title\"/>\n            <text variable=\"URL\"/>\n          </group>\n        </else-if>\n        <else-if type=\"speech\">\n          <group delimiter=\" \">\n            <text macro=\"title\" suffix=\".\"/>\n            <text variable=\"event\" suffix=\".\"/>\n            <text variable=\"event-place\" prefix=\", \"/>\n            <date variable=\"issued\">\n              <date-part name=\"year\" prefix=\"(\" suffix=\")\"/>\n            </date>\n          </group>\n        </else-if>\n        <else>\n          <group delimiter=\", \">\n            <text macro=\"title\"/>\n            <text variable=\"URL\"/>\n            <date variable=\"issued\">\n              <date-part name=\"year\" prefix=\"(\" suffix=\")\"/>\n            </date>\n          </group>\n        </else>\n      </choose>\n    </layout>\n  </bibliography>\n</style>\n"