"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" version=\"1.0\" class=\"note\" demote-non-dropping-particle=\"never\" default-locale=\"fr-FR\" page-range-format=\"expanded\">\n  <info>\n    <title>Cahiers du Centre Gustave-Glotz (Français)</title>\n    <id>http://www.zotero.org/styles/cahiers-du-centre-gustave-glotz</id>\n    <link href=\"http://www.zotero.org/styles/cahiers-du-centre-gustave-glotz\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/revue-archeologique\" rel=\"template\"/>\n    <link href=\"http://www.anhima.fr/IMG/docx/normes-ccg-2013.docx\" rel=\"documentation\"/>\n    <author>\n      <name>Nicolas Monteix</name>\n      <email>nicolas.monteix@univ-rouen.fr</email>\n    </author>\n    <category citation-format=\"note\"/>\n    <category field=\"history\"/>\n    <category field=\"humanities\"/>\n    <issn>1016-9008</issn>\n    <summary>Feuille de style pour les Cahiers du Centre Gustave-Glotz. L'utilisation de 'in' pour les articles en langue étrangère doit être effectuée manuellement.</summary>\n    <updated>2017-02-14T14:52:58+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"fr\">\n    <terms>\n      <term name=\"editor\" form=\"short\">éd.</term>\n      <term name=\"in\">dans</term>\n      <term name=\"anonymous\">anonyme</term>\n      <term name=\"anonymous\" form=\"short\">anon.</term>\n      <term name=\"no date\">sans date</term>\n      <term name=\"no date\" form=\"short\">s.&#160;d.</term>\n      <term name=\"et-al\">et alii</term>\n      <term name=\"cited\">op. cit.</term>\n    </terms>\n  </locale>\n  <macro name=\"author\">\n    <names variable=\"author\" delimiter=\", \">\n      <name sort-separator=\", \" initialize-with=\".\" delimiter=\", \"/>\n      <et-al font-style=\"italic\"/>\n      <substitute>\n        <text macro=\"editor\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\" delimiter=\", \">\n      <name sort-separator=\", \" initialize-with=\".\" delimiter=\", \"/>\n      <et-al font-variant=\"normal\" font-style=\"italic\"/>\n      <label form=\"short\" prefix=\" (\" text-case=\"lowercase\" suffix=\")\"/>\n      <substitute>\n        <text macro=\"container-author\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"container-author\">\n    <names variable=\"container-author\" delimiter=\", \">\n      <name sort-separator=\", \" initialize-with=\".\" delimiter=\", \"/>\n      <et-al font-variant=\"normal\" font-style=\"italic\"/>\n    </names>\n  </macro>\n  <macro name=\"volume\">\n    <group>\n      <number variable=\"volume\" form=\"numeric\"/>\n    </group>\n  </macro>\n  <macro name=\"pages\">\n    <group delimiter=\"&#160;\">\n      <label variable=\"page\" form=\"short\"/>\n      <text variable=\"page\"/>\n    </group>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" delimiter=\", \"/>\n      <et-al font-variant=\"normal\" font-style=\"italic\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text variable=\"title-short\" font-style=\"italic\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <group>\n      <text term=\"accessed\" suffix=\" \"/>\n      <date variable=\"accessed\">\n        <date-part name=\"day\" suffix=\" \"/>\n        <date-part name=\"month\" suffix=\" \"/>\n        <date-part name=\"year\"/>\n      </date>\n    </group>\n  </macro>\n  <macro name=\"collection\">\n    <group prefix=\" (\" suffix=\")\" delimiter=\", \">\n      <text variable=\"collection-title\"/>\n      <text variable=\"collection-number\"/>\n    </group>\n  </macro>\n  <macro name=\"locator\">\n    <group delimiter=\"&#160;\">\n      <label variable=\"locator\" form=\"short\"/>\n      <text variable=\"locator\"/>\n    </group>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"book\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\" text-case=\"title\"/>\n      </if>\n      <else-if type=\"webpage\" match=\"any\">\n        <text variable=\"title\" text-case=\"title\"/>\n      </else-if>\n      <else-if variable=\"container-title\" match=\"none\">\n        <text variable=\"title\" font-style=\"italic\" text-case=\"title\"/>\n      </else-if>\n      <else>\n        <text variable=\"title\" text-case=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <text variable=\"publisher-place\"/>\n  </macro>\n  <macro name=\"year-date\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\" text-case=\"lowercase\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <citation et-al-min=\"4\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" collapse=\"year\">\n    <layout delimiter=\"&#160;; \">\n      <text macro=\"author-short\"/>\n      <text macro=\"year-date\" prefix=\"&#160;\"/>\n      <text macro=\"locator\" prefix=\", \"/>\n    </layout>\n  </citation>\n  <bibliography>\n    <sort>\n      <key macro=\"author\"/>\n      <key variable=\"issued\"/>\n      <key variable=\"page-first\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout suffix=\".\">\n      <group>\n        <group>\n          <choose>\n            <if variable=\"author\">\n              <names variable=\"author\">\n                <name form=\"short\" delimiter=\", \" et-al-min=\"4\" et-al-use-first=\"1\"/>\n                <et-al font-variant=\"normal\" font-style=\"italic\"/>\n              </names>\n            </if>\n            <else-if variable=\"editor\">\n              <names variable=\"editor\">\n                <name form=\"short\" delimiter=\", \" et-al-min=\"4\" et-al-use-first=\"1\"/>\n              </names>\n            </else-if>\n            <else>\n              <text variable=\"title-short\"/>\n            </else>\n          </choose>\n          <text macro=\"year-date\" prefix=\" \" suffix=\"&#160;:&#160;\"/>\n        </group>\n        <group>\n          <text macro=\"author\" suffix=\", \"/>\n          <choose>\n            <if type=\"thesis\">\n              <group delimiter=\", \">\n                <text macro=\"title\" font-style=\"italic\"/>\n                <text variable=\"genre\" text-case=\"lowercase\"/>\n                <text variable=\"publisher\" prefix=\"soutenue à l'\"/>\n                <text macro=\"year-date\"/>\n              </group>\n            </if>\n            <else-if type=\"webpage\">\n              <group delimiter=\" \">\n                <text macro=\"title\" font-style=\"italic\"/>\n                <text variable=\"URL\" prefix=\"(\" suffix=\",\"/>\n                <text prefix=\" \" macro=\"access\" suffix=\")\"/>\n              </group>\n            </else-if>\n            <else-if type=\"article-journal article-magazine article-newspaper broadcast personal_communication\" match=\"any\">\n              <group delimiter=\", \">\n                <text macro=\"title\" quotes=\"true\"/>\n                <text variable=\"container-title\" form=\"short\" font-style=\"italic\"/>\n                <text variable=\"volume\"/>\n                <text variable=\"issue\"/>\n              </group>\n              <choose>\n                <if variable=\"page\" match=\"any\">\n                  <text macro=\"pages\" prefix=\", \"/>\n                </if>\n                <else>\n                  <group prefix=\" [\" suffix=\"]\">\n                    <text term=\"online\"/>\n                    <choose>\n                      <if variable=\"URL\" match=\"any\">\n                        <text variable=\"URL\" prefix=\"&#160;: \"/>\n                        <text macro=\"access\" prefix=\", \"/>\n                      </if>\n                    </choose>\n                  </group>\n                </else>\n              </choose>\n            </else-if>\n            <else-if type=\"book graphic\" match=\"any\">\n              <group>\n                <text macro=\"title\"/>\n                <text macro=\"edition\" prefix=\", \"/>\n                <text macro=\"volume\" prefix=\", \"/>\n                <text macro=\"publisher\" prefix=\", \" suffix=\", \"/>\n                <text macro=\"year-date\"/>\n                <text macro=\"collection\" prefix=\" \"/>\n              </group>\n            </else-if>\n            <else-if type=\"chapter paper-conference entry-dictionary entry-encyclopedia\" match=\"any\">\n              <text macro=\"title\" quotes=\"true\" suffix=\", \"/>\n              <text term=\"in\" suffix=\"&#160;\"/>\n              <group delimiter=\", \">\n                <text macro=\"editor\"/>\n                <text variable=\"container-title\" font-style=\"italic\" text-case=\"title\"/>\n                <text macro=\"volume\"/>\n                <text macro=\"publisher\"/>\n                <text macro=\"year-date\"/>\n              </group>\n              <choose>\n                <if variable=\"page\" match=\"any\">\n                  <text macro=\"pages\" prefix=\", \"/>\n                  <text macro=\"collection\" prefix=\" \"/>\n                </if>\n                <else>\n                  <group prefix=\" [\" suffix=\"]\">\n                    <text term=\"online\"/>\n                    <choose>\n                      <if variable=\"URL\" match=\"any\">\n                        <text variable=\"URL\" prefix=\"&#160;: \"/>\n                        <text macro=\"access\" prefix=\", \"/>\n                      </if>\n                    </choose>\n                  </group>\n                </else>\n              </choose>\n            </else-if>\n          </choose>\n        </group>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"