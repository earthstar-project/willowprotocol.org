"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\" default-locale=\"en-US\">\n  <info>\n    <title>The Optical Society</title>\n    <title-short>OSA</title-short>\n    <id>http://www.zotero.org/styles/the-optical-society</id>\n    <link href=\"http://www.zotero.org/styles/the-optical-society\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/ieee\" rel=\"template\"/>\n    <link href=\"http://www.zotero.org/styles/american-physics-society\" rel=\"template\"/>\n    <link href=\"http://www.opticsinfobase.org/author/author.cfm\" rel=\"documentation\"/>\n    <author>\n      <name>Barbara Williams</name>\n      <email>bwilli@osa.org</email>\n    </author>\n    <category citation-format=\"numeric\"/>\n    <category field=\"physics\"/>\n    <summary>Common style use by OSA publications.</summary>\n    <updated>2012-09-27T22:06:38+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name initialize-with=\". \" delimiter=\", \" and=\"text\"/>\n      <label form=\"short\" prefix=\", \"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\">\n      <name initialize-with=\". \" delimiter=\", \" and=\"text\"/>\n      <label form=\"short\" prefix=\", \"/>\n    </names>\n  </macro>\n  <macro name=\"year-date\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"day-date\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"month\" form=\"long\" suffix=\" \"/>\n          <date-part name=\"day\" suffix=\", \"/>\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <group prefix=\"(\" suffix=\")\" delimiter=\", \">\n      <text variable=\"publisher\"/>\n      <text macro=\"year-date\"/>\n    </group>\n  </macro>\n  <macro name=\"volume\">\n    <text variable=\"volume\" prefix=\"Vol. \"/>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"series\">\n    <group delimiter=\" \">\n      <text variable=\"collection-title\" text-case=\"title\"/>\n      <text variable=\"collection-number\" prefix=\"No. \"/>\n    </group>\n  </macro>\n  <macro name=\"personal-communication\">\n    <group prefix=\"personal communication (\" suffix=\")\">\n      <text macro=\"day-date\"/>\n    </group>\n  </macro>\n  <macro name=\"patent-authority-number\">\n    <choose>\n      <if variable=\"authority\">\n        <group>\n          <text variable=\"authority\" suffix=\" patent \"/>\n          <text variable=\"number\"/>\n        </group>\n      </if>\n      <else>\n        <group>\n          <text variable=\"number\" prefix=\"U.S. patent \"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <!--********************************************************************-->\n  <citation collapse=\"citation-number\">\n    <sort>\n      <key variable=\"citation-number\"/>\n    </sort>\n    <layout delimiter=\",\" prefix=\"&#160;[\" suffix=\"]\">\n      <text variable=\"citation-number\"/>\n    </layout>\n  </citation>\n  <!--********************************************************************-->\n  <bibliography entry-spacing=\"0\" second-field-align=\"flush\">\n    <layout suffix=\".\">\n      <text variable=\"citation-number\" suffix=\". \"/>\n      <text macro=\"author\" suffix=\", \"/>\n      <choose>\n        <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n          <group delimiter=\" \">\n            <group delimiter=\", \">\n              <text variable=\"title\" text-case=\"title\" font-style=\"italic\"/>\n              <text macro=\"edition\"/>\n              <text macro=\"series\"/>\n            </group>\n            <group delimiter=\", \">\n              <text macro=\"publisher\"/>\n              <text macro=\"volume\"/>\n              <group delimiter=\" \">\n                <label variable=\"page\" form=\"short\"/>\n                <text variable=\"page\"/>\n              </group>\n            </group>\n          </group>\n        </if>\n        <else-if type=\"paper-conference\">\n          <!--Need to do SPIE proceedings differently, haven't found a way so far-->\n          <group delimiter=\" \">\n            <text variable=\"title\" prefix=\"&quot;\" suffix=\",&quot; \"/>\n            <text term=\"in\"/>\n            <group delimiter=\", \">\n              <text variable=\"container-title\" form=\"long\" text-case=\"title\" font-style=\"italic\"/>\n              <text macro=\"editor\"/>\n              <text macro=\"series\"/>\n            </group>\n            <group delimiter=\", \">\n              <text macro=\"publisher\"/>\n              <text macro=\"volume\"/>\n              <group delimiter=\" \">\n                <label variable=\"page\" form=\"short\"/>\n                <text variable=\"page\"/>\n              </group>\n            </group>\n          </group>\n        </else-if>\n        <else-if type=\"speech\">\n          <text variable=\"title\" prefix=\"&quot;\" suffix=\",&quot;\"/>\n          <group delimiter=\", \">\n            <text variable=\"event\" form=\"long\" text-case=\"title\" prefix=\" presented at \"/>\n            <text variable=\"event-place\" text-case=\"title\"/>\n          </group>\n          <text macro=\"day-date\" prefix=\" (\" suffix=\")\"/>\n        </else-if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <group delimiter=\" \">\n            <text variable=\"title\" prefix=\"&quot;\" suffix=\",&quot;\"/>\n            <text term=\"in\"/>\n            <group delimiter=\", \">\n              <text variable=\"container-title\" form=\"long\" text-case=\"title\" font-style=\"italic\"/>\n              <text macro=\"editor\"/>\n              <text macro=\"edition\"/>\n              <text macro=\"series\"/>\n            </group>\n            <group delimiter=\", \">\n              <text macro=\"publisher\"/>\n              <text macro=\"volume\"/>\n              <group delimiter=\" \">\n                <label variable=\"page\" form=\"short\"/>\n                <text variable=\"page\"/>\n              </group>\n            </group>\n          </group>\n        </else-if>\n        <else-if type=\"patent\">\n          <text variable=\"title\" prefix=\"&quot;\" suffix=\",&quot; \"/>\n          <group delimiter=\" \">\n            <text macro=\"patent-authority-number\"/>\n            <text macro=\"day-date\" prefix=\" (\" suffix=\")\"/>\n          </group>\n        </else-if>\n        <else-if type=\"thesis\">\n          <text variable=\"title\" prefix=\"&quot;\" suffix=\",&quot; \"/>\n          <group delimiter=\", \">\n            <text variable=\"genre\"/>\n            <text variable=\"publisher\"/>\n          </group>\n          <text macro=\"year-date\" prefix=\" (\" suffix=\")\"/>\n        </else-if>\n        <else-if type=\"webpage\">\n          <text variable=\"title\" prefix=\"&quot;\" suffix=\",&quot; \"/>\n          <text variable=\"URL\"/>\n        </else-if>\n        <else-if type=\"personal_communication\">\n          <text macro=\"personal-communication\"/>\n        </else-if>\n        <else-if type=\"article-newspaper\">\n          <text variable=\"title\" prefix=\"&quot;\" suffix=\",&quot; \"/>\n          <text variable=\"container-title\" form=\"long\"/>\n          <text macro=\"day-date\" prefix=\" (\" suffix=\")\"/>\n        </else-if>\n        <else-if type=\"report\">\n          <group delimiter=\" \">\n            <text variable=\"title\" prefix=\"&quot;\" suffix=\",&quot;\"/>\n            <text variable=\"genre\"/>\n            <text variable=\"number\"/>\n            <text variable=\"publisher\" prefix=\"(\"/>\n            <text macro=\"day-date\" prefix=\", \" suffix=\"),\"/>\n            <text variable=\"URL\"/>\n          </group>\n        </else-if>\n        <else>\n          <group delimiter=\" \">\n            <text variable=\"title\" prefix=\"&quot;\" suffix=\",&quot;\"/>\n            <text variable=\"container-title\" form=\"short\"/>\n            <group delimiter=\", \">\n              <text variable=\"volume\" font-weight=\"bold\"/>\n              <group delimiter=\" \">\n                <text variable=\"page\" form=\"short\"/>\n                <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n              </group>\n            </group>\n          </group>\n        </else>\n      </choose>\n    </layout>\n  </bibliography>\n</style>\n"