"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\" page-range-format=\"minimal-two\" default-locale=\"en-US\">\n  <info>\n    <title>Geographical Analysis</title>\n    <title-short>GEAN</title-short>\n    <id>http://www.zotero.org/styles/geographical-analysis</id>\n    <link href=\"http://www.zotero.org/styles/geographical-analysis\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/environment-and-planning\" rel=\"template\"/>\n    <link href=\"https://onlinelibrary.wiley.com/page/journal/15384632/homepage/forauthors.html\" rel=\"documentation\"/>\n    <author>\n      <name>Yigong Hu</name>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"geography\"/>\n    <issn>0016-7363</issn>\n    <summary>Style for the Geographical Analysis journal</summary>\n    <updated>2015-01-10T18:11:11+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"en\">\n    <style-options punctuation-in-quote=\"true\"/>\n    <terms>\n      <term name=\"editor\" form=\"verb-short\">edited by</term>\n      <term name=\"editor\" form=\"short\">\n        <single>ed</single>\n        <multiple>eds</multiple>\n      </term>\n      <term name=\"in\">In</term>\n      <term name=\"edition\">ed.</term>\n    </terms>\n  </locale>\n  <macro name=\"editor\">\n    <names variable=\"editor\" delimiter=\",\" suffix=\".\">\n      <label form=\"verb-short\" suffix=\" \"/>\n      <name sort-separator=\", \" and=\"text\" initialize-with=\".\" delimiter=\", \"/>\n    </names>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name name-as-sort-order=\"all\" sort-separator=\" \" initialize-with=\". \" delimiter=\", \" and=\"text\"/>\n      <label form=\"short\" prefix=\" \"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"text\" delimiter=\", \" initialize-with=\".\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"book thesis\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\" suffix=\". \"/>\n      </if>\n      <else>\n        <text variable=\"title\" quotes=\"true\" suffix=\". \"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <choose>\n      <if type=\"book chapter\" match=\"any\">\n        <group delimiter=\": \">\n          <text variable=\"publisher-place\"/>\n          <text variable=\"publisher\"/>\n        </group>\n      </if>\n      <else-if type=\"paper-conference\" match=\"any\">\n        <group delimiter=\": \">\n          <text variable=\"publisher-place\"/>\n          <text variable=\"publisher\"/>\n        </group>\n      </else-if>\n      <else-if type=\"report thesis\" match=\"any\">\n        <group delimiter=\", \">\n          <text variable=\"publisher\"/>\n          <text variable=\"publisher-place\"/>\n        </group>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"year-date\">\n    <date variable=\"issued\">\n      <date-part name=\"year\"/>\n    </date>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"locator\">\n    <group delimiter=\" \">\n      <label variable=\"locator\"/>\n      <text variable=\"locator\"/>\n    </group>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" disambiguate-add-names=\"true\" collapse=\"year\">\n    <sort>\n      <key macro=\"author-short\"/>\n      <key macro=\"year-date\" sort=\"ascending\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\", \">\n        <text macro=\"author-short\"/>\n        <text macro=\"year-date\"/>\n        <text macro=\"locator\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography hanging-indent=\"true\" et-al-min=\"4\" et-al-use-first=\"1\">\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"year-date\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout>\n      <group delimiter=\". \">\n        <group>\n          <group delimiter=\". \" suffix=\". \">\n            <text macro=\"author\"/>\n            <date variable=\"issued\" prefix=\"(\" suffix=\")\">\n              <date-part name=\"year\"/>\n            </date>\n          </group>\n          <text macro=\"title\"/>\n          <choose>\n            <if type=\"bill book graphic legal_case legislation motion_picture report song thesis\" match=\"any\">\n              <group delimiter=\", \">\n                <group delimiter=\" \">\n                  <text macro=\"edition\"/>\n                  <text macro=\"editor\"/>\n                </group>\n                <text macro=\"publisher\" suffix=\".\"/>\n              </group>\n            </if>\n            <else-if type=\"chapter paper-conference\" match=\"any\">\n              <text term=\"in\"/>\n              <group prefix=\" \" delimiter=\". \">\n                <group delimiter=\", \">\n                  <text variable=\"container-title\" font-style=\"italic\"/>\n                  <text macro=\"edition\"/>\n                  <text variable=\"page\"/>\n                  <text macro=\"editor\"/>\n                </group>\n                <text macro=\"publisher\" suffix=\".\"/>\n              </group>\n            </else-if>\n            <else>\n              <group prefix=\" \" suffix=\".\">\n                <text variable=\"container-title\" font-style=\"italic\"/>\n                <group prefix=\" \">\n                  <text variable=\"volume\"/>\n                  <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n                </group>\n                <text prefix=\", \" variable=\"page\"/>\n              </group>\n            </else>\n          </choose>\n        </group>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"