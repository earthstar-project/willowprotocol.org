"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"note\" version=\"1.0\" demote-non-dropping-particle=\"never\" default-locale=\"it-IT\">\n  <info>\n    <title>Studi e materiali di storia delle religioni (Italiano)</title>\n    <title-short>SMSR</title-short>\n    <id>http://www.zotero.org/styles/studi-e-materiali-di-storia-delle-religioni</id>\n    <link href=\"http://www.zotero.org/styles/studi-e-materiali-di-storia-delle-religioni\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/mimesis-edizioni\" rel=\"template\"/>\n    <link href=\"https://github.com/citation-style-language/styles/pull/4642\" rel=\"documentation\"/>\n    <author>\n      <name>Patrick O'Brien</name>\n      <email>obrienpat86@gmail.com</email>\n    </author>\n    <category citation-format=\"note\"/>\n    <category field=\"theology\"/>\n    <category field=\"humanities\"/>\n    <issn>0393-8417</issn>\n    <eissn>2611-8742</eissn>\n    <updated>2020-03-25T13:12:04+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"it-IT\">\n    <terms>\n      <term name=\"editor\" form=\"short\">dir.</term>\n      <term name=\"editortranslator\" form=\"short\">dir. &amp; trans.</term>\n      <term name=\"translator\" form=\"short\">trad.</term>\n      <term name=\"no date\" form=\"short\">s.d.</term>\n      <term name=\"retrieved\">repéré</term>\n      <term name=\"from\">de</term>\n      <term name=\"presented at\">communication présentée au</term>\n      <term name=\"page\" form=\"short\">pp.</term>\n    </terms>\n  </locale>\n  <macro name=\"container-contributors\">\n    <choose>\n      <if type=\"chapter paper-conference\" match=\"any\">\n        <names variable=\"editor translator\" delimiter=\", \" suffix=\", \">\n          <name delimiter=\" - \" delimiter-precedes-last=\"never\" initialize-with=\". \">\n            <name-part name=\"family\"/>\n          </name>\n          <et-al font-style=\"italic\"/>\n          <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n        </names>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"secondary-contributors\">\n    <choose>\n      <if type=\"article-journal chapter paper-conference\" match=\"none\">\n        <names variable=\"editor translator\" delimiter=\", \">\n          <label form=\"verb\" suffix=\" \"/>\n          <name and=\"text\" initialize-with=\". \" delimiter=\", \" delimiter-precedes-last=\"never\"/>\n          <et-al font-style=\"italic\"/>\n        </names>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name delimiter=\" - \" delimiter-precedes-last=\"never\" initialize-with=\". \"/>\n      <et-al font-style=\"italic\"/>\n      <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <choose>\n          <if type=\"report\">\n            <text variable=\"publisher\"/>\n            <text macro=\"title\"/>\n          </if>\n          <else>\n            <text macro=\"title\"/>\n          </else>\n        </choose>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <choose>\n      <if variable=\"DOI\"/>\n      <else>\n        <choose>\n          <if type=\"webpage post-weblog post\" match=\"any\">\n            <group delimiter=\" \">\n              <text variable=\"URL\" prefix=\"URL: &lt;\" suffix=\"&gt;\"/>\n              <group prefix=\"(\" suffix=\")\">\n                <date variable=\"accessed\">\n                  <date-part name=\"month\" form=\"numeric\" suffix=\"/\"/>\n                  <date-part name=\"year\" form=\"short\"/>\n                </date>\n              </group>\n            </group>\n          </if>\n        </choose>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"thesis\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n        <group prefix=\" (\" suffix=\")\" delimiter=\", \">\n          <text variable=\"genre\"/>\n          <choose>\n            <if variable=\"URL\" match=\"any\">\n              <text variable=\"publisher\"/>\n              <text variable=\"publisher-place\"/>\n            </if>\n          </choose>\n        </group>\n      </if>\n      <else-if type=\"report\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n        <group prefix=\" (\" suffix=\")\" delimiter=\" \">\n          <text variable=\"genre\"/>\n          <choose>\n            <if variable=\"number\" match=\"any\">\n              <text term=\"issue\" form=\"short\"/>\n              <text variable=\"number\"/>\n            </if>\n          </choose>\n        </group>\n      </else-if>\n      <else-if type=\"book graphic motion_picture report song manuscript speech\" match=\"any\">\n        <choose>\n          <if variable=\"version\">\n            <group delimiter=\" \">\n              <text variable=\"title\"/>\n              <group delimiter=\" \" prefix=\"(\" suffix=\")\">\n                <text term=\"version\"/>\n                <text variable=\"version\"/>\n              </group>\n            </group>\n          </if>\n          <else>\n            <text variable=\"title\" font-style=\"italic\"/>\n          </else>\n        </choose>\n      </else-if>\n      <else>\n        <text variable=\"title\" font-style=\"italic\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <choose>\n      <if type=\"thesis\" match=\"any\">\n        <choose>\n          <if variable=\"URL archive\" match=\"none\">\n            <group delimiter=\", \" prefix=\", \">\n              <text variable=\"publisher-place\"/>\n              <text variable=\"publisher\"/>\n            </group>\n          </if>\n        </choose>\n      </if>\n      <else>\n        <group delimiter=\", \" prefix=\", \">\n          <choose>\n            <if variable=\"event\" match=\"none\">\n              <text variable=\"genre\"/>\n            </if>\n          </choose>\n          <choose>\n            <if type=\"article-journal article-magazine\" match=\"none\">\n              <group>\n                <group delimiter=\", \">\n                  <text variable=\"publisher\"/>\n                  <text variable=\"publisher-place\"/>\n                </group>\n                <text macro=\"issued-year\"/>\n              </group>\n            </if>\n          </choose>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"event\">\n    <choose>\n      <if variable=\"container-title\" match=\"none\">\n        <choose>\n          <if variable=\"event\">\n            <choose>\n              <if variable=\"genre\" match=\"none\">\n                <text term=\"presented at\" text-case=\"capitalize-first\" suffix=\" \"/>\n                <text variable=\"event\"/>\n              </if>\n              <else>\n                <group delimiter=\" \">\n                  <text variable=\"genre\" text-case=\"capitalize-first\"/>\n                  <text term=\"presented at\"/>\n                  <text variable=\"event\"/>\n                </group>\n              </else>\n            </choose>\n          </if>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"issued\">\n    <choose>\n      <if type=\"bill legal_case legislation\" match=\"none\">\n        <choose>\n          <if variable=\"issued\">\n            <group>\n              <date variable=\"issued\">\n                <date-part name=\"year\"/>\n              </date>\n              <text variable=\"year-suffix\"/>\n              <choose>\n                <if type=\"article-journal bill book chapter graphic legal_case legislation motion_picture paper-conference report song thesis\" match=\"none\">\n                  <date variable=\"issued\">\n                    <date-part prefix=\", \" name=\"month\"/>\n                    <date-part prefix=\" \" name=\"day\"/>\n                  </date>\n                </if>\n              </choose>\n            </group>\n          </if>\n          <else>\n            <group prefix=\" (\" suffix=\")\">\n              <text term=\"no date\" form=\"short\"/>\n              <text variable=\"year-suffix\" prefix=\"-\"/>\n            </group>\n          </else>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"issued-sort\">\n    <choose>\n      <if type=\"article-journal bill book chapter graphic legal_case legislation motion_picture paper-conference report song\" match=\"none\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n          <date-part name=\"month\"/>\n          <date-part name=\"day\"/>\n        </date>\n      </if>\n      <else>\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"issued-year\">\n    <choose>\n      <if variable=\"issued\">\n        <choose>\n          <if type=\"article-newspaper\" match=\"any\">\n            <date form=\"text\" variable=\"issued\" prefix=\", \"/>\n          </if>\n          <else>\n            <date variable=\"issued\" prefix=\" \">\n              <date-part name=\"year\"/>\n            </date>\n            <text variable=\"year-suffix\"/>\n          </else>\n        </choose>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\" prefix=\" \"/>\n        <text variable=\"year-suffix\" prefix=\"-\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"locators\">\n    <choose>\n      <if type=\"article-journal article-magazine\" match=\"any\">\n        <group delimiter=\", \" prefix=\", \">\n          <group delimiter=\" \">\n            <text variable=\"volume\"/>\n            <text macro=\"issued\" prefix=\"(\" suffix=\")\"/>\n          </group>\n          <choose>\n            <if match=\"none\" variable=\"locator\">\n              <group delimiter=\" \">\n                <label variable=\"page\" form=\"short\"/>\n                <text variable=\"page\"/>\n              </group>\n            </if>\n          </choose>\n        </group>\n      </if>\n      <else-if type=\"article-newspaper\">\n        <group delimiter=\" \" prefix=\", \">\n          <label variable=\"page\" form=\"short\"/>\n          <text variable=\"page\"/>\n        </group>\n      </else-if>\n      <else-if type=\"graphic motion_picture song chapter paper-conference\" match=\"any\">\n        <group delimiter=\"; \">\n          <group delimiter=\", \">\n            <text macro=\"edition\"/>\n            <group>\n              <text term=\"volume\" form=\"short\" plural=\"true\" suffix=\" \"/>\n              <number variable=\"number-of-volumes\" form=\"numeric\" prefix=\"1-\"/>\n            </group>\n            <group>\n              <text term=\"volume\" form=\"short\" suffix=\" \"/>\n              <number variable=\"volume\" form=\"numeric\"/>\n            </group>\n            <group>\n              <label prefix=\", \" suffix=\" \" variable=\"page\" form=\"short\"/>\n              <text variable=\"page\"/>\n            </group>\n          </group>\n          <text macro=\"secondary-contributors\"/>\n        </group>\n      </else-if>\n      <else-if type=\"legal_case\">\n        <group prefix=\" (\" suffix=\")\" delimiter=\" \">\n          <text variable=\"authority\"/>\n          <date variable=\"issued\" form=\"text\"/>\n        </group>\n      </else-if>\n      <else-if type=\"bill legislation\" match=\"any\">\n        <date variable=\"issued\" prefix=\" (\" suffix=\")\">\n          <date-part name=\"year\"/>\n        </date>\n      </else-if>\n      <else-if type=\"report\" match=\"any\">\n        <text variable=\"page\" prefix=\", \" suffix=\" p.\"/>\n      </else-if>\n      <else-if type=\"webpage post post-weblog\" match=\"any\">\n        <text macro=\"access\" prefix=\", \"/>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"container\">\n    <group>\n      <choose>\n        <if type=\"chapter paper-conference entry-encyclopedia\" match=\"any\">\n          <text term=\"in\" suffix=\" \"/>\n        </if>\n      </choose>\n      <text macro=\"container-contributors\"/>\n      <text macro=\"container-title\"/>\n    </group>\n  </macro>\n  <macro name=\"container-title\">\n    <choose>\n      <if type=\"article article-journal article-magazine article-newspaper\" match=\"any\">\n        <group delimiter=\" \">\n          <text term=\"in\"/>\n          <text variable=\"container-title\" text-case=\"title\" quotes=\"true\"/>\n        </group>\n      </if>\n      <else-if type=\"bill legal_case legislation\" match=\"none\">\n        <group delimiter=\" \">\n          <text term=\"in\"/>\n          <text variable=\"container-title\" font-style=\"italic\"/>\n        </group>\n      </else-if>\n      <else>\n        <group delimiter=\" \" prefix=\", \">\n          <choose>\n            <if variable=\"container-title\">\n              <text variable=\"volume\"/>\n              <text variable=\"container-title\"/>\n              <group delimiter=\" \">\n                <text term=\"section\" form=\"symbol\"/>\n                <text variable=\"section\"/>\n              </group>\n              <text variable=\"page\"/>\n            </if>\n            <else>\n              <choose>\n                <if type=\"legal_case\">\n                  <text term=\"issue\" form=\"short\"/>\n                  <text variable=\"number\"/>\n                </if>\n                <else>\n                  <text term=\"issue\" form=\"short\"/>\n                  <text variable=\"number\"/>\n                  <group delimiter=\" \">\n                    <text term=\"section\" form=\"symbol\"/>\n                    <text variable=\"section\"/>\n                  </group>\n                </else>\n              </choose>\n            </else>\n          </choose>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"citation-locator\">\n    <group delimiter=\" \">\n      <label variable=\"locator\" form=\"short\"/>\n      <text variable=\"locator\"/>\n    </group>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" givenname-disambiguation-rule=\"primary-name\" collapse=\"year\">\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"issued-sort\"/>\n    </sort>\n    <layout suffix=\".\" delimiter=\"; \">\n      <choose>\n        <if position=\"ibid-with-locator\">\n          <group delimiter=\", \">\n            <text term=\"ibid\"/>\n            <text macro=\"citation-locator\"/>\n          </group>\n        </if>\n        <else-if position=\"ibid\">\n          <text term=\"ibid\"/>\n        </else-if>\n        <else-if match=\"any\" position=\"subsequent\">\n          <group delimiter=\", \">\n            <text macro=\"author\"/>\n            <text macro=\"title\"/>\n            <text value=\"cit.\"/>\n            <text macro=\"citation-locator\"/>\n          </group>\n        </else-if>\n        <else>\n          <group>\n            <group delimiter=\", \">\n              <text macro=\"author\"/>\n              <text macro=\"title\" prefix=\" \"/>\n              <text macro=\"container\"/>\n            </group>\n            <group delimiter=\", \">\n              <text macro=\"event\"/>\n              <text macro=\"publisher\"/>\n            </group>\n            <text macro=\"locators\"/>\n          </group>\n          <text macro=\"citation-locator\" prefix=\", \"/>\n        </else>\n      </choose>\n    </layout>\n  </citation>\n  <bibliography et-al-min=\"8\" et-al-use-first=\"6\" et-al-use-last=\"true\">\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"issued-sort\" sort=\"ascending\"/>\n      <key macro=\"title\"/>\n    </sort>\n    <layout>\n      <group>\n        <group delimiter=\", \">\n          <text macro=\"author\"/>\n          <text macro=\"title\" prefix=\" \"/>\n          <text macro=\"container\"/>\n        </group>\n        <group delimiter=\", \">\n          <text macro=\"event\"/>\n          <text macro=\"publisher\"/>\n        </group>\n        <text macro=\"locators\"/>\n      </group>\n      <text macro=\"access\" prefix=\" \"/>\n    </layout>\n  </bibliography>\n</style>\n"