"capitalize-first\" prefix=\", \"/>\n    </names>\n  </macro>\n  <citation et-al-min=\"4\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" collapse=\"year\">\n    <sort>\n      <key macro=\"issued\"/>\n      <key macro=\"author\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\", \">\n        <text macro=\"author-short\"/>\n        <text macro=\"issued\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography>\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"issued\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout suffix=\".\">\n      <group delimiter=\" \">\n        <text macro=\"author\"/>\n        <text macro=\"issued\" prefix=\"(\" suffix=\"):\"/>\n        <choose>\n          <if type=\"article article-magazine article-newspaper article-journal review\" match=\"any\">\n            <text variable=\"title\" suffix=\".\"/>\n            <text variable=\"container-title\" form=\"short\" text-case=\"title\"/>\n            <text variable=\"volume\" font-style=\"normal\" font-weight=\"bold\" suffix=\":\"/>\n            <text variable=\"page\"/>\n          </if>\n          <else-if type=\"chapter paper-conference\" match=\"any\">\n            <text variable=\"title\" suffix=\".\"/>\n            <text variable=\"container-title\" text-case=\"title\" prefix=\"In: \" suffix=\",\"/>\n            <label plural=\"never\" strip-periods=\"false\" variable=\"page\" form=\"short\"/>\n            <text variable=\"page\" suffix=\".\"/>\n            <text macro=\"editor\"/>\n            <text macro=\"publisher\" suffix=\",\"/>\n          </else-if>\n          <else-if type=\"thesis\">\n            <text variable=\"title\" suffix=\".\"/>\n            <text variable=\"genre\" suffix=\" thesis,\"/>\n            <text variable=\"publisher\"/>\n          </else-if>\n          <else>\n            <text variable=\"title\" suffix=\".\"/>\n            <text macro=\"publisher\"/>\n          </else>\n        </choose>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"