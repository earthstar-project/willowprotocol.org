"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"note\" default-locale=\"fr-CA\" version=\"1.0\" demote-non-dropping-particle=\"never\">\n  <info>\n    <title>Ithaque (Français - Canada)</title>\n    <id>http://www.zotero.org/styles/ithaque</id>\n    <link href=\"http://www.zotero.org/styles/ithaque\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/infoclio-fr-nocaps\" rel=\"template\"/>\n    <link href=\"http://www.revueithaque.org/soumissions/normes-de-presentation/\" rel=\"documentation\"/>\n    <author>\n      <name>Marc-Kevin Daoust</name>\n      <email>marc-kevin.daoust@umontreal.ca</email>\n    </author>\n    <category citation-format=\"note\"/>\n    <category field=\"philosophy\"/>\n    <issn>1703-1001</issn>\n    <updated>2014-08-10T05:49:43+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"fr\">\n    <terms>\n      <!-- &#7497; correspond à un petit \"e\" placé en exposant: 1e, 2e... -->\n      <term name=\"ordinal-01\">&#7497;</term>\n      <term name=\"ordinal-02\">&#7497;</term>\n      <term name=\"ordinal-03\">&#7497;</term>\n      <term name=\"ordinal-04\">&#7497;</term>\n      <term name=\"volume\" form=\"short\">vol.</term>\n      <term name=\"page\" form=\"short\">p.</term>\n      <term name=\"translator\" form=\"verb\">trad.</term>\n      <term name=\"editor\" form=\"short\"> (dir.)</term>\n    </terms>\n  </locale>\n  <macro name=\"author-or-editor\">\n    <choose>\n      <if variable=\"author\">\n        <names variable=\"author\">\n          <name sort-separator=\", \" name-as-sort-order=\"first\">\n      </name>\n          <et-al font-style=\"italic\"/>\n        </names>\n      </if>\n      <else-if variable=\"editor\">\n        <text macro=\"editor\"/>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\">\n      <name sort-separator=\", \" name-as-sort-order=\"first\">\n      </name>\n      <et-al font-style=\"italic\"/>\n      <label form=\"short\"/>\n    </names>\n  </macro>\n  <macro name=\"translator\">\n    <names variable=\"translator\">\n      <label form=\"verb\" suffix=\" \"/>\n      <name sort-separator=\" \" form=\"long\" and=\"text\" delimiter=\", \" delimiter-precedes-last=\"never\">\n      </name>\n    </names>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"book thesis graphic motion_picture\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </if>\n      <else-if type=\"chapter paper-conference\" match=\"any\">\n        <group delimiter=\" \">\n          <text variable=\"title\" quotes=\"true\" suffix=\",\"/>\n          <text value=\"dans\"/>\n          <text macro=\"editor\" suffix=\",\"/>\n          <text variable=\"container-title\" font-style=\"italic\"/>\n        </group>\n      </else-if>\n      <else-if type=\"article-journal\">\n        <group delimiter=\", \">\n          <text variable=\"title\" quotes=\"true\"/>\n          <group>\n            <text variable=\"container-title\" font-style=\"italic\" suffix=\",\"/>\n            <choose>\n              <if is-numeric=\"volume\">\n                <number variable=\"volume\" prefix=\" vol. \" suffix=\", \"/>\n                <choose>\n                  <if is-numeric=\"issue\">\n                    <number variable=\"issue\" prefix=\"n°\"/>\n                  </if>\n                </choose>\n              </if>\n              <else-if is-numeric=\"issue\">\n                <number variable=\"issue\" prefix=\"n°\"/>\n              </else-if>\n            </choose>\n          </group>\n        </group>\n      </else-if>\n      <else-if type=\"article-newspaper article-magazine entry-encyclopedia entry-dictionary broadcast\" match=\"any\">\n        <group delimiter=\", \">\n          <text variable=\"title\" quotes=\"true\"/>\n          <text variable=\"container-title\" font-style=\"italic\"/>\n        </group>\n      </else-if>\n      <else-if type=\"webpage post post-weblog\" match=\"any\">\n        <group delimiter=\", \">\n          <text variable=\"title\" quotes=\"true\"/>\n          <text variable=\"container-title\" font-style=\"italic\"/>\n          <text variable=\"URL\" prefix=\"&lt;\" suffix=\"&gt;\"/>\n        </group>\n        <text term=\"accessed\" prefix=\", \"/>\n        <date variable=\"accessed\" form=\"text\" date-parts=\"year-month-day\" prefix=\" \"/>\n      </else-if>\n      <else-if type=\"report song\" match=\"any\">\n        <group delimiter=\", \">\n          <text variable=\"title\" quotes=\"true\"/>\n          <group delimiter=\", \">\n            <text variable=\"collection-title\" font-style=\"italic\"/>\n            <number variable=\"number\"/>\n          </group>\n        </group>\n      </else-if>\n      <else-if type=\"interview\">\n        <group delimiter=\", \">\n          <text variable=\"title\" quotes=\"true\"/>\n          <names variable=\"interviewer\" delimiter=\", \">\n            <label form=\"verb\" prefix=\" \" suffix=\" \"/>\n            <name sort-separator=\" \"/>\n            <et-al font-style=\"italic\"/>\n          </names>\n        </group>\n      </else-if>\n      <else>\n        <text variable=\"title\" quotes=\"true\"/>\n      </else>\n    </choose>\n  </macro>\n  <!-- fin macro \"title\" -->\n  <macro name=\"volume-or-medium\">\n    <choose>\n      <if type=\"book chapter entry-encyclopedia entry-dictionary\" match=\"any\">\n        <choose>\n          <if is-numeric=\"volume number-of-volumes\" match=\"any\">\n            <text term=\"volume\" form=\"short\" suffix=\".&#160;\"/>\n            <number variable=\"volume\" suffix=\" / \"/>\n            <number variable=\"number-of-volumes\"/>\n          </if>\n          <else-if is-numeric=\"volume\">\n            <text term=\"volume\" form=\"short\" suffix=\".&#160;\"/>\n            <number variable=\"volume\"/>\n          </else-if>\n          <else-if is-numeric=\"number-of-volumes\">\n            <number variable=\"number-of-volumes\"/>\n            <text term=\"volume\" form=\"short\" prefix=\"&#160;\" suffix=\".\"/>\n          </else-if>\n        </choose>\n      </if>\n      <else-if type=\"motion_picture song broadcast\" match=\"any\">\n        <text variable=\"medium\"/>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"place-and-publisher\">\n    <choose>\n      <if type=\"book chapter paper-conference\" match=\"any\">\n        <group delimiter=\", \">\n          <choose>\n            <if variable=\"publisher-place\">\n              <text variable=\"publisher-place\"/>\n            </if>\n            <else>\n              <text value=\"\"/>\n            </else>\n          </choose>\n          <text variable=\"publisher\"/>\n        </group>\n      </if>\n      <else-if type=\"report motion_picture broadcast song\" match=\"any\">\n        <group delimiter=\", \">\n          <text variable=\"publisher-place\"/>\n          <text variable=\"publisher\"/>\n        </group>\n      </else-if>\n      <else-if type=\"thesis\">\n        <group delimiter=\", \">\n          <text variable=\"genre\"/>\n          <text variable=\"publisher-place\"/>\n          <text variable=\"publisher\"/>\n        </group>\n      </else-if>\n      <else-if type=\"speech\">\n        <group delimiter=\", \">\n          <text variable=\"genre\"/>\n          <text variable=\"event\"/>\n          <text variable=\"event-place\"/>\n        </group>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"url\">\n    <choose>\n      <if variable=\"URL\">\n\t</if>\n    </choose>\n  </macro>\n  <macro name=\"date\">\n    <choose>\n      <if type=\"book chapter paper-conference motion_picture\" match=\"any\">\n        <choose>\n          <if variable=\"issued\">\n            <date variable=\"issued\">\n              <date-part name=\"year\"/>\n            </date>\n          </if>\n          <else>\n            <text value=\"[s. d.]\"/>\n          </else>\n        </choose>\n      </if>\n      <else-if type=\"article-journal\" match=\"any\">\n        <choose>\n          <if variable=\"issued\">\n            <date variable=\"issued\" form=\"text\" date-parts=\"year-month\"/>\n          </if>\n          <else>\n            <text value=\"[s. d.]\"/>\n          </else>\n        </choose>\n      </else-if>\n      <else-if type=\"article-newspaper article-magazine webpage post post-weblog report broadcast entry-encyclopedia entry-dictionary speech\" match=\"any\">\n        <group delimiter=\"\">\n          <choose>\n            <if variable=\"issued\">\n              <date variable=\"issued\" form=\"text\" date-parts=\"year-month-day\"/>\n            </if>\n            <else>\n              <text value=\"[s. d.]\"/>\n            </else>\n          </choose>\n          <text macro=\"url\"/>\n        </group>\n      </else-if>\n      <else-if type=\"song\">\n        <choose>\n          <if variable=\"issued\">\n            <group delimiter=\", \">\n              <date variable=\"issued\" form=\"text\"/>\n              <text macro=\"url\"/>\n            </group>\n          </if>\n          <else>\n            <text macro=\"url\"/>\n          </else>\n        </choose>\n      </else-if>\n      <else>\n        <choose>\n          <if variable=\"issued\">\n            <date variable=\"issued\" form=\"text\" date-parts=\"year-month-day\"/>\n          </if>\n          <else-if variable=\"original-date\">\n            <date variable=\"original-date\" form=\"text\" date-parts=\"year-month-day\"/>\n          </else-if>\n          <else-if variable=\"event-date\">\n            <date variable=\"event-date\" form=\"text\" date-parts=\"year-month-day\"/>\n          </else-if>\n          <else>\n            <text value=\"[s. d.]\"/>\n          </else>\n        </choose>\n      </else>\n    </choose>\n  </macro>\n  <!-- fin macro \"date\" -->\n  <macro name=\"locator\">\n    <group delimiter=\"&#160;\">\n      <label variable=\"locator\" form=\"short\"/>\n      <text variable=\"locator\"/>\n    </group>\n  </macro>\n  <macro name=\"locator-or-pages\">\n    <choose>\n      <if variable=\"locator\">\n        <text macro=\"locator\"/>\n      </if>\n      <else>\n        <group delimiter=\"&#160;\">\n          <label variable=\"page\" form=\"short\"/>\n          <text variable=\"page\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"collection\">\n    <choose>\n      <if type=\"book chapter paper-conference\" match=\"any\">\n        <group prefix=\" (\" suffix=\")\" delimiter=\" \">\n          <text variable=\"collection-title\"/>\n          <choose>\n            <if is-numeric=\"collection-number\">\n              <number variable=\"collection-number\"/>\n            </if>\n          </choose>\n        </group>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if type=\"book chapter paper-conference\" match=\"any\">\n        <choose>\n          <if is-numeric=\"edition\">\n            <number variable=\"edition\" form=\"ordinal\"/>\n            <text term=\"edition\" prefix=\"&#160;\"/>\n          </if>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"complete-reference\">\n    <group delimiter=\", \">\n      <text macro=\"author-or-editor\"/>\n    </group>\n    <group delimiter=\", \" prefix=\" (\" suffix=\"), \">\n      <text macro=\"date\"/>\n    </group>\n    <group delimiter=\", \">\n      <text macro=\"title\"/>\n      <text macro=\"translator\"/>\n      <text macro=\"volume-or-medium\"/>\n      <text macro=\"edition\"/>\n      <text macro=\"place-and-publisher\"/>\n      <text macro=\"collection\"/>\n      <text macro=\"locator-or-pages\"/>\n    </group>\n  </macro>\n  <citation name-form=\"long\" initialize-with=\". \" and=\"text\" sort-separator=\", \" delimiter-precedes-last=\"never\" et-al-min=\"3\" et-al-use-first=\"1\">\n    <!-- the attributes on citation are inheritable name options -->\n    <layout suffix=\".\" delimiter=\"&#160;; \">\n      <choose>\n        <if position=\"ibid-with-locator\">\n          <group delimiter=\", \">\n            <text term=\"ibid\" font-style=\"italic\" suffix=\".\"/>\n            <text macro=\"locator\"/>\n          </group>\n        </if>\n        <else-if position=\"ibid\">\n          <text term=\"ibid\" font-style=\"italic\"/>\n        </else-if>\n        <else-if position=\"subsequent\">\n          <text macro=\"author-or-editor\"/>\n          <group delimiter=\", \">\n            <text macro=\"date\" prefix=\" (\" suffix=\")\"/>\n            <choose>\n              <if type=\"book thesis\" match=\"any\">\n                <text variable=\"title\" form=\"short\" font-style=\"italic\"/>\n              </if>\n              <else>\n                <text variable=\"title\" form=\"short\" quotes=\"true\"/>\n              </else>\n            </choose>\n            <group font-style=\"italic\" delimiter=\"&#160;\">\n              <choose>\n                <if type=\"article article-magazine article-newspaper article-journal entry entry-dictionary entry-encyclopedia chapter\" match=\"any\">\n                  <text value=\"\"/>\n                </if>\n                <else>\n                  <text value=\"\"/>\n                </else>\n              </choose>\n            </group>\n            <text macro=\"locator\"/>\n          </group>\n        </else-if>\n        <else>\n          <text macro=\"author-or-editor\"/>\n          <group delimiter=\", \">\n            <text macro=\"date\" prefix=\" (\" suffix=\")\"/>\n            <choose>\n              <if type=\"book thesis\" match=\"any\">\n                <text variable=\"title\" form=\"short\" font-style=\"italic\"/>\n              </if>\n              <else>\n                <text variable=\"title\" form=\"short\" quotes=\"true\"/>\n              </else>\n            </choose>\n            <group font-style=\"italic\" delimiter=\"&#160;\">\n              <choose>\n                <if type=\"article article-magazine article-newspaper article-journal entry entry-dictionary entry-encyclopedia chapter\" match=\"any\">\n                  <text value=\"\"/>\n                </if>\n                <else>\n                  <text value=\"\"/>\n                </else>\n              </choose>\n            </group>\n            <text macro=\"locator\"/>\n          </group>\n        </else>\n      </choose>\n    </layout>\n  </citation>\n  <bibliography name-form=\"long\" initialize-with=\". \" and=\"text\" sort-separator=\", \" delimiter-precedes-last=\"never\" et-al-min=\"3\" et-al-use-first=\"1\">\n    <!-- the attributes on bibliography are inheritable name options -->\n    <sort>\n      <key macro=\"author-or-editor\" names-min=\"3\" names-use-first=\"3\"/>\n      <key variable=\"issued\" sort=\"descending\"/>\n    </sort>\n    <layout suffix=\".\">\n      <text macro=\"complete-reference\"/>\n    </layout>\n  </bibliography>\n</style>\n"