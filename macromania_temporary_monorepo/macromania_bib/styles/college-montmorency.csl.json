"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"note\" default-locale=\"fr-CA\" version=\"1.0\" page-range-format=\"expanded\">\n  <info>\n    <title>Collège Montmorency (note, Français - Canada)</title>\n    <id>http://www.zotero.org/styles/college-montmorency</id>\n    <link href=\"http://www.zotero.org/styles/college-montmorency\" rel=\"self\"/>\n    <link href=\"http://biblio.cmontmorency.qc.ca/tutoriels/sinformer_citer.dot\" rel=\"documentation\"/>\n    <author>\n      <name>Dany Thibault</name>\n      <email>dany.thibault@cmontmorency.qc.ca</email>\n    </author>\n    <category citation-format=\"note\"/>\n    <category field=\"social_science\"/>\n    <category field=\"generic-base\"/>\n    <updated>2017-09-06T05:34:59+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"fr\">\n    <style-options limit-day-ordinals-to-day-1=\"true\"/>\n    <terms>\n      <term name=\"edition\" gender=\"feminine\">\n        <single>édition</single>\n        <multiple>éditions</multiple>\n      </term>\n      <term name=\"month-01\" gender=\"masculine\">janvier</term>\n      <term name=\"month-02\" gender=\"masculine\">février</term>\n      <term name=\"month-03\" gender=\"masculine\">mars</term>\n      <term name=\"month-04\" gender=\"masculine\">avril</term>\n      <term name=\"month-05\" gender=\"masculine\">mai</term>\n      <term name=\"month-06\" gender=\"masculine\">juin</term>\n      <term name=\"month-07\" gender=\"masculine\">juillet</term>\n      <term name=\"month-08\" gender=\"masculine\">août</term>\n      <term name=\"month-09\" gender=\"masculine\">septembre</term>\n      <term name=\"month-10\" gender=\"masculine\">octobre</term>\n      <term name=\"month-11\" gender=\"masculine\">novembre</term>\n      <term name=\"month-12\" gender=\"masculine\">décembre</term>\n      <term name=\"ordinal\">&amp;lt;sup&amp;gt;e&amp;lt;/sup&amp;gt;</term>\n      <term name=\"ordinal-01\" gender-form=\"feminine\" match=\"whole-number\">&amp;lt;sup&amp;gt;ère&amp;lt;/sup&amp;gt;</term>\n      <term name=\"ordinal-01\" gender-form=\"masculine\" match=\"whole-number\">&amp;lt;sup&amp;gt;er&amp;lt;/sup&amp;gt;</term>\n      <term name=\"cited\">op.&#160;cit.</term>\n      <term name=\"page\" form=\"short\">p.</term>\n      <term name=\"editor\" form=\"short\">dir.</term>\n      <term name=\"section\" form=\"short\">\n        <single>art. </single>\n        <multiple>art.</multiple>\n      </term>\n    </terms>\n  </locale>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name name-as-sort-order=\"all\" form=\"long\" and=\"text\" delimiter-precedes-last=\"never\" delimiter-precedes-et-al=\"never\" sort-separator=\", \" font-style=\"normal\">\n        <name-part name=\"family\" text-case=\"uppercase\"/>\n      </name>\n      <et-al font-style=\"italic\"/>\n      <substitute>\n        <text macro=\"editor\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\">\n      <name name-as-sort-order=\"all\" form=\"long\" and=\"text\" delimiter-precedes-last=\"never\" delimiter-precedes-et-al=\"never\" sort-separator=\", \" font-style=\"normal\">\n        <name-part name=\"family\" text-case=\"uppercase\"/>\n      </name>\n      <et-al font-style=\"italic\"/>\n      <label form=\"short\" prefix=\",&#160;\" suffix=\".,\"/>\n      <substitute>\n        <text macro=\"container-author\" suffix=\", dir.\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"container-author\">\n    <names variable=\"container-author\">\n      <name name-as-sort-order=\"all\" form=\"long\" and=\"text\" delimiter-precedes-last=\"never\" delimiter-precedes-et-al=\"never\" sort-separator=\", \" font-style=\"normal\">\n        <name-part name=\"family\" text-case=\"uppercase\"/>\n      </name>\n      <et-al font-style=\"italic\"/>\n    </names>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"speech\" variable=\"container-title\" match=\"any\">\n        <text variable=\"title\" text-case=\"capitalize-first\" quotes=\"true\"/>\n      </if>\n      <else-if variable=\"container-title\" match=\"none\">\n        <text variable=\"title\" text-case=\"capitalize-first\" font-style=\"italic\"/>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"container-title\">\n    <text variable=\"container-title\" text-case=\"capitalize-first\" font-style=\"italic\"/>\n  </macro>\n  <macro name=\"event\">\n    <text variable=\"event\" text-case=\"capitalize-first\" font-style=\"italic\"/>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"long\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\" text-case=\"capitalize-first\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"scale\">\n    <text variable=\"scale\"/>\n  </macro>\n  <macro name=\"volume\">\n    <text variable=\"volume\" prefix=\"vol.&#160;\"/>\n  </macro>\n  <macro name=\"numero\">\n    <text variable=\"issue\" prefix=\"n°&#160;\"/>\n  </macro>\n  <macro name=\"memoire-these\">\n    <text variable=\"genre\"/>\n  </macro>\n  <macro name=\"place\">\n    <text variable=\"publisher-place\"/>\n  </macro>\n  <macro name=\"publisher\">\n    <text variable=\"publisher\"/>\n  </macro>\n  <macro name=\"collection\">\n    <text variable=\"collection-title\"/>\n  </macro>\n  <macro name=\"date\">\n    <date variable=\"issued\">\n      <date-part name=\"day\" form=\"ordinal\" suffix=\" \"/>\n      <date-part name=\"month\" suffix=\" \" text-case=\"lowercase\"/>\n      <date-part name=\"year\"/>\n    </date>\n  </macro>\n  <macro name=\"number-pages\">\n    <choose>\n      <if type=\"report\">\n        <text variable=\"page\" suffix=\"&#160;p.\"/>\n      </if>\n      <else-if type=\"book manuscript thesis\" match=\"any\">\n        <text variable=\"number-of-pages\" suffix=\"&#160;p.\"/>\n      </else-if>\n      <else>\n        <text variable=\"page\" prefix=\"p.&#160;\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"medium\">\n    <text variable=\"medium\"/>\n  </macro>\n  <macro name=\"length-cit\">\n    <choose>\n      <if type=\"graphic\">\n        <text variable=\"dimensions\"/>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"length-bib\">\n    <text variable=\"dimensions\"/>\n  </macro>\n  <macro name=\"locator\">\n    <choose>\n      <if variable=\"locator\" match=\"none\">\n        <choose>\n          <if type=\"report\">\n            <text variable=\"page\" suffix=\"&#160;p.\"/>\n          </if>\n          <else-if type=\"book manuscript thesis\" match=\"any\">\n            <text variable=\"number-of-pages\" suffix=\"&#160;p.\"/>\n          </else-if>\n          <else>\n            <text variable=\"page\" prefix=\"p.&#160;\"/>\n          </else>\n        </choose>\n      </if>\n      <else-if type=\"bill\">\n        <text variable=\"locator\" prefix=\"art.&#160;\"/>\n      </else-if>\n      <else-if type=\"broadcast interview motion_picture song speech\" match=\"any\">\n        <text variable=\"locator\"/>\n      </else-if>\n      <else>\n        <text variable=\"locator\" prefix=\"p.&#160;\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"url-accessed\">\n    <choose>\n      <if variable=\"URL\" match=\"any\">\n        <group delimiter=\", \">\n          <text variable=\"URL\"/>\n          <date variable=\"accessed\">\n            <date-part name=\"day\" form=\"ordinal\" prefix=\"consulté le \" suffix=\" \"/>\n            <date-part name=\"month\" suffix=\" \" text-case=\"lowercase\"/>\n            <date-part name=\"year\"/>\n          </date>\n        </group>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"number\">\n    <text variable=\"number\"/>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-names=\"true\">\n    <layout delimiter=\"; \" suffix=\".\">\n      <group delimiter=\", \">\n        <choose>\n          <if position=\"ibid-with-locator\">\n            <text term=\"ibid\" text-case=\"capitalize-first\" font-style=\"italic\"/>\n            <text macro=\"locator\"/>\n          </if>\n          <else-if position=\"ibid\">\n            <text term=\"ibid\" text-case=\"capitalize-first\" font-style=\"italic\"/>\n          </else-if>\n          <else-if position=\"subsequent\">\n            <choose>\n              <if variable=\"container-title\" match=\"any\">\n                <text macro=\"author\"/>\n                <choose>\n                  <if disambiguate=\"true\">\n                    <text macro=\"title\"/>\n                  </if>\n                </choose>\n                <text value=\"loc.&#160;cit.\" font-style=\"italic\"/>\n                <text macro=\"locator\"/>\n              </if>\n              <else>\n                <text macro=\"author\"/>\n                <choose>\n                  <if disambiguate=\"true\">\n                    <text macro=\"title\"/>\n                  </if>\n                </choose>\n                <text value=\"op.&#160;cit.\" font-style=\"italic\"/>\n                <text macro=\"locator\"/>\n              </else>\n            </choose>\n          </else-if>\n          <else>\n            <text macro=\"author\"/>\n            <text macro=\"title\"/>\n            <text macro=\"memoire-these\"/>\n            <text macro=\"editor\" prefix=\"dans \"/>\n            <text macro=\"container-title\"/>\n            <text macro=\"number\"/>\n            <text macro=\"event\"/>\n            <text macro=\"edition\"/>\n            <text macro=\"volume\"/>\n            <text macro=\"numero\"/>\n            <text macro=\"place\"/>\n            <text macro=\"scale\"/>\n            <text macro=\"publisher\"/>\n            <text macro=\"collection\"/>\n            <text macro=\"medium\"/>\n            <text macro=\"date\"/>\n            <text macro=\"length-cit\"/>\n            <text macro=\"locator\"/>\n            <text macro=\"url-accessed\"/>\n          </else>\n        </choose>\n      </group>\n    </layout>\n  </citation>\n  <bibliography et-al-min=\"3\" et-al-use-first=\"1\">\n    <sort>\n      <key macro=\"author\" names-min=\"3\" names-use-first=\"3\"/>\n      <key variable=\"issued\" sort=\"descending\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout suffix=\".\">\n      <group delimiter=\", \">\n        <text macro=\"author\"/>\n        <text macro=\"title\"/>\n        <text macro=\"memoire-these\"/>\n        <text macro=\"editor\" prefix=\"dans \"/>\n        <text macro=\"container-title\"/>\n        <text macro=\"number\"/>\n        <text macro=\"event\"/>\n        <text macro=\"edition\"/>\n        <text macro=\"scale\"/>\n        <text macro=\"volume\"/>\n        <text macro=\"numero\"/>\n        <text macro=\"place\"/>\n        <text macro=\"publisher\"/>\n        <text macro=\"collection\"/>\n        <text macro=\"medium\"/>\n        <text macro=\"date\"/>\n        <text macro=\"length-bib\"/>\n        <text macro=\"number-pages\"/>\n        <text macro=\"url-accessed\"/>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"