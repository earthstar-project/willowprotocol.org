"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"note\" version=\"1.0\" demote-non-dropping-particle=\"display-and-sort\">\n  <info>\n    <title>Università Pontificia Salesiana</title>\n    <title-short>UPS</title-short>\n    <id>http://www.zotero.org/styles/universita-pontificia-salesiana</id>\n    <link href=\"http://www.zotero.org/styles/universita-pontificia-salesiana\" rel=\"self\"/>\n    <link href=\"http://www.unisal.it\" rel=\"documentation\"/>\n    <link href=\"http://www.worldcat.org/oclc/868533390\" rel=\"documentation\"/>\n    <author>\n      <name>Xavier Matoses</name>\n      <email>xaviermatoses@gmail.com</email>\n    </author>\n    <author>\n      <name>Gustavo Cavagnari</name>\n    </author>\n    <contributor>\n      <name>Nicolae Turcan</name>\n      <email>nturcan@gmail.com</email>\n    </contributor>\n    <category citation-format=\"note\"/>\n    <category field=\"theology\"/>\n    <category field=\"humanities\"/>\n    <category field=\"philosophy\"/>\n    <category field=\"social_science\"/>\n    <summary>Università Pontificia Salesiana. Style without default-locale to be parent of other styles. See https://github.com/citation-style-language/styles/pull/1194</summary>\n    <updated>2017-03-27T16:26:47+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"editor\">\n    <names variable=\"editor\" delimiter=\", \">\n      <label form=\"verb\" suffix=\" \" text-case=\"lowercase\"/>\n      <name delimiter=\", \" and=\"text\" delimiter-precedes-last=\"never\" initialize-with=\". \"/>\n    </names>\n  </macro>\n  <macro name=\"translator\">\n    <names variable=\"translator\" delimiter=\", \">\n      <label form=\"verb\" text-case=\"lowercase\"/>\n      <name prefix=\" \" and=\"text\" delimiter=\", \" delimiter-precedes-last=\"never\"/>\n    </names>\n  </macro>\n  <macro name=\"editor-short\">\n    <choose>\n      <if variable=\"author\">\n        <names variable=\"container-author editor\" delimiter=\", \">\n          <name delimiter=\" &#8211; \" delimiter-precedes-last=\"always\" initialize-with=\". \">\n            <name-part name=\"family\" font-variant=\"small-caps\"/>\n          </name>\n          <label form=\"short\" text-case=\"capitalize-first\" prefix=\" (\" suffix=\")\"/>\n        </names>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name delimiter=\" &#8211; \" delimiter-precedes-last=\"always\" sort-separator=\", \" initialize-with=\". \">\n        <name-part name=\"family\" font-variant=\"small-caps\"/>\n      </name>\n      <label form=\"short\" text-case=\"capitalize-first\" prefix=\" (\" suffix=\")\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name delimiter=\" &#8211; \" delimiter-precedes-last=\"always\" sort-separator=\", \" initialize-with=\". \">\n        <name-part name=\"family\" font-variant=\"small-caps\"/>\n      </name>\n      <label form=\"short\" text-case=\"capitalize-first\" prefix=\" (\" suffix=\")\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-bib\">\n    <names variable=\"author\">\n      <name name-as-sort-order=\"all\" form=\"long\" delimiter=\" &#8211; \" delimiter-precedes-last=\"always\" sort-separator=\", \">\n        <name-part name=\"family\" font-variant=\"small-caps\"/>\n      </name>\n      <label form=\"short\" text-case=\"capitalize-first\" prefix=\" (\" suffix=\")\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-sort\">\n    <names variable=\"author\">\n      <name name-as-sort-order=\"all\" form=\"long\" delimiter=\" &#8211; \" delimiter-precedes-last=\"always\" sort-separator=\", \"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"recipient\">\n    <names variable=\"recipient\" delimiter=\", \">\n      <label form=\"verb\" prefix=\" \" text-case=\"lowercase\" suffix=\" \"/>\n      <name and=\"text\" delimiter=\", \"/>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <choose>\n      <if variable=\"URL\">\n        <text term=\"in\" text-case=\"lowercase\" suffix=\" \"/>\n        <text variable=\"URL\"/>\n        <group prefix=\" (\" suffix=\")\" delimiter=\": \">\n          <text term=\"accessed\" text-case=\"capitalize-first\"/>\n          <date variable=\"accessed\">\n            <date-part name=\"day\" suffix=\" \"/>\n            <date-part name=\"month\" suffix=\" \" text-case=\"lowercase\"/>\n            <date-part name=\"year\"/>\n          </date>\n        </group>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"bill book graphic legal_case motion_picture report song\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n        <!-- workaround for texts of the Magisterium: -->\n        <text variable=\"archive\" prefix=\", \"/>\n        <!-- workaround for texts of conferences and symposia: -->\n        <text variable=\"archive_location\" prefix=\". \"/>\n      </if>\n      <else>\n        <text variable=\"title\" font-style=\"italic\"/>\n        <!-- workaround for texts of the Magisterium: -->\n        <text variable=\"archive\" prefix=\", \"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"title-short\">\n    <choose>\n      <if type=\"bill book graphic legal_case motion_picture report song\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\" form=\"short\"/>\n      </if>\n      <else>\n        <text variable=\"title\" font-style=\"italic\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\", \">\n      <text variable=\"publisher-place\"/>\n      <text variable=\"publisher\"/>\n    </group>\n  </macro>\n  <macro name=\"issued\">\n    <choose>\n      <if type=\"graphic report\" match=\"any\">\n        <date variable=\"issued\">\n          <date-part name=\"day\" suffix=\" \"/>\n          <date-part name=\"month\" suffix=\" \" text-case=\"lowercase\"/>\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else-if type=\"bill book graphic legal_case motion_picture report song thesis chapter paper-conference entry-encyclopedia entry-dictionary\" match=\"any\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </else-if>\n      <else>\n        <date variable=\"issued\">\n          <date-part name=\"day\" suffix=\" \"/>\n          <date-part name=\"month\" suffix=\" \" text-case=\"lowercase\"/>\n          <date-part name=\"year\"/>\n        </date>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"locators\">\n    <choose>\n      <if locator=\"page\">\n        <text variable=\"locator\" prefix=\" \"/>\n      </if>\n      <else-if locator=\"paragraph\">\n        <group>\n          <label variable=\"locator\" form=\"symbol\" strip-periods=\"true\"/>\n          <text variable=\"locator\" prefix=\" \"/>\n        </group>\n      </else-if>\n      <else>\n        <group>\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\" prefix=\" \"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"volume\">\n    <group delimiter=\" \">\n      <text term=\"volume\" form=\"short\"/>\n      <text variable=\"volume\"/>\n    </group>\n  </macro>\n  <macro name=\"pages\">\n    <group>\n      <text variable=\"page\" prefix=\" \"/>\n    </group>\n  </macro>\n  <macro name=\"edition-issued\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <text variable=\"edition\" prefix=\" \" vertical-align=\"sup\"/>\n        <text macro=\"issued\"/>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n        <choose>\n          <if type=\"report\">\n            <text macro=\"issued\"/>\n          </if>\n          <else>\n            <text macro=\"issued\" prefix=\" \"/>\n          </else>\n        </choose>\n      </else>\n    </choose>\n  </macro>\n  <citation et-al-min=\"4\" et-al-use-first=\"1\" disambiguate-add-names=\"true\">\n    <layout suffix=\".\" delimiter=\"; \">\n      <choose>\n        <if position=\"ibid-with-locator\">\n          <group delimiter=\", \">\n            <text term=\"ibid\" text-case=\"capitalize-first\" font-style=\"italic\"/>\n            <text macro=\"locators\"/>\n          </group>\n        </if>\n        <else-if position=\"ibid\">\n          <text term=\"ibid\" text-case=\"capitalize-first\" font-style=\"italic\"/>\n        </else-if>\n        <else-if position=\"subsequent\">\n          <group delimiter=\", \">\n            <group>\n              <text macro=\"author-short\"/>\n              <text macro=\"recipient\"/>\n            </group>\n            <choose>\n              <if type=\"chapter article-journal article-magazine entry-encyclopedia entry-dictionary\" match=\"any\">\n                <text macro=\"title-short\"/>\n              </if>\n              <else-if type=\"book\">\n                <group delimiter=\", \">\n                  <text macro=\"title-short\"/>\n                  <text variable=\"volume\"/>\n                </group>\n              </else-if>\n              <else>\n                <group delimiter=\", \">\n                  <text macro=\"title-short\"/>\n                  <text macro=\"volume\"/>\n                </group>\n              </else>\n            </choose>\n            <choose>\n              <if type=\"interview\">\n                <text term=\"interview\" text-case=\"lowercase\"/>\n              </if>\n              <else-if variable=\"recipient\">\n                <text macro=\"issued\"/>\n              </else-if>\n            </choose>\n            <text macro=\"locators\"/>\n          </group>\n        </else-if>\n        <else>\n          <group suffix=\", \">\n            <text macro=\"author\"/>\n            <text macro=\"recipient\"/>\n          </group>\n          <text macro=\"title\"/>\n          <choose>\n            <if type=\"chapter paper-conference entry-encyclopedia entry-dictionary\" match=\"any\">\n              <group>\n                <text term=\"in\" text-case=\"lowercase\" prefix=\", \"/>\n                <group delimiter=\", \" prefix=\" \">\n                  <text macro=\"editor-short\"/>\n                  <text variable=\"container-title\" font-style=\"italic\"/>\n                </group>\n                <!-- workaround for texts of conferences and symposia: -->\n                <text variable=\"archive_location\" prefix=\". \"/>\n                <text macro=\"volume\" prefix=\", \"/>\n                <group prefix=\", \">\n                  <number variable=\"number-of-volumes\" form=\"numeric\"/>\n                  <text term=\"volume\" form=\"short\" prefix=\" \" plural=\"true\"/>\n                </group>\n              </group>\n              <text macro=\"translator\" prefix=\", \"/>\n              <text macro=\"publisher\" prefix=\", \"/>\n              <text macro=\"edition-issued\" prefix=\", \"/>\n            </if>\n            <else-if type=\"article-journal article-newspaper article-magazine\" match=\"any\">\n              <group>\n                <text term=\"in\" text-case=\"lowercase\" prefix=\", \"/>\n                <group>\n                  <text variable=\"container-title\" form=\"short\" quotes=\"true\" prefix=\" \"/>\n                  <text variable=\"volume\" prefix=\" \"/>\n                  <text macro=\"issued\" prefix=\" (\" suffix=\")\"/>\n                  <text variable=\"issue\" prefix=\" \"/>\n                </group>\n                <text macro=\"editor\" prefix=\", \"/>\n                <text macro=\"translator\" prefix=\", \"/>\n                <text variable=\"edition\" prefix=\", \"/>\n                <text macro=\"publisher\" prefix=\", \"/>\n              </group>\n            </else-if>\n            <else-if type=\"bill book graphic legal_case motion_picture report post-weblog song\" match=\"any\">\n              <text macro=\"volume\" prefix=\", \"/>\n              <group prefix=\", \">\n                <number variable=\"number-of-volumes\" form=\"numeric\"/>\n                <text term=\"volume\" form=\"short\" prefix=\" \" plural=\"true\"/>\n              </group>\n              <text macro=\"translator\" prefix=\", \"/>\n              <text macro=\"editor\" prefix=\", \"/>\n              <group prefix=\", \" delimiter=\", \">\n                <text macro=\"publisher\"/>\n                <text macro=\"edition-issued\"/>\n              </group>\n            </else-if>\n            <else>\n              <group>\n                <text variable=\"container-title\" font-style=\"italic\" prefix=\", \"/>\n                <text variable=\"volume\" prefix=\" \"/>\n                <text variable=\"issue\" prefix=\", \"/>\n              </group>\n            </else>\n          </choose>\n          <choose>\n            <if type=\"article-journal article-magazine chapter entry-encyclopedia entry-dictionary\" match=\"any\">\n              <text macro=\"pages\" prefix=\", \"/>\n              <text macro=\"locators\" prefix=\": \"/>\n            </if>\n            <else-if type=\"book\" match=\"any\">\n              <text macro=\"pages\" prefix=\", \"/>\n              <text macro=\"locators\" prefix=\", \"/>\n            </else-if>\n            <else>\n              <text macro=\"locators\" prefix=\", \"/>\n            </else>\n          </choose>\n          <choose>\n            <if type=\"webpage\">\n              <text macro=\"access\" prefix=\", \"/>\n            </if>\n          </choose>\n        </else>\n      </choose>\n    </layout>\n  </citation>\n  <bibliography hanging-indent=\"true\" et-al-min=\"7\" et-al-use-first=\"6\" subsequent-author-substitute=\"&#8212;&#8212;&#8212;\" entry-spacing=\"0\">\n    <sort>\n      <key macro=\"author-sort\"/>\n      <key variable=\"title\"/>\n      <key variable=\"issued\"/>\n    </sort>\n    <layout suffix=\".\">\n      <text macro=\"author-bib\" suffix=\", \"/>\n      <text macro=\"title\"/>\n      <choose>\n        <if type=\"chapter entry-encyclopedia entry-dictionary paper-conference\" match=\"any\">\n          <group>\n            <text term=\"in\" text-case=\"lowercase\" prefix=\", \"/>\n            <group delimiter=\", \" prefix=\" \">\n              <text macro=\"editor-short\"/>\n              <text variable=\"container-title\" font-style=\"italic\"/>\n            </group>\n            <!-- workaround for texts of conferences and symposia: -->\n            <text variable=\"archive_location\" prefix=\". \"/>\n            <text macro=\"volume\" prefix=\", \"/>\n            <group prefix=\", \">\n              <number variable=\"number-of-volumes\" form=\"numeric\"/>\n              <text term=\"volume\" form=\"short\" prefix=\" \" plural=\"true\"/>\n            </group>\n            <group prefix=\" (=&#160;\" suffix=\")\" delimiter=\", \">\n              <text variable=\"collection-title\"/>\n              <text variable=\"collection-number\"/>\n            </group>\n          </group>\n          <text macro=\"translator\" prefix=\", \"/>\n          <text macro=\"publisher\" prefix=\", \"/>\n          <text macro=\"edition-issued\" prefix=\", \"/>\n          <group>\n            <text variable=\"page\" prefix=\", \"/>\n          </group>\n        </if>\n        <else-if type=\"article-journal article-newspaper article-magazine\" match=\"any\">\n          <group>\n            <text term=\"in\" text-case=\"lowercase\" prefix=\", \"/>\n            <text variable=\"container-title\" form=\"short\" quotes=\"true\" prefix=\" \"/>\n            <text variable=\"volume\" prefix=\" \"/>\n            <text macro=\"issued\" prefix=\" (\" suffix=\")\"/>\n            <text variable=\"issue\" prefix=\" \"/>\n          </group>\n          <text macro=\"editor\" prefix=\", \"/>\n          <text macro=\"translator\" prefix=\", \"/>\n          <text variable=\"edition\" prefix=\", \"/>\n          <text macro=\"publisher\" prefix=\", \"/>\n          <text macro=\"pages\" prefix=\", \"/>\n        </else-if>\n        <else-if type=\"bill book graphic legal_case motion_picture report post-weblog song\" match=\"any\">\n          <group>\n            <text macro=\"volume\" prefix=\", \"/>\n            <group prefix=\", \">\n              <number variable=\"number-of-volumes\" form=\"numeric\"/>\n              <text term=\"volume\" form=\"short\" prefix=\" \" plural=\"true\"/>\n            </group>\n            <group prefix=\" (=&#160;\" suffix=\")\" delimiter=\", \">\n              <text variable=\"collection-title\"/>\n              <text variable=\"collection-number\"/>\n            </group>\n          </group>\n          <text macro=\"translator\" prefix=\", \"/>\n          <text macro=\"editor\" prefix=\", \"/>\n          <group prefix=\", \" delimiter=\", \">\n            <text macro=\"publisher\"/>\n            <text macro=\"edition-issued\"/>\n          </group>\n        </else-if>\n        <else>\n          <group>\n            <text variable=\"container-title\" font-style=\"italic\" prefix=\", \"/>\n            <text macro=\"volume\" prefix=\", \"/>\n            <text variable=\"issue\" prefix=\", \"/>\n          </group>\n        </else>\n      </choose>\n      <group delimiter=\", \" prefix=\" [\" suffix=\"]\">\n        <text variable=\"original-title\" font-style=\"italic\"/>\n        <text variable=\"original-publisher-place\"/>\n        <text variable=\"original-publisher\"/>\n        <date variable=\"original-date\">\n          <date-part name=\"year\"/>\n        </date>\n      </group>\n      <text macro=\"locators\" prefix=\", \"/>\n      <text macro=\"access\" prefix=\", \"/>\n    </layout>\n  </bibliography>\n</style>\n"