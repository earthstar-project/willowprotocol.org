"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" page-range-format=\"expanded\" demote-non-dropping-particle=\"never\" default-locale=\"en-GB\">\n  <!-- This style was edited with the Visual CSL Editor (https://editor.citationstyles.org/visualEditor/) -->\n  <info>\n    <title>Bulletin of Geosciences</title>\n    <id>http://www.zotero.org/styles/bulletin-of-geosciences</id>\n    <link href=\"http://www.zotero.org/styles/bulletin-of-geosciences\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/journal-of-systematic-palaeontology\" rel=\"template\"/>\n    <link href=\"http://www.geology.cz/bulletin/instructions\" rel=\"documentation\"/>\n    <author>\n      <name>M. Sch√§del</name>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"geology\"/>\n    <issn>1214-1119</issn>\n    <eissn>1802-8225</eissn>\n    <updated>2019-08-28T16:56:40+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"en-GB\">\n    <terms>\n      <term name=\"editor\" form=\"short\">\n        <single>ed.</single>\n        <multiple>eds</multiple>\n      </term>\n    </terms>\n  </locale>\n  <macro name=\"editor\">\n    <names variable=\"editor\" delimiter=\", \">\n      <name and=\"symbol\" delimiter-precedes-last=\"never\" initialize-with=\".\" name-as-sort-order=\"all\"/>\n      <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n    </names>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\" font-variant=\"small-caps\" font-weight=\"normal\">\n      <name and=\"symbol\" delimiter-precedes-last=\"never\" initialize-with=\".\" name-as-sort-order=\"all\"/>\n      <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text macro=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-count\">\n    <names variable=\"author\">\n      <name form=\"count\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"symbol\" delimiter=\", \" delimiter-precedes-last=\"never\"/>\n      <et-al font-style=\"italic\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text macro=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <choose>\n      <if variable=\"DOI\" match=\"any\">\n        <text variable=\"DOI\" prefix=\" DOI \"/>\n      </if>\n      <else-if variable=\"URL\" type=\"webpage\" match=\"all\">\n        <text variable=\"URL\" prefix=\". World Wide Web Address: \"/>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"bill book graphic legal_case legislation map motion_picture report song thesis\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\" text-case=\"title\"/>\n      </if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <choose>\n      <if type=\"thesis\" match=\"none\">\n        <group delimiter=\", \">\n          <text variable=\"publisher\"/>\n          <text variable=\"publisher-place\"/>\n          <group delimiter=\" \">\n            <text variable=\"genre\"/>\n            <text variable=\"number\" font-weight=\"bold\"/>\n          </group>\n          <text variable=\"collection-title\"/>\n          <text variable=\"collection-number\" font-weight=\"normal\"/>\n        </group>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"year-date\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\" suffix=\".\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\" suffix=\".\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"container-collection-event-volume\">\n    <choose>\n      <if type=\"paper-conference\">\n        <group delimiter=\", \">\n          <group delimiter=\". \">\n            <group delimiter=\" &#8211; \">\n              <text variable=\"container-title\" font-style=\"italic\" text-case=\"title\"/>\n              <text variable=\"event\"/>\n            </group>\n            <text variable=\"number\"/>\n          </group>\n        </group>\n      </if>\n      <else>\n        <group delimiter=\". \">\n          <text variable=\"container-title\" font-style=\"italic\" text-case=\"title\"/>\n          <text variable=\"event\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" disambiguate-add-givenname=\"true\" collapse=\"year-suffix\" year-suffix-delimiter=\",\">\n    <sort>\n      <key variable=\"issued\"/>\n      <key variable=\"author\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\" \">\n        <group delimiter=\" \">\n          <text macro=\"author-short\"/>\n          <text macro=\"year-date\"/>\n        </group>\n        <group delimiter=\" \">\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </group>\n    </layout>\n  </citation>\n  <bibliography hanging-indent=\"true\">\n    <sort>\n      <key macro=\"author\" names-min=\"1\" names-use-first=\"1\"/>\n      <key macro=\"author-count\" names-min=\"3\" names-use-first=\"3\"/>\n      <key macro=\"author\" names-min=\"3\" names-use-first=\"1\"/>\n      <key macro=\"year-date\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout>\n      <group suffix=\".\">\n        <group delimiter=\". \">\n          <text macro=\"author\"/>\n          <text macro=\"year-date\"/>\n          <choose>\n            <if type=\"bill book graphic legal_case legislation map motion_picture report song\" match=\"any\">\n              <group delimiter=\". \">\n                <text macro=\"title\"/>\n                <text macro=\"edition\"/>\n                <text macro=\"editor\"/>\n              </group>\n              <group delimiter=\"\">\n                <group delimiter=\" \">\n                  <text variable=\"number-of-pages\"/>\n                  <text term=\"page\" form=\"short\" plural=\"true\"/>\n                </group>\n                <text macro=\"publisher\" prefix=\" \"/>\n              </group>\n            </if>\n            <else-if type=\"chapter paper-conference\" match=\"any\">\n              <group delimiter=\". \">\n                <text macro=\"title\" prefix=\" \" suffix=\".\"/>\n                <group delimiter=\" \">\n                  <text term=\"in\" text-case=\"capitalize-first\" suffix=\":\"/>\n                  <text macro=\"editor\"/>\n                  <text macro=\"container-collection-event-volume\"/>\n                </group>\n              </group>\n              <group suffix=\".\" delimiter=\", \" prefix=\" \">\n                <text macro=\"publisher\"/>\n                <text variable=\"page\"/>\n              </group>\n            </else-if>\n            <else-if type=\"thesis\">\n              <group prefix=\" \" suffix=\".\" delimiter=\". \">\n                <text macro=\"title\"/>\n                <group delimiter=\", \">\n                  <text variable=\"genre\"/>\n                  <text variable=\"publisher\"/>\n                  <group delimiter=\" \">\n                    <text variable=\"number-of-pages\"/>\n                    <text term=\"page\" form=\"short\" plural=\"true\"/>\n                  </group>\n                </group>\n              </group>\n            </else-if>\n            <else>\n              <group>\n                <text macro=\"title\"/>\n                <text macro=\"editor\" prefix=\" \"/>\n              </group>\n              <group font-style=\"italic\">\n                <text variable=\"container-title\"/>\n                <text variable=\"volume\" font-variant=\"normal\" prefix=\" \"/>\n                <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n                <text variable=\"page\" font-style=\"normal\" prefix=\", \"/>\n              </group>\n            </else>\n          </choose>\n        </group>\n      </group>\n      <text macro=\"access\"/>\n    </layout>\n  </bibliography>\n</style>\n"