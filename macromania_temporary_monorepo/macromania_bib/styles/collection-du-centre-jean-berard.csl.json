"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" version=\"1.0\" class=\"note\" demote-non-dropping-particle=\"never\" page-range-format=\"expanded\" default-locale=\"fr-FR\">\n  <info>\n    <title>Collection du Centre Jean-Bérard (Français)</title>\n    <id>http://www.zotero.org/styles/collection-du-centre-jean-berard</id>\n    <link href=\"http://www.zotero.org/styles/collection-du-centre-jean-berard\" rel=\"self\"/>\n    <link href=\"http://www.centre-jean-berard.cnrs.fr/\" rel=\"documentation\"/>\n    <author>\n      <name>Nicolas Monteix</name>\n      <email>nicolas.monteix@univ-rouen.fr</email>\n    </author>\n    <category citation-format=\"note\"/>\n    <category field=\"history\"/>\n    <category field=\"anthropology\"/>\n    <issn>1590-3869</issn>\n    <summary>Feuille de style pour la Collection du Centre Jean-Bérard</summary>\n    <updated>2020-07-20T17:33:39+01:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"fr\">\n    <terms>\n      <term name=\"editor\" form=\"short\">dir.</term>\n      <term name=\"in\">dans</term>\n      <term name=\"anonymous\">anonyme</term>\n      <term name=\"anonymous\" form=\"short\">anon.</term>\n      <term name=\"no date\">sans date</term>\n      <term name=\"no date\" form=\"short\">s.&#160;d.</term>\n      <term name=\"paragraph\" form=\"short\">§</term>\n    </terms>\n  </locale>\n  <macro name=\"author\">\n    <names variable=\"author\" delimiter=\", \">\n      <name sort-separator=\", \" initialize-with=\".&#160;\" delimiter=\", \"/>\n      <et-al font-variant=\"normal\" font-style=\"italic\"/>\n      <substitute>\n        <text macro=\"container-author\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\" delimiter=\", \">\n      <name sort-separator=\", \" initialize-with=\".\" delimiter=\", \"/>\n      <et-al font-variant=\"normal\" font-style=\"italic\"/>\n      <label form=\"short\" prefix=\" (\" text-case=\"lowercase\" suffix=\")\"/>\n      <substitute>\n        <text macro=\"container-author\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"container-author\">\n    <names variable=\"container-author\" delimiter=\", \">\n      <name sort-separator=\", \" initialize-with=\".\" delimiter=\", \"/>\n      <et-al font-style=\"italic\" font-variant=\"normal\"/>\n    </names>\n  </macro>\n  <macro name=\"pages\">\n    <group delimiter=\"&#160;\">\n      <label variable=\"page\" form=\"short\"/>\n      <text variable=\"page\"/>\n    </group>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" delimiter=\", \"/>\n      <et-al font-variant=\"normal\" font-style=\"italic\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text variable=\"title-short\" font-style=\"italic\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"collection\">\n    <group prefix=\" (\" suffix=\")\" delimiter=\", \">\n      <text variable=\"collection-title\"/>\n      <text variable=\"collection-number\"/>\n    </group>\n  </macro>\n  <macro name=\"locator\">\n    <choose>\n      <if locator=\"paragraph folio issue\" match=\"any\">\n        <group prefix=\",&#160;\" delimiter=\"&#160;\">\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </if>\n      <else>\n        <group prefix=\",&#160;\" delimiter=\"&#160;\">\n          <label variable=\"locator\" form=\"short\" suffix=\".&#160;\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"book\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </if>\n      <else-if type=\"webpage\" match=\"any\">\n        <text variable=\"title\"/>\n      </else-if>\n      <else-if variable=\"container-title\" match=\"none\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </else-if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <text variable=\"publisher-place\"/>\n  </macro>\n  <macro name=\"year-date\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\" text-case=\"lowercase\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <citation et-al-min=\"4\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" collapse=\"year\">\n    <layout delimiter=\"&#160;; \">\n      <group>\n        <text macro=\"author-short\" suffix=\" \"/>\n        <text macro=\"year-date\"/>\n        <text macro=\"locator\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography>\n    <sort>\n      <key macro=\"author\"/>\n      <key variable=\"issued\"/>\n      <key variable=\"page-first\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout suffix=\".\">\n      <group>\n        <choose>\n          <if variable=\"author\">\n            <names variable=\"author\">\n              <name form=\"short\" delimiter=\", \" et-al-min=\"4\" et-al-use-first=\"1\"/>\n              <et-al font-variant=\"normal\" font-style=\"italic\"/>\n            </names>\n          </if>\n          <else-if variable=\"editor\">\n            <names variable=\"editor\">\n              <name form=\"short\" delimiter=\", \" et-al-min=\"4\" et-al-use-first=\"1\"/>\n              <substitute>\n                <text macro=\"container-author\"/>\n              </substitute>\n            </names>\n          </else-if>\n          <else>\n            <text variable=\"title-short\"/>\n          </else>\n        </choose>\n        <text macro=\"year-date\" prefix=\" \" suffix=\"&#160;: \"/>\n      </group>\n      <group>\n        <choose>\n          <if variable=\"author\">\n            <text macro=\"author\" suffix=\", \"/>\n          </if>\n          <else-if variable=\"editor\">\n            <text macro=\"editor\" suffix=\", \"/>\n          </else-if>\n        </choose>\n        <choose>\n          <if type=\"thesis\">\n            <group delimiter=\", \">\n              <text macro=\"title\" font-style=\"italic\"/>\n              <text variable=\"genre\"/>\n              <text variable=\"publisher\" prefix=\"soutenue à l'\"/>\n              <text macro=\"year-date\"/>\n            </group>\n          </if>\n          <else-if type=\"webpage\">\n            <group delimiter=\" \">\n              <group suffix=\",\" delimiter=\", \">\n                <choose>\n                  <if variable=\"container-title\" match=\"none\">\n                    <text macro=\"title\" font-style=\"italic\"/>\n                  </if>\n                  <else>\n                    <text macro=\"title\"/>\n                    <text variable=\"container-title\" font-style=\"italic\"/>\n                  </else>\n                </choose>\n              </group>\n              <text macro=\"year-date\"/>\n              <group prefix=\" &lt;\" suffix=\"&gt;\" delimiter=\", \">\n                <text variable=\"URL\"/>\n              </group>\n            </group>\n          </else-if>\n          <else-if type=\"article-journal article-magazine article-newspaper broadcast personal_communication thesis\" match=\"any\">\n            <group delimiter=\", \">\n              <text macro=\"title\"/>\n              <text variable=\"container-title\" form=\"short\" font-style=\"italic\"/>\n              <text variable=\"volume\"/>\n              <text variable=\"issue\"/>\n              <text macro=\"year-date\"/>\n              <text macro=\"pages\"/>\n            </group>\n          </else-if>\n          <else-if type=\"book graphic\" match=\"any\">\n            <group>\n              <text macro=\"title\"/>\n              <text macro=\"edition\" prefix=\", \"/>\n              <text macro=\"publisher\" prefix=\", \"/>\n              <text macro=\"year-date\" prefix=\", \"/>\n              <text macro=\"collection\"/>\n            </group>\n          </else-if>\n          <else-if type=\"entry-dictionary entry-encyclopedia\" match=\"any\">\n            <group delimiter=\", \">\n              <text macro=\"title\"/>\n              <choose>\n                <if variable=\"title-short\" match=\"any\">\n                  <text variable=\"title\" form=\"short\" font-style=\"italic\"/>\n                </if>\n                <else>\n                  <text variable=\"container-title\" font-style=\"italic\"/>\n                </else>\n              </choose>\n              <group delimiter=\"&#160;\">\n                <label variable=\"volume\" form=\"short\"/>\n                <text variable=\"volume\"/>\n              </group>\n              <text macro=\"year-date\"/>\n              <text macro=\"pages\"/>\n            </group>\n          </else-if>\n          <else-if type=\"chapter paper-conference\" match=\"any\">\n            <text macro=\"title\" suffix=\", \"/>\n            <group prefix=\"in \">\n              <text macro=\"editor\" suffix=\", \"/>\n              <text variable=\"container-title\" font-style=\"italic\"/>\n              <text macro=\"publisher\" prefix=\", \"/>\n              <text macro=\"year-date\" prefix=\", \"/>\n              <text macro=\"collection\" prefix=\" \"/>\n              <text macro=\"pages\" prefix=\", \"/>\n            </group>\n          </else-if>\n        </choose>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"