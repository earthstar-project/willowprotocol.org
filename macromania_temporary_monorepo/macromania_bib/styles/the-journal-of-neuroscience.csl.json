"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"never\" page-range-format=\"expanded\" default-locale=\"en-US\">\n  <info>\n    <title>The Journal of Neuroscience</title>\n    <id>http://www.zotero.org/styles/the-journal-of-neuroscience</id>\n    <link href=\"http://www.zotero.org/styles/the-journal-of-neuroscience\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/harvard-cite-them-right\" rel=\"template\"/>\n    <link href=\"http://www.jneurosci.org/site/misc/ifa_organization.xhtml#References\" rel=\"documentation\"/>\n    <author>\n      <name>Ullrich Bartsch</name>\n      <email>ubartsch@gmail.com</email>\n    </author>\n    <contributor>\n      <name>Omar Mian</name>\n      <email>o.mian@ucl.ac.uk</email>\n    </contributor>\n    <category citation-format=\"author-date\"/>\n    <category field=\"medicine\"/>\n    <issn>0270-6474</issn>\n    <eissn>1529-2401</eissn>\n    <summary>The Journal of Neuroscience style</summary>\n    <updated>2012-09-27T22:06:38+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"editor\">\n    <names variable=\"editor\">\n      <name name-as-sort-order=\"all\" sort-separator=\" \" initialize-with=\"\" delimiter=\", \" delimiter-precedes-last=\"always\"/>\n      <label form=\"short\" prefix=\", \" strip-periods=\"true\"/>\n    </names>\n  </macro>\n  <macro name=\"anon\">\n    <text term=\"anonymous\" form=\"short\" text-case=\"capitalize-first\" strip-periods=\"true\"/>\n  </macro>\n  <macro name=\"author-bib\">\n    <names variable=\"author\">\n      <name name-as-sort-order=\"all\" sort-separator=\" \" initialize-with=\"\" delimiter=\", \" delimiter-precedes-last=\"always\"/>\n      <label form=\"short\" prefix=\" \"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text macro=\"anon\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-cit\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"text\" delimiter=\" \" initialize-with=\"\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text macro=\"anon\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <choose>\n      <if variable=\"URL\">\n        <text value=\"Available at:\" suffix=\" \"/>\n        <text variable=\"URL\"/>\n        <group prefix=\" [\" suffix=\"]\">\n          <text term=\"accessed\" text-case=\"capitalize-first\" suffix=\" \"/>\n          <date variable=\"accessed\">\n            <date-part name=\"month\" suffix=\" \"/>\n            <date-part name=\"day\" suffix=\", \"/>\n            <date-part name=\"year\"/>\n          </date>\n        </group>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n        <text variable=\"title\"/>\n      </if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\": \">\n      <text variable=\"publisher-place\"/>\n      <text variable=\"publisher\"/>\n    </group>\n  </macro>\n  <macro name=\"year-date\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\" suffix=\".\"/>\n      </else>\n    </choose>\n  </macro>\n  <!--   formatting citation      -->\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" collapse=\"year\">\n    <sort>\n      <key macro=\"year-date\"/>\n      <key macro=\"author-cit\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\" \">\n        <group delimiter=\", \">\n          <text macro=\"author-cit\"/>\n          <text macro=\"year-date\"/>\n        </group>\n        <text variable=\"locator\" prefix=\"p.\"/>\n      </group>\n    </layout>\n  </citation>\n  <!--  formatting bibliography  -->\n  <bibliography hanging-indent=\"true\" et-al-min=\"20\" et-al-use-first=\"1\">\n    <sort>\n      <key macro=\"author-bib\"/>\n      <key macro=\"year-date\"/>\n    </sort>\n    <layout suffix=\".\">\n      <group delimiter=\" \">\n        <text macro=\"author-bib\"/>\n        <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n      </group>\n      <choose>\n        <if type=\"bill book graphic legal_case legislation motion_picture report song\" match=\"any\">\n          <group prefix=\" \" suffix=\".\">\n            <text macro=\"title\"/>\n            <text macro=\"editor\" prefix=\" (\" suffix=\").\"/>\n            <text macro=\"edition\" prefix=\", \"/>\n          </group>\n          <text prefix=\" \" suffix=\".\" macro=\"publisher\"/>\n        </if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <text macro=\"title\" prefix=\" \" suffix=\".\"/>\n          <group prefix=\" \">\n            <text term=\"in\" text-case=\"capitalize-first\"/>\n            <text variable=\"container-title\" font-style=\"normal\" prefix=\": \"/>\n            <text macro=\"edition\" prefix=\", \"/>\n            <text macro=\"editor\" prefix=\" (\" suffix=\")\"/>\n            <text variable=\"page\" prefix=\", pp \"/>\n            <text variable=\"collection-title\" prefix=\" \" suffix=\".\"/>\n            <group prefix=\". \" suffix=\".\">\n              <text macro=\"publisher\" prefix=\" \"/>\n            </group>\n          </group>\n        </else-if>\n        <else>\n          <group suffix=\".\" delimiter=\" \" prefix=\" \">\n            <text macro=\"title\"/>\n            <text macro=\"editor\"/>\n          </group>\n          <group prefix=\" \">\n            <text variable=\"container-title\" font-style=\"normal\" form=\"short\" strip-periods=\"true\"/>\n            <text variable=\"volume\" prefix=\" \"/>\n            <group prefix=\":\">\n              <text variable=\"page\"/>\n            </group>\n          </group>\n        </else>\n      </choose>\n      <text prefix=\" \" macro=\"access\"/>\n    </layout>\n  </bibliography>\n</style>\n"