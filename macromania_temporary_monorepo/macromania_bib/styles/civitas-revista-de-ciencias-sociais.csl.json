"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" version=\"1.0\" class=\"in-text\" demote-non-dropping-particle=\"never\">\n  <!-- Polyglot; journal publishes in Portuguese, Spanish, and English -->\n  <info>\n    <title>Civitas: Revista de CiÃªncias Sociais</title>\n    <title-short>Civitas</title-short>\n    <id>http://www.zotero.org/styles/civitas-revista-de-ciencias-sociais</id>\n    <link href=\"http://www.zotero.org/styles/civitas-revista-de-ciencias-sociais\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/associacao-brasileira-de-normas-tecnicas-ufmg-face-full\" rel=\"template\"/>\n    <link href=\"http://revistaseletronicas.pucrs.br/ojs/index.php/civitas/about/submissions#authorGuidelines\" rel=\"documentation\"/>\n    <author>\n      <name>Emil A. Sobottka</name>\n      <email>sobottka@pucrs.br</email>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"social_science\"/>\n    <issn>1519-6089</issn>\n    <eissn>1984-7289</eissn>\n    <summary>Reference style for Civitas: Journal of Social Sciences</summary>\n    <updated>2019-03-09T18:59:59+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"container-contributors\">\n    <choose>\n      <if type=\"chapter entry-dictionary\" match=\"any\">\n        <text term=\"in\" suffix=\": \" text-case=\"capitalize-first\"/>\n        <names variable=\"container-author\" delimiter=\", \">\n          <name delimiter=\"; \" delimiter-precedes-last=\"always\"/>\n          <label form=\"short\" prefix=\" (\" suffix=\"). \"/>\n          <substitute>\n            <names variable=\"editor\"/>\n            <names variable=\"collection-editor\"/>\n          </substitute>\n        </names>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"secondary-contributors\">\n    <choose>\n      <if type=\"chapter entry-dictionary\" match=\"none\">\n        <names variable=\"editor\" delimiter=\", \" prefix=\" (\" suffix=\")\">\n          <name and=\"symbol\" delimiter=\", \"/>\n          <label form=\"short\" prefix=\", \" text-case=\"capitalize-first\" suffix=\" \"/>\n        </names>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"translator\">\n    <text value=\"Tr.: \"/>\n    <names variable=\"translator\" delimiter=\", \">\n      <name delimiter=\"; \" sort-separator=\", \" delimiter-precedes-last=\"always\"/>\n    </names>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name name-as-sort-order=\"all\" sort-separator=\", \" delimiter=\"; \" delimiter-precedes-last=\"always\" delimiter-precedes-et-al=\"never\">\n        <name-part name=\"family\" text-case=\"uppercase\"/>\n        <name-part name=\"given\" text-case=\"capitalize-first\"/>\n      </name>\n      <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text macro=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" name-as-sort-order=\"all\" sort-separator=\", \" delimiter=\"; \" delimiter-precedes-last=\"always\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <choose>\n      <if variable=\"DOI\">\n        <text variable=\"DOI\" prefix=\" &lt;https://doi.org/\" suffix=\"&gt;\"/>\n      </if>\n      <else>\n        <choose>\n          <if variable=\"URL\">\n            <text variable=\"URL\" prefix=\" &lt;\" suffix=\"&gt;\"/>\n            <date variable=\"accessed\" prefix=\" (\" suffix=\").\">\n              <date-part name=\"day\" suffix=\" \"/>\n              <date-part name=\"month\" form=\"short\" suffix=\" \"/>\n              <date-part name=\"year\"/>\n            </date>\n          </if>\n        </choose>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"chapter paper-conference entry-dictionary entry-encyclopedia article-newspaper article-magazine article-journal\" match=\"any\">\n        <text variable=\"title\"/>\n      </if>\n      <else-if type=\"book thesis bill\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </else-if>\n      <else>\n        <text variable=\"title\" font-style=\"italic\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"container-title\">\n    <text variable=\"container-title\" font-style=\"italic\"/>\n  </macro>\n  <macro name=\"publisher\">\n    <choose>\n      <if match=\"any\" variable=\"publisher-place publisher\">\n        <group delimiter=\": \">\n          <choose>\n            <if variable=\"publisher-place\">\n              <text variable=\"publisher-place\"/>\n            </if>\n            <else>\n              <text value=\"[S.l.]\"/>\n            </else>\n          </choose>\n          <choose>\n            <if variable=\"publisher\">\n              <text variable=\"publisher\"/>\n            </if>\n            <else>\n              <text value=\"[s.n.]\"/>\n            </else>\n          </choose>\n        </group>\n      </if>\n      <else>\n        <text value=\"[S.l: s.n.]\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"event\">\n    <choose>\n      <if type=\"paper-conference\" match=\"any\">\n        <text term=\"in\" suffix=\": \" text-case=\"capitalize-first\"/>\n        <text variable=\"event\"/>\n      </if>\n      <else>\n        <text variable=\"event\"/>\n        <text variable=\"event-place\" prefix=\", \"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"issued\">\n    <choose>\n      <if variable=\"issued\" match=\"any\">\n        <group>\n          <date variable=\"issued\">\n            <date-part name=\"day\" suffix=\" \"/>\n            <date-part name=\"month\" form=\"short\" suffix=\" \"/>\n            <date-part name=\"year\"/>\n          </date>\n        </group>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"issued-year\">\n    <choose>\n      <if variable=\"issued\" match=\"any\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if type=\"book chapter entry-dictionary entry-encyclopedia\" match=\"any\">\n        <choose>\n          <if is-numeric=\"edition\">\n            <group delimiter=\" \">\n              <number variable=\"edition\" form=\"numeric\" suffix=\".\"/>\n              <text term=\"edition\" form=\"short\" suffix=\". \"/>\n            </group>\n          </if>\n          <else>\n            <text variable=\"edition\" suffix=\" \"/>\n            <text term=\"edition\" form=\"short\" suffix=\". \"/>\n          </else>\n        </choose>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"locators\">\n    <choose>\n      <if type=\"bill\">\n        <group delimiter=\", \">\n          <date variable=\"issued\">\n            <date-part name=\"day\"/>\n            <date-part prefix=\" \" name=\"month\" form=\"short\"/>\n            <date-part prefix=\" \" name=\"year\"/>\n          </date>\n          <text variable=\"section\" prefix=\"Sec. \"/>\n          <text variable=\"page\" prefix=\"p. \"/>\n        </group>\n      </if>\n      <else-if match=\"any\" type=\"article-journal article-magazine article-newspaper\">\n        <group delimiter=\", \">\n          <group delimiter=\", \">\n            <text variable=\"volume\" prefix=\"v. \"/>\n            <text variable=\"issue\" prefix=\"n. \"/>\n          </group>\n          <text variable=\"page\" prefix=\"p. \"/>\n        </group>\n      </else-if>\n      <else-if match=\"any\" type=\"book chapter entry-dictionary entry-encyclopedia\">\n        <group delimiter=\", \">\n          <group>\n            <text variable=\"volume\" prefix=\"v. \" suffix=\". \"/>\n            <text variable=\"page\" prefix=\"p. \"/>\n          </group>\n        </group>\n      </else-if>\n    </choose>\n  </macro>\n  <macro name=\"citation-locator\">\n    <group>\n      <label variable=\"locator\" form=\"short\" plural=\"never\"/>\n      <text variable=\"locator\" prefix=\" \"/>\n    </group>\n  </macro>\n  <macro name=\"genre\">\n    <text variable=\"genre\"/>\n  </macro>\n  <macro name=\"abstract\">\n    <text variable=\"abstract\"/>\n  </macro>\n  <macro name=\"place\">\n    <text variable=\"publisher-place\"/>\n  </macro>\n  <macro name=\"archive\">\n    <text variable=\"archive\" prefix=\". \"/>\n  </macro>\n  <macro name=\"sort-key1\">\n    <choose>\n      <if type=\"entry-dictionary entry-encyclopedia\" match=\"any\">\n        <text variable=\"title\"/>\n      </if>\n      <else>\n        <text macro=\"author\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"sort-key2\">\n    <choose>\n      <if type=\"entry-dictionary entry-encyclopedia\" match=\"any\">\n        <text macro=\"author\"/>\n      </if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" disambiguate-add-names=\"true\" disambiguate-add-givenname=\"true\" collapse=\"year-suffix\" givenname-disambiguation-rule=\"primary-name-with-initials\" year-suffix-delimiter=\", \">\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"issued-year\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group>\n        <text suffix=\", \" macro=\"author-short\"/>\n        <text macro=\"issued-year\"/>\n        <text prefix=\", \" macro=\"citation-locator\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography hanging-indent=\"false\" et-al-min=\"7\" et-al-use-first=\"6\" entry-spacing=\"1\">\n    <sort>\n      <key macro=\"sort-key1\"/>\n      <key macro=\"sort-key2\"/>\n      <key macro=\"issued\"/>\n    </sort>\n    <layout>\n      <choose>\n        <if type=\"bill\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text macro=\"locators\" suffix=\". \"/>\n            <text macro=\"access\" suffix=\". \"/>\n          </group>\n        </if>\n        <else-if type=\"map\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\", \"/>\n            <text macro=\"issued-year\" suffix=\". \"/>\n            <text macro=\"access\" suffix=\". \"/>\n          </group>\n        </else-if>\n        <else-if type=\"book\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text macro=\"translator\" suffix=\". \"/>\n            <text macro=\"edition\" suffix=\" \"/>\n            <text macro=\"publisher\" suffix=\", \"/>\n            <text macro=\"issued-year\" suffix=\". \"/>\n            <text macro=\"locators\"/>\n            <text macro=\"access\" suffix=\". \"/>\n            <group prefix=\"(\" suffix=\").\">\n              <text variable=\"collection-title\"/>\n              <text variable=\"collection-number\" prefix=\", \"/>\n            </group>\n          </group>\n        </else-if>\n        <else-if type=\"chapter entry-dictionary entry-encyclopedia\" match=\"any\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text macro=\"container-contributors\"/>\n            <text macro=\"secondary-contributors\" suffix=\". \"/>\n            <text macro=\"container-title\" suffix=\". \"/>\n            <text variable=\"collection-title\" suffix=\". \"/>\n            <text macro=\"translator\" suffix=\". \"/>\n            <text macro=\"edition\" suffix=\" \"/>\n            <group suffix=\". \">\n              <text macro=\"publisher\" suffix=\", \"/>\n              <text macro=\"issued-year\" suffix=\". \"/>\n              <text macro=\"locators\"/>\n            </group>\n            <text macro=\"access\" suffix=\". \"/>\n          </group>\n        </else-if>\n        <else-if type=\"article-newspaper\" match=\"any\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text macro=\"translator\" suffix=\". \"/>\n            <text macro=\"container-title\" suffix=\", \"/>\n            <text variable=\"collection-title\" suffix=\". \"/>\n            <text macro=\"place\" suffix=\", \"/>\n            <text macro=\"edition\" suffix=\", \"/>\n            <text macro=\"issued\" suffix=\". \"/>\n            <text variable=\"section\"/>\n            <group suffix=\".\">\n              <text macro=\"locators\" prefix=\", \"/>\n              <text macro=\"access\"/>\n            </group>\n          </group>\n        </else-if>\n        <else-if type=\"article-magazine article-journal\" match=\"any\">\n          <group suffix=\".\">\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text macro=\"container-title\" suffix=\", \"/>\n            <text variable=\"collection-title\" suffix=\". \"/>\n            <text macro=\"edition\" suffix=\", \"/>\n            <text macro=\"locators\" suffix=\", \"/>\n            <text macro=\"issued-year\"/>\n            <text macro=\"translator\" suffix=\". \"/>\n            <text macro=\"access\"/>\n          </group>\n        </else-if>\n        <else-if type=\"thesis\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text variable=\"number-of-pages\" suffix=\" p. \"/>\n            <text variable=\"genre\" suffix=\". \"/>\n            <text variable=\"publisher\" suffix=\", \"/>\n            <text variable=\"publisher-place\" suffix=\", \"/>\n            <text macro=\"issued-year\" suffix=\" \"/>\n            <text macro=\"access\" suffix=\". \"/>\n          </group>\n        </else-if>\n        <else-if type=\"manuscript\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text macro=\"edition\" suffix=\" \"/>\n            <text macro=\"abstract\" suffix=\". \"/>\n            <text macro=\"place\" suffix=\", \"/>\n            <text macro=\"issued\" suffix=\". \"/>\n            <text variable=\"genre\" suffix=\". \"/>\n            <text macro=\"access\" suffix=\". \"/>\n            <text macro=\"archive\" suffix=\". \"/>\n          </group>\n        </else-if>\n        <else-if type=\"webpage\">\n          <group>\n            <text macro=\"author\" suffix=\". \"/>\n            <text macro=\"title\" suffix=\". \"/>\n            <text macro=\"genre\" suffix=\" \"/>\n            <text macro=\"access\" suffix=\". \"/>\n          </group>\n        </else-if>\n        <else-if type=\"paper-conference\">\n          <text macro=\"author\" suffix=\". \"/>\n          <text macro=\"title\" suffix=\". \"/>\n          <text macro=\"event\" suffix=\", \"/>\n          <text variable=\"collection-title\" suffix=\", \"/>\n          <text macro=\"issued\" suffix=\", \"/>\n          <text macro=\"locators\"/>\n          <text macro=\"container-title\" suffix=\". \"/>\n          <group delimiter=\". \" suffix=\". \">\n            <group delimiter=\", \">\n              <text macro=\"publisher\"/>\n              <text macro=\"issued-year\"/>\n            </group>\n            <text variable=\"page\" prefix=\"p. \"/>\n            <text macro=\"access\"/>\n          </group>\n        </else-if>\n        <else-if type=\"speech\">\n          <text macro=\"author\" suffix=\". \"/>\n          <text macro=\"title\" suffix=\". \"/>\n          <text macro=\"event\" suffix=\". \"/>\n          <text macro=\"issued\" suffix=\", \"/>\n          <text variable=\"genre\" suffix=\". \"/>\n          <text macro=\"access\" suffix=\". \"/>\n        </else-if>\n        <else-if type=\"report\">\n          <text macro=\"author\" suffix=\". \"/>\n          <text macro=\"title\" suffix=\". \"/>\n          <text macro=\"container-contributors\"/>\n          <text macro=\"secondary-contributors\"/>\n          <text macro=\"container-title\"/>\n          <text variable=\"collection-title\" prefix=\" \" suffix=\".\"/>\n          <text variable=\"genre\" prefix=\" \"/>\n          <text variable=\"number\" prefix=\", n. \" suffix=\".\"/>\n          <text macro=\"locators\"/>\n          <group delimiter=\". \" prefix=\". \">\n            <text macro=\"publisher\"/>\n          </group>\n          <text macro=\"issued\" prefix=\", \" suffix=\".\"/>\n          <text macro=\"access\" prefix=\" \" suffix=\".\"/>\n        </else-if>\n        <else>\n          <text macro=\"author\" suffix=\". \"/>\n          <text macro=\"title\" suffix=\". \"/>\n          <text macro=\"container-contributors\"/>\n          <text macro=\"secondary-contributors\"/>\n          <text macro=\"container-title\"/>\n          <text variable=\"collection-title\" prefix=\", \" suffix=\".\"/>\n          <text macro=\"locators\"/>\n          <group delimiter=\". \" prefix=\". \" suffix=\". \">\n            <text macro=\"publisher\"/>\n            <text macro=\"access\"/>\n          </group>\n          <text macro=\"issued-year\" suffix=\".\"/>\n        </else>\n      </choose>\n    </layout>\n  </bibliography>\n</style>\n"