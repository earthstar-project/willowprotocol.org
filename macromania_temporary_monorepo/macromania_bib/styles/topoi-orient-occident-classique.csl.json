er-precedes-last=\"never\"/>\n      <et-al font-variant=\"normal\" font-style=\"italic\"/>\n      <substitute>\n        <text macro=\"editor-author\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor\">\n    <names variable=\"editor\" delimiter=\", \" prefix=\" (\" suffix=\")\">\n      <label form=\"short\" text-case=\"lowercase\" suffix=\" \"/>\n      <name font-variant=\"small-caps\" sort-separator=\", \" initialize-with=\".\" delimiter=\", \" and=\"text\" delimiter-precedes-last=\"never\"/>\n      <substitute>\n        <text macro=\"container-author\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"editor-author\">\n    <names variable=\"editor\" delimiter=\", \">\n      <name font-variant=\"small-caps\" sort-separator=\", \" initialize-with=\".\" delimiter=\", \" and=\"text\" delimiter-precedes-last=\"never\"/>\n      <label form=\"short\" text-case=\"lowercase\" prefix=\" (\" suffix=\")\"/>\n    </names>\n  </macro>\n  <macro name=\"container-author\">\n    <names variable=\"container-author\" delimiter=\", \">\n      <name font-variant=\"small-caps\" sort-separator=\", \" initialize-with=\".\" delimiter=\", \" and=\"text\" delimiter-precedes-last=\"never\"/>\n    </names>\n  </macro>\n  <macro name=\"pages\">\n    <group delimiter=\"&#160;\">\n      <label variable=\"page\" form=\"short\"/>\n      <text variable=\"page\"/>\n    </group>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" font-variant=\"small-caps\" delimiter=\", \" and=\"text\" delimiter-precedes-last=\"never\"/>\n      <et-al font-variant=\"normal\" font-style=\"italic\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text variable=\"title-short\" font-style=\"italic\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"collection\">\n    <group delimiter=\"&#160;\">\n      <text variable=\"collection-title\"/>\n      <text variable=\"collection-number\"/>\n    </group>\n  </macro>\n  <macro name=\"locator\">\n    <group delimiter=\"&#160;\" prefix=\", \">\n      <label variable=\"locator\" form=\"short\"/>\n      <text variable=\"locator\"/>\n    </group>\n  </macro>\n  <macro name=\"locator-cit\">\n    <choose>\n      <if type=\"article-journal article-magazine article-newspaper entry-dictionary entry-encyclopedia\" match=\"any\">\n        <group delimiter=\"&#160;\" prefix=\", en partic. \">\n          <label variable=\"locator\" form=\"short\"/>\n          <text variable=\"locator\"/>\n        </group>\n      </if>\n      <else>\n        <text macro=\"locator\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"book\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </if>\n      <else-if type=\"webpage\" match=\"any\">\n        <text variable=\"title\"/>\n      </else-if>\n      <else-if variable=\"container-title\" match=\"none\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </else-if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <text variable=\"publisher-place\"/>\n  </macro>\n  <macro name=\"year-date\">\n    <choose>\n      <if variable=\"issued\">\n        <date variable=\"issued\">\n          <date-part name=\"year\"/>\n        </date>\n      </if>\n      <else>\n        <text term=\"no date\" form=\"short\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\" text-case=\"lowercase\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"URL\">\n    <group delimiter=\" \">\n      <text term=\"online\"/>\n      <text variable=\"URL\" prefix=\"&lt;\" suffix=\"&gt;\"/>\n    </group>\n  </macro>\n  <citation et-al-min=\"4\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" collapse=\"year\">\n    <layout suffix=\".\" delimiter=\"&#160;; \">\n      <text macro=\"author\" suffix=\", \"/>\n      <choose>\n        <if type=\"thesis\">\n          <group delimiter=\" \">\n            <group delimiter=\", \">\n              <text macro=\"title\" font-style=\"italic\"/>\n              <text variable=\"genre\"/>\n              <text variable=\"publisher\" prefix=\"soutenue à l'\"/>\n            </group>\n            <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n          </group>\n        </if>\n        <else-if type=\"article-journal article-magazine article-newspaper broadcast personal_communication thesis webpage\" match=\"any\">\n          <group delimiter=\", \">\n            <group delimiter=\" \">\n              <group delimiter=\", \">\n                <text macro=\"title\" quotes=\"true\"/>\n                <text variable=\"container-title\" form=\"short\" font-style=\"italic\"/>\n                <text variable=\"volume\"/>\n                <text variable=\"issue\"/>\n              </group>\n              <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n            </group>\n            <text macro=\"pages\"/>\n          </group>\n        </else-if>\n        <else-if type=\"book graphic\" match=\"any\">\n          <group delimiter=\" \">\n            <group delimiter=\", \">\n              <text macro=\"title\"/>\n              <text macro=\"edition\"/>\n              <text macro=\"collection\"/>\n              <text macro=\"publisher\"/>\n            </group>\n            <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n          </group>\n        </else-if>\n        <else-if type=\"entry-dictionary entry-encyclopedia\" match=\"any\">\n          <group delimiter=\", \">\n            <group delimiter=\" \">\n              <group delimiter=\", \">\n                <text macro=\"title\" quotes=\"true\"/>\n                <text variable=\"container-title\" form=\"short\" font-style=\"italic\"/>\n                <group delimiter=\"&#160;\">\n                  <label variable=\"volume\" form=\"short\"/>\n                  <text variable=\"volume\"/>\n                </group>\n              </group>\n              <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n            </group>\n            <text macro=\"pages\"/>\n          </group>\n        </else-if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <group delimiter=\", \">\n            <group delimiter=\" \">\n              <group delimiter=\", \">\n                <text macro=\"title\" quotes=\"true\"/>\n                <group delimiter=\" \">\n                  <text variable=\"container-title\" font-style=\"italic\"/>\n                  <text macro=\"editor\"/>\n                </group>\n                <text macro=\"collection\"/>\n                <text macro=\"publisher\"/>\n              </group>\n              <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n            </group>\n            <text macro=\"pages\"/>\n          </group>\n        </else-if>\n        <else>\n          <group delimiter=\" \">\n            <group delimiter=\", \">\n              <text macro=\"title\"/>\n              <text macro=\"edition\"/>\n              <text macro=\"collection\"/>\n              <text macro=\"publisher\"/>\n            </group>\n            <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n          </group>\n        </else>\n      </choose>\n      <text macro=\"locator-cit\"/>\n      <choose>\n        <if variable=\"URL\" match=\"any\">\n          <text macro=\"URL\" prefix=\", \"/>\n        </if>\n      </choose>\n    </layout>\n  </citation>\n  <bibliography>\n    <sort>\n      <key macro=\"author-short\"/>\n      <key variable=\"issued\"/>\n      <key variable=\"page-first\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout suffix=\".\">\n      <text macro=\"author\" suffix=\", \"/>\n      <choose>\n        <if type=\"thesis\">\n          <group delimiter=\" \">\n            <group delimiter=\", \">\n              <text macro=\"title\" font-style=\"italic\"/>\n              <text variable=\"genre\"/>\n              <text variable=\"publisher\" prefix=\"soutenue à l'\"/>\n            </group>\n            <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n          </group>\n        </if>\n        <else-if type=\"article-journal article-magazine article-newspaper broadcast personal_communication thesis webpage\" match=\"any\">\n          <group delimiter=\", \">\n            <group delimiter=\" \">\n              <group delimiter=\", \">\n                <text macro=\"title\" quotes=\"true\"/>\n                <text variable=\"container-title\" form=\"short\" font-style=\"italic\"/>\n                <text variable=\"volume\"/>\n                <text variable=\"issue\"/>\n              </group>\n              <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n            </group>\n            <text macro=\"pages\"/>\n          </group>\n        </else-if>\n        <else-if type=\"book graphic\" match=\"any\">\n          <group delimiter=\" \">\n            <group delimiter=\", \">\n              <text macro=\"title\"/>\n              <text macro=\"edition\"/>\n              <text macro=\"collection\"/>\n              <text macro=\"publisher\"/>\n            </group>\n            <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n          </group>\n        </else-if>\n        <else-if type=\"entry-dictionary entry-encyclopedia\" match=\"any\">\n          <group delimiter=\", \">\n            <group delimiter=\" \">\n              <group delimiter=\", \">\n                <text macro=\"title\" quotes=\"true\"/>\n                <text variable=\"container-title\" form=\"short\" font-style=\"italic\"/>\n                <group delimiter=\"&#160;\">\n                  <label variable=\"volume\" form=\"short\"/>\n                  <text variable=\"volume\"/>\n                </group>\n              </group>\n              <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n            </group>\n            <text macro=\"pages\"/>\n          </group>\n        </else-if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <group delimiter=\", \">\n            <group delimiter=\" \">\n              <group delimiter=\", \">\n                <text macro=\"title\" quotes=\"true\"/>\n                <group delimiter=\" \">\n                  <text variable=\"container-title\" font-style=\"italic\"/>\n                  <text macro=\"editor\"/>\n                </group>\n                <text macro=\"collection\"/>\n                <text macro=\"publisher\"/>\n              </group>\n              <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n            </group>\n            <text macro=\"pages\"/>\n          </group>\n        </else-if>\n        <else>\n          <group delimiter=\" \">\n            <group delimiter=\", \">\n              <text macro=\"title\"/>\n              <text macro=\"edition\"/>\n              <text macro=\"collection\"/>\n              <text macro=\"publisher\"/>\n            </group>\n            <text macro=\"year-date\" prefix=\"(\" suffix=\")\"/>\n          </group>\n        </else>\n      </choose>\n      <text macro=\"locator-cit\"/>\n      <choose>\n        <if variable=\"URL\" match=\"any\">\n          <text macro=\"URL\" prefix=\", \"/>\n        </if>\n      </choose>\n    </layout>\n  </bibliography>\n</style>\n"