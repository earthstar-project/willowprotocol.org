"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" default-locale=\"fr-FR\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\">\n  <info>\n    <title>Communication et Langages</title>\n    <id>http://www.zotero.org/styles/communication-et-langages</id>\n    <link href=\"http://www.zotero.org/styles/communication-et-langages\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/traces\" rel=\"template\"/>\n    <link href=\"http://www.zotero.org/styles/american-political-science-association\" rel=\"template\"/>\n    <link href=\"http://www.necplus.eu/action/displayJournal?jid=CML\" rel=\"documentation\"/>\n    <author>\n      <name>Pierre-Carl Langlais</name>\n      <email>pierrecarl.langlais@gmail.com</email>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"humanities\"/>\n    <issn>0336-1500</issn>\n    <eissn>1778-7459</eissn>\n    <summary>Communication et Langages style.</summary>\n    <updated>2015-11-16T22:02:33+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <macro name=\"editor\">\n    <names variable=\"editor\" delimiter=\" \">\n      <name form=\"long\" and=\"text\" delimiter-precedes-last=\"never\" sort-separator=\" \" font-style=\"normal\"/>\n      <label form=\"short\" prefix=\" (\" suffix=\")\"/>\n    </names>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name and=\"text\" sort-separator=\" \" delimiter=\", \" delimiter-precedes-last=\"never\"/>\n      <label form=\"short\" prefix=\" \" text-case=\"lowercase\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"text\" delimiter=\", \" delimiter-precedes-last=\"never\" initialize-with=\". \"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"access\">\n    <choose>\n      <if variable=\"URL\">\n        <group delimiter=\" \">\n          <text value=\"Adresse :\"/>\n          <text variable=\"URL\"/>\n          <group prefix=\"[\" suffix=\"]\">\n            <text term=\"accessed\" text-case=\"capitalize-first\" suffix=\" : \"/>\n            <date variable=\"accessed\">\n              <date-part name=\"day\" suffix=\" \"/>\n              <date-part name=\"month\" suffix=\" \"/>\n              <date-part name=\"year\"/>\n            </date>\n          </group>\n        </group>\n      </if>\n    </choose>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"bill book graphic legal_case legislation motion_picture report song thesis\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\"/>\n      </if>\n      <else>\n        <text variable=\"title\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <group delimiter=\", \">\n      <text variable=\"publisher-place\"/>\n      <text variable=\"publisher\"/>\n    </group>\n  </macro>\n  <macro name=\"year-date\">\n    <group prefix=\" \">\n      <choose>\n        <if variable=\"issued\">\n          <date variable=\"issued\">\n            <date-part name=\"year\"/>\n          </date>\n        </if>\n        <else>\n          <text term=\"no date\" form=\"short\"/>\n        </else>\n      </choose>\n    </group>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" form=\"short\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\" suffix=\".\"/>\n      </else>\n    </choose>\n  </macro>\n  <citation et-al-min=\"4\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" disambiguate-add-names=\"true\" disambiguate-add-givenname=\"true\" collapse=\"year\">\n    <layout prefix=\"(\" suffix=\")\" delimiter=\" ; \">\n      <group delimiter=\", \">\n        <group delimiter=\",\">\n          <text macro=\"author-short\"/>\n          <text macro=\"year-date\"/>\n        </group>\n        <text variable=\"locator\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography hanging-indent=\"true\" et-al-min=\"4\" et-al-use-first=\"1\">\n    <sort>\n      <key macro=\"author\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout>\n      <text macro=\"author\" suffix=\",\"/>\n      <choose>\n        <if type=\"bill book graphic legal_case legislation motion_picture report song thesis\" match=\"any\">\n          <group prefix=\" \" delimiter=\" \">\n            <text macro=\"title\" suffix=\",\"/>\n            <text variable=\"genre\" suffix=\",\"/>\n            <text macro=\"edition\"/>\n            <text macro=\"editor\"/>\n          </group>\n          <text prefix=\" \" macro=\"publisher\"/>\n          <date variable=\"issued\" prefix=\", \" suffix=\".\">\n            <date-part name=\"year\"/>\n          </date>\n        </if>\n        <else-if type=\"chapter paper-conference\" match=\"any\">\n          <group prefix=\" \" suffix=\"\">\n            <text macro=\"title\" quotes=\"true\"/>\n          </group>\n          <text value=\", in\" font-style=\"italic\"/>\n          <group prefix=\" \" delimiter=\" \">\n            <text macro=\"editor\" suffix=\" ,\"/>\n            <text variable=\"container-title\" font-style=\"italic\" suffix=\",\"/>\n            <text variable=\"collection-title\" suffix=\",\"/>\n            <group suffix=\".\">\n              <text macro=\"publisher\"/>\n              <date variable=\"issued\" prefix=\", \" suffix=\",\">\n                <date-part name=\"year\"/>\n              </date>\n              <group prefix=\", \">\n                <label variable=\"page\" form=\"short\" suffix=\" \"/>\n              </group>\n            </group>\n          </group>\n        </else-if>\n        <else>\n          <group prefix=\" \" delimiter=\" \" suffix=\",\">\n            <text macro=\"title\" quotes=\"true\"/>\n            <text macro=\"editor\"/>\n          </group>\n          <group prefix=\" \" suffix=\".\">\n            <text variable=\"container-title\" font-style=\"italic\"/>\n            <group prefix=\", \">\n              <text variable=\"volume\"/>\n              <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n            </group>\n            <date variable=\"issued\" prefix=\", \">\n              <date-part name=\"year\"/>\n            </date>\n            <group prefix=\", \">\n              <label variable=\"page\" form=\"short\" suffix=\" \"/>\n              <text variable=\"page\"/>\n            </group>\n          </group>\n        </else>\n      </choose>\n      <text prefix=\" \" macro=\"access\" suffix=\".\"/>\n    </layout>\n  </bibliography>\n</style>\n"