"<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<style xmlns=\"http://purl.org/net/xbiblio/csl\" class=\"in-text\" version=\"1.0\" demote-non-dropping-particle=\"sort-only\" default-locale=\"en-US\">\n  <info>\n    <title>Environment and Planning</title>\n    <id>http://www.zotero.org/styles/environment-and-planning</id>\n    <link href=\"http://www.zotero.org/styles/environment-and-planning\" rel=\"self\"/>\n    <link href=\"http://www.zotero.org/styles/the-plant-cell\" rel=\"template\"/>\n    <link href=\"http://www.envplan.com/ref_examples.html\" rel=\"documentation\"/>\n    <author>\n      <name>Sebastian Karcher</name>\n    </author>\n    <category citation-format=\"author-date\"/>\n    <category field=\"geography\"/>\n    <summary>Style for the Environment and Planning journals A-D</summary>\n    <updated>2013-02-10T19:03:14+00:00</updated>\n    <rights license=\"http://creativecommons.org/licenses/by-sa/3.0/\">This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 License</rights>\n  </info>\n  <locale xml:lang=\"en\">\n    <style-options punctuation-in-quote=\"false\"/>\n    <terms>\n      <term name=\"editor\" form=\"verb-short\">ed. by</term>\n      <term name=\"editor\" form=\"short\">\n        <single>ed</single>\n        <multiple>eds</multiple>\n      </term>\n    </terms>\n  </locale>\n  <macro name=\"editor\">\n    <names variable=\"editor\" delimiter=\",\">\n      <label form=\"short\" text-case=\"capitalize-first\" suffix=\" \" strip-periods=\"true\"/>\n      <name sort-separator=\", \" and=\"text\" initialize-with=\" \" delimiter=\", \"/>\n    </names>\n  </macro>\n  <macro name=\"author\">\n    <names variable=\"author\">\n      <name name-as-sort-order=\"all\" sort-separator=\" \" initialize-with=\" \" delimiter=\", \"/>\n      <label form=\"short\" prefix=\" \"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"author-short\">\n    <names variable=\"author\">\n      <name form=\"short\" and=\"text\" delimiter=\", \" initialize-with=\".\"/>\n      <substitute>\n        <names variable=\"editor\"/>\n        <names variable=\"translator\"/>\n        <text variable=\"title\"/>\n      </substitute>\n    </names>\n  </macro>\n  <macro name=\"title\">\n    <choose>\n      <if type=\"book thesis\" match=\"any\">\n        <text variable=\"title\" font-style=\"italic\" prefix=\" \"/>\n      </if>\n      <else>\n        <text variable=\"title\" quotes=\"true\" prefix=\", \"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"publisher\">\n    <choose>\n      <if type=\"book chapter paper-conference\" match=\"any\">\n        <group delimiter=\", \" prefix=\" (\" suffix=\")\">\n          <text variable=\"publisher\"/>\n          <text variable=\"publisher-place\"/>\n        </group>\n      </if>\n      <else>\n        <group delimiter=\", \" prefix=\", \">\n          <text variable=\"publisher\"/>\n          <text variable=\"publisher-place\"/>\n        </group>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"year-date\">\n    <date variable=\"issued\">\n      <date-part name=\"year\"/>\n    </date>\n  </macro>\n  <macro name=\"edition\">\n    <choose>\n      <if is-numeric=\"edition\">\n        <group delimiter=\" \">\n          <number variable=\"edition\" form=\"ordinal\"/>\n          <text term=\"edition\" strip-periods=\"true\"/>\n        </group>\n      </if>\n      <else>\n        <text variable=\"edition\"/>\n      </else>\n    </choose>\n  </macro>\n  <macro name=\"locator\">\n    <group delimiter=\" \">\n      <label variable=\"locator\"/>\n      <text variable=\"locator\"/>\n    </group>\n  </macro>\n  <citation et-al-min=\"3\" et-al-use-first=\"1\" disambiguate-add-year-suffix=\"true\" disambiguate-add-names=\"true\" collapse=\"year\">\n    <sort>\n      <key macro=\"author-short\"/>\n      <key macro=\"year-date\" sort=\"ascending\"/>\n    </sort>\n    <layout prefix=\"(\" suffix=\")\" delimiter=\"; \">\n      <group delimiter=\", \">\n        <text macro=\"author-short\"/>\n        <text macro=\"year-date\"/>\n        <text macro=\"locator\"/>\n      </group>\n    </layout>\n  </citation>\n  <bibliography hanging-indent=\"true\" et-al-min=\"21\" et-al-use-first=\"20\">\n    <sort>\n      <key macro=\"author\"/>\n      <key macro=\"year-date\"/>\n      <key variable=\"title\"/>\n    </sort>\n    <layout>\n      <group delimiter=\", \">\n        <group>\n          <group delimiter=\", \">\n            <text macro=\"author\"/>\n            <date variable=\"issued\">\n              <date-part name=\"year\"/>\n            </date>\n          </group>\n          <text macro=\"title\"/>\n          <choose>\n            <if type=\"bill book graphic legal_case legislation motion_picture report song thesis\" match=\"any\">\n              <group delimiter=\" \" prefix=\" \">\n                <text macro=\"edition\"/>\n                <text macro=\"editor\"/>\n              </group>\n              <text macro=\"publisher\"/>\n            </if>\n            <else-if type=\"chapter paper-conference\" match=\"any\">\n              <text term=\"in\" prefix=\", \"/>\n              <group prefix=\" \" delimiter=\" \">\n                <text variable=\"container-title\" font-style=\"italic\"/>\n                <text macro=\"edition\"/>\n                <text macro=\"editor\"/>\n                <text variable=\"collection-title\"/>\n              </group>\n              <group>\n                <text macro=\"publisher\" prefix=\" \"/>\n                <group prefix=\", \">\n                  <label variable=\"page\" suffix=\" \" form=\"short\" strip-periods=\"true\"/>\n                  <text variable=\"page\"/>\n                </group>\n              </group>\n            </else-if>\n            <else>\n              <group delimiter=\" \" prefix=\" \">\n                <text variable=\"container-title\" font-style=\"italic\"/>\n                <group>\n                  <text variable=\"volume\" font-weight=\"bold\"/>\n                  <text variable=\"issue\" prefix=\"(\" suffix=\")\"/>\n                </group>\n                <text variable=\"page\"/>\n              </group>\n            </else>\n          </choose>\n        </group>\n        <text variable=\"URL\"/>\n      </group>\n    </layout>\n  </bibliography>\n</style>\n"